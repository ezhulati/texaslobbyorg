---
const currentYear = new Date().getFullYear();

const footerLinks = {
  'Find Lobbyists': [
    { label: 'By City', href: '/cities' },
    { label: 'By Expertise', href: '/subjects' },
    { label: 'By Industry', href: '/industries' },
    { label: 'All Lobbyists', href: '/lobbyists' },
  ],
  'For Lobbyists': [
    { label: 'Claim Your Profile', href: '/claim-profile' },
    { label: 'Pricing', href: '/pricing' },
    { label: 'How It Works', href: '/how-it-works' },
  ],
  'Resources': [
    { label: 'About Us', href: '/about' },
    { label: 'Blog', href: '/blog' },
    { label: 'FAQs', href: '/faqs' },
    { label: 'Texas Ethics Commission', href: 'https://ethics.state.tx.us/search/lobby/', external: true },
  ],
  'Legal': [
    { label: 'Terms of Service', href: '/terms' },
    { label: 'Privacy Policy', href: '/privacy' },
    { label: 'Contact Us', href: '/contact' },
  ],
};
---

<footer class="bg-[#001333] text-white">
  <div class="container py-12">
    <div class="grid grid-cols-2 gap-8 md:grid-cols-5">
      <!-- Brand Column -->
      <div class="col-span-2 md:col-span-1">
        <a href="/" class="inline-block">
          <img
            src="/images/texas_lobby_white.svg"
            alt="TexasLobby.org"
            class="h-14 w-auto"
          />
        </a>
        <p class="mt-4 text-sm text-white/80">
          Find Your Voice in Texas Politics
        </p>
      </div>

      <!-- Link Columns -->
      {Object.entries(footerLinks).map(([title, links]) => (
        <div>
          <h3 class="text-sm font-semibold text-white mb-4">{title}</h3>
          <ul class="space-y-3">
            {links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-sm text-white/70 hover:text-white transition-colors"
                  target={link.external ? '_blank' : undefined}
                  rel={link.external ? 'noopener noreferrer' : undefined}
                >
                  {link.label}
                  {link.external && (
                    <svg class="inline-block w-3 h-3 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                    </svg>
                  )}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Independent Service Disclaimer -->
    <div class="mt-12 pt-8 border-t border-white/20">
      <div class="bg-white/5 rounded-lg p-6 text-center">
        <p class="text-sm text-white/80 max-w-4xl mx-auto">
          <strong class="text-white">Independent Service Notice:</strong> TexasLobby.org is an independent directory service and is not affiliated with, endorsed by, or connected to the Texas Ethics Commission or any Texas state agency. For official lobbyist filings and compliance information, please visit <a href="https://ethics.state.tx.us/search/lobby/" target="_blank" rel="noopener noreferrer" class="text-texas-blue-300 hover:text-white underline">ethics.state.tx.us</a>.
        </p>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t border-white/20 flex flex-col md:flex-row justify-between items-center">
      <p class="text-sm text-white/70">
        &copy; {currentYear} TexasLobby.org. All rights reserved.
      </p>
      <div class="flex items-center space-x-4 mt-4 md:mt-0">
        <a
          href="#"
          class="text-white/70 hover:text-white transition-colors"
          aria-label="Twitter"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M8.29 20.251c7.547 0 11.675-6.253 11.675-11.675 0-.178 0-.355-.012-.53A8.348 8.348 0 0022 5.92a8.19 8.19 0 01-2.357.646 4.118 4.118 0 001.804-2.27 8.224 8.224 0 01-2.605.996 4.107 4.107 0 00-6.993 3.743 11.65 11.65 0 01-8.457-4.287 4.106 4.106 0 001.27 5.477A4.072 4.072 0 012.8 9.713v.052a4.105 4.105 0 003.292 4.022 4.095 4.095 0 01-1.853.07 4.108 4.108 0 003.834 2.85A8.233 8.233 0 012 18.407a11.616 11.616 0 006.29 1.84"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="text-white/70 hover:text-white transition-colors"
          aria-label="LinkedIn"
        >
          <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
            ></path>
          </svg>
        </a>
      </div>
    </div>
  </div>
</footer>
