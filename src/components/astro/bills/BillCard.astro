---
/**
 * BillCard Component
 *
 * Displays a bill in a card format for search results and lists.
 */

import type { Bill } from '@/lib/types/bills';
import { formatBillNumber, getChamberName } from '@/lib/types/bills';
import BillStatusBadge from './BillStatusBadge.astro';

interface Props {
  bill: Bill;
  showSummary?: boolean;
}

const { bill, showSummary = true } = Astro.props;

const formattedBillNumber = formatBillNumber(bill.bill_number);
const chamberName = getChamberName(bill.chamber);
---

<article class="border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow bg-white">
  <a href={`/bills/${bill.slug}`} class="block group">
    {/* Header */}
    <div class="flex items-start justify-between gap-4 mb-3">
      <div class="flex-1">
        <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
          {formattedBillNumber}
        </h3>
        <p class="text-sm text-gray-600 mt-0.5">
          {chamberName}
          {bill.primary_author && ` • ${bill.primary_author}`}
        </p>
      </div>
      <BillStatusBadge status={bill.current_status} />
    </div>

    {/* Title */}
    <p class="text-gray-900 font-medium leading-relaxed mb-3 line-clamp-2">
      {bill.title}
    </p>

    {/* Summary */}
    {showSummary && bill.summary && (
      <p class="text-gray-600 text-sm leading-relaxed line-clamp-2 mb-3">
        {bill.summary}
      </p>
    )}

    {/* Subject Areas */}
    {bill.subject_areas && bill.subject_areas.length > 0 && (
      <div class="flex flex-wrap gap-2 mt-3">
        {bill.subject_areas.slice(0, 3).map((subject) => (
          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-gray-100 text-gray-700">
            {subject}
          </span>
        ))}
        {bill.subject_areas.length > 3 && (
          <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium text-gray-500">
            +{bill.subject_areas.length - 3} more
          </span>
        )}
      </div>
    )}

    {/* Footer */}
    <div class="flex items-center justify-between mt-4 pt-4 border-t border-gray-100">
      <div class="flex items-center gap-4 text-sm text-gray-500">
        {bill.status_date && (
          <span>
            Updated {new Date(bill.status_date).toLocaleDateString()}
          </span>
        )}
      </div>
      <span class="text-blue-600 text-sm font-medium group-hover:underline">
        View Details →
      </span>
    </div>
  </a>
</article>
