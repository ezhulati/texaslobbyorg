---
/**
 * BillDetailLayout Component
 *
 * Layout for displaying full bill details including metadata,
 * status, full text, and related information.
 */

import type { Bill } from '@/lib/types/bills';
import { formatBillNumber, getChamberName } from '@/lib/types/bills';
import BillStatusBadge from './BillStatusBadge.astro';
import { supabase } from '@/lib/supabase';

interface Props {
  bill: Bill;
  introHook?: string;
}

const { bill, introHook } = Astro.props;

const formattedBillNumber = formatBillNumber(bill.bill_number);
const chamberName = getChamberName(bill.chamber);

// Fetch session info
const { data: session } = await supabase
  .from('legislative_sessions')
  .select('*')
  .eq('id', bill.session_id)
  .single();

// Fetch companion bill if exists
let companionBill = null;
if (bill.companion_bill_id) {
  const { data } = await supabase
    .from('bills')
    .select('bill_number, slug')
    .eq('id', bill.companion_bill_id)
    .single();
  companionBill = data;
}

// Format dates
const formatDate = (dateString: string | null) => {
  if (!dateString) return null;
  const date = new Date(dateString);
  return date.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' });
};

const sessionName = session ? `${session.session_number}${session.session_type === 'regular' ? 'th Regular' : `th Special`} Session` : '';
const sessionDates = session && session.start_date
  ? `${formatDate(session.start_date)}${session.end_date ? ` - ${formatDate(session.end_date)}` : ''}`
  : '';
---

<div class="max-w-4xl mx-auto">
  {/* Header */}
  <div class="mb-8">
    <div class="flex items-start justify-between gap-4 mb-4">
      <div>
        <h1 class="text-4xl font-bold text-gray-900 mb-2">
          {formattedBillNumber}
        </h1>
        <div class="space-y-1">
          <p class="text-lg text-gray-600">
            {chamberName} Bill
            {bill.primary_author && ` • ${bill.primary_author}`}
          </p>
          {sessionName && (
            <p class="text-sm text-gray-500">
              {sessionName}
              {sessionDates && <span class="text-gray-400"> ({sessionDates})</span>}
            </p>
          )}
        </div>
      </div>
      <BillStatusBadge status={bill.current_status} size="lg" />
    </div>

    {/* Title */}
    <h2 class="text-2xl font-semibold text-gray-900 leading-tight mt-6">
      {bill.title}
    </h2>

    {/* Intro Hook - Engaging first sentence */}
    {introHook && (
      <p class="text-lg text-gray-700 leading-relaxed mt-4 italic border-l-4 border-blue-500 pl-4 py-2 bg-blue-50/30">
        {introHook}
      </p>
    )}
  </div>

  <div class="mt-4">
    <slot name="actions" />
  </div>

  {/* Metadata Grid - Only show if there's content */}
  {((bill.co_authors && bill.co_authors.length > 0) || (bill.committee_referrals && bill.committee_referrals.length > 0) || bill.last_action || bill.status_date || companionBill) && (
    <div class="grid md:grid-cols-2 gap-6 mb-8 p-6 bg-gray-50 rounded-lg border border-gray-200">

      {bill.status_date && (
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Status Date</h3>
          <p class="text-gray-900">{formatDate(bill.status_date)}</p>
        </div>
      )}

      {companionBill && (
        <div>
          <h3 class="text-sm font-medium text-gray-500 mb-1">Companion Bill</h3>
          <a href={`/bills/${companionBill.slug}`} class="text-blue-600 hover:text-blue-700 font-medium">
            {companionBill.bill_number}
          </a>
        </div>
      )}

      {bill.co_authors && bill.co_authors.length > 0 && (
        <div class="md:col-span-2">
          <h3 class="text-sm font-medium text-gray-500 mb-1">Co-Authors</h3>
          <p class="text-gray-900">{bill.co_authors.join(', ')}</p>
        </div>
      )}

      {bill.committee_referrals && bill.committee_referrals.length > 0 && (
        <div class="md:col-span-2">
          <h3 class="text-sm font-medium text-gray-500 mb-1">Committee Referrals</h3>
          <p class="text-gray-900">{bill.committee_referrals.join(', ')}</p>
        </div>
      )}

      {bill.last_action && (
        <div class="md:col-span-2">
          <h3 class="text-sm font-medium text-gray-500 mb-1">Latest Action</h3>
          <p class="text-gray-900">
            {bill.last_action}
            {bill.last_action_date && <span class="text-gray-600"> • {formatDate(bill.last_action_date)}</span>}
          </p>
        </div>
      )}
    </div>
  )}

  {/* Subject Areas */}
  {bill.subject_areas && bill.subject_areas.length > 0 && (
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">Subject Areas</h3>
      <div class="flex flex-wrap gap-2">
        {bill.subject_areas.map((subject) => (
          <span class="inline-flex items-center px-3 py-1.5 rounded-md text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
            {subject}
          </span>
        ))}
      </div>
    </div>
  )}

  {/* Summary */}
  {bill.summary && (
    <div class="mt-6 mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">Summary</h3>
      <p class="text-gray-700 leading-relaxed">{bill.summary}</p>
    </div>
  )}

  {/* Full Text */}
  {bill.full_text && (
    <div class="mb-8">
      <h3 class="text-lg font-semibold text-gray-900 mb-3">Bill Text</h3>
      <div class="prose prose-sm max-w-none bg-gray-50 p-6 rounded-lg border border-gray-200">
        <pre class="whitespace-pre-wrap font-mono text-sm text-gray-700 leading-relaxed">{bill.full_text}</pre>
      </div>
    </div>
  )}

  {/* Fiscal Note Link */}
  {bill.fiscal_note_url && (
    <div class="mb-8">
      <a
        href={bill.fiscal_note_url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-700 font-medium"
      >
        View Fiscal Note
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>
  )}

  {/* Slot for additional content (timeline, lobbyists, etc.) */}
  <slot />

  {/* View count - small and discreet */}
  {bill.view_count > 0 && (
    <div class="mt-8 pt-4 border-t border-gray-100">
      <p class="text-xs text-gray-400 text-center">
        Viewed {bill.view_count.toLocaleString()} {bill.view_count === 1 ? 'time' : 'times'}
      </p>
    </div>
  )}
</div>
