---
/**
 * BillStatusBadge Component
 *
 * Displays a colored badge indicating the current status of a bill.
 */

import type { BillStatus } from '@/lib/types/bills';
import { BILL_STATUS_CONFIG } from '@/lib/types/bills';

interface Props {
  status: BillStatus;
  size?: 'sm' | 'md' | 'lg';
}

const { status, size = 'md' } = Astro.props;

const config = BILL_STATUS_CONFIG[status];

const colorClasses = {
  gray: 'bg-gray-100 text-gray-800 border-gray-300',
  blue: 'bg-blue-100 text-blue-800 border-blue-300',
  yellow: 'bg-yellow-100 text-yellow-800 border-yellow-300',
  green: 'bg-green-100 text-green-800 border-green-300',
  red: 'bg-red-100 text-red-800 border-red-300',
};

const sizeClasses = {
  sm: 'text-xs px-2 py-0.5',
  md: 'text-sm px-2.5 py-0.5',
  lg: 'text-base px-3 py-1',
};
---

<span
  class={`inline-flex items-center rounded-full border font-medium ${colorClasses[config.color]} ${sizeClasses[size]}`}
>
  {config.label}
</span>
