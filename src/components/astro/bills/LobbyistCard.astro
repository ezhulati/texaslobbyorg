---
/**
 * LobbyistCard Component
 *
 * Displays lobbyist information on bill pages, showing their position
 * on the bill and connecting searchers with relevant lobbyists.
 */

interface Props {
  lobbyist: any; // From getBillTags() with lobbyist joined
  tag: any; // The bill_tag record
}

const { lobbyist, tag } = Astro.props;

const tagTypeConfig = {
  supporting: {
    label: 'Supporting',
    color: 'green',
    bgClass: 'bg-green-50',
    textClass: 'text-green-700',
    borderClass: 'border-green-200',
    icon: 'üëç',
  },
  monitoring: {
    label: 'Monitoring',
    color: 'blue',
    bgClass: 'bg-blue-50',
    textClass: 'text-blue-700',
    borderClass: 'border-blue-200',
    icon: 'üëÅÔ∏è',
  },
  opposing: {
    label: 'Opposing',
    color: 'red',
    bgClass: 'bg-red-50',
    textClass: 'text-red-700',
    borderClass: 'border-red-200',
    icon: 'üëé',
  },
};

const config = tagTypeConfig[tag.tag_type as keyof typeof tagTypeConfig] || tagTypeConfig.monitoring;
---

<div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
  <div class="flex items-start gap-4">
    {/* Avatar */}
    <div class="flex-shrink-0">
      <div class="w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold text-xl">
        {lobbyist.first_name?.[0]}{lobbyist.last_name?.[0]}
      </div>
    </div>

    {/* Content */}
    <div class="flex-1 min-w-0">
      {/* Name and Position Badge */}
      <div class="flex items-start justify-between gap-4 mb-2">
        <div>
          <h3 class="text-lg font-semibold text-gray-900">
            {lobbyist.first_name} {lobbyist.last_name}
          </h3>
        </div>
        <span class={`inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium ${config.bgClass} ${config.textClass} border ${config.borderClass}`}>
          <span>{config.icon}</span>
          {config.label}
        </span>
      </div>

      {/* Notes */}
      {tag.context_notes && (
        <div class="mb-4">
          <p class="text-gray-700 leading-relaxed">{tag.context_notes}</p>
        </div>
      )}

      {/* Expertise & Contact */}
      <div class="flex flex-wrap items-center gap-4 text-sm">
        {/* Subject Areas */}
        {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
          <div class="flex flex-wrap gap-1.5">
            {lobbyist.subject_areas.slice(0, 3).map((subject: string) => (
              <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-100 text-gray-700 text-xs">
                {subject}
              </span>
            ))}
            {lobbyist.subject_areas.length > 3 && (
              <span class="text-xs text-gray-500">+{lobbyist.subject_areas.length - 3} more</span>
            )}
          </div>
        )}

        {/* View Profile Link */}
        {lobbyist.slug && (
          <a
            href={`/lobbyists/${lobbyist.slug}`}
            class="inline-flex items-center gap-1 text-blue-600 hover:text-blue-700 font-medium"
          >
            View Profile
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        )}
      </div>

      {/* Contact Actions */}
      <div class="mt-4 flex flex-wrap gap-2">
        {lobbyist.email && (
          <a
            href={`mailto:${lobbyist.email}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Email
          </a>
        )}
        {lobbyist.phone && (
          <a
            href={`tel:${lobbyist.phone}`}
            class="inline-flex items-center gap-1.5 px-3 py-1.5 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            Call
          </a>
        )}
      </div>
    </div>
  </div>
</div>
