---
import Layout from '@/components/astro/Layout.astro';
import { getCurrentUser, getUserRole } from '@/lib/auth';
import { supabase } from '@/lib/supabase';

// Require admin authentication
const user = await getCurrentUser();
if (!user) {
  return Astro.redirect('/login');
}

const userRole = await getUserRole(user.id);
if (userRole !== 'admin') {
  return Astro.redirect('/dashboard');
}

// Get statistics
const { count: pendingCount } = await supabase
  .from('lobbyists')
  .select('*', { count: 'exact', head: true })
  .eq('is_pending', true);

const { count: totalLobbyists } = await supabase
  .from('lobbyists')
  .select('*', { count: 'exact', head: true });

const { count: activeLobbyists } = await supabase
  .from('lobbyists')
  .select('*', { count: 'exact', head: true })
  .eq('is_active', true);

const { count: totalUsers } = await supabase
  .from('users')
  .select('*', { count: 'exact', head: true });

const pageTitle = 'Admin Dashboard | TexasLobby.org';
const pageDescription = 'Manage lobbyists, users, and pending approvals.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-12">
    <div class="container max-w-6xl">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-2">Admin Dashboard</h1>
        <p class="text-muted-foreground">
          Manage TexasLobby.org platform
        </p>
      </div>

      <!-- Stats Grid -->
      <div class="grid md:grid-cols-4 gap-6 mb-8">
        <div class="rounded-lg border border-border bg-white p-6">
          <div class="flex items-center justify-between mb-2">
            <div class="text-sm font-medium text-muted-foreground">Pending Approvals</div>
            {pendingCount && pendingCount > 0 && (
              <span class="rounded-full bg-amber-100 px-2 py-1 text-xs font-semibold text-amber-800">
                {pendingCount}
              </span>
            )}
          </div>
          <div class="text-3xl font-bold">{pendingCount || 0}</div>
        </div>

        <div class="rounded-lg border border-border bg-white p-6">
          <div class="text-sm font-medium text-muted-foreground mb-2">Total Lobbyists</div>
          <div class="text-3xl font-bold">{totalLobbyists || 0}</div>
        </div>

        <div class="rounded-lg border border-border bg-white p-6">
          <div class="text-sm font-medium text-muted-foreground mb-2">Active Profiles</div>
          <div class="text-3xl font-bold text-green-600">{activeLobbyists || 0}</div>
        </div>

        <div class="rounded-lg border border-border bg-white p-6">
          <div class="text-sm font-medium text-muted-foreground mb-2">Total Users</div>
          <div class="text-3xl font-bold">{totalUsers || 0}</div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        <a
          href="/admin/pending"
          class="group rounded-lg border-2 border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="flex items-start justify-between mb-4">
            <div class="rounded-full bg-amber-100 p-3 group-hover:bg-amber-200 transition-colors">
              <svg class="h-6 w-6 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
            </div>
            {pendingCount && pendingCount > 0 && (
              <span class="rounded-full bg-amber-500 px-3 py-1 text-sm font-semibold text-white">
                {pendingCount}
              </span>
            )}
          </div>
          <h3 class="text-xl font-bold mb-2">Pending Approvals</h3>
          <p class="text-sm text-muted-foreground">
            Review and approve new lobbyist profiles
          </p>
        </a>

        <a
          href="/admin/lobbyists"
          class="group rounded-lg border-2 border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="rounded-full bg-texas-blue-100 p-3 mb-4 group-hover:bg-texas-blue-200 transition-colors">
            <svg class="h-6 w-6 text-texas-blue-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Manage Lobbyists</h3>
          <p class="text-sm text-muted-foreground">
            View, edit, and manage all lobbyist profiles
          </p>
        </a>

        <a
          href="/admin/users"
          class="group rounded-lg border-2 border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="rounded-full bg-purple-100 p-3 mb-4 group-hover:bg-purple-200 transition-colors">
            <svg class="h-6 w-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">Manage Users</h3>
          <p class="text-sm text-muted-foreground">
            View and manage user accounts and roles
          </p>
        </a>

        <a
          href="/lobbyists"
          class="group rounded-lg border-2 border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="rounded-full bg-green-100 p-3 mb-4 group-hover:bg-green-200 transition-colors">
            <svg class="h-6 w-6 text-green-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM4.332 8.027a6.012 6.012 0 011.912-2.706C6.512 5.73 6.974 6 7.5 6A1.5 1.5 0 019 7.5V8a2 2 0 004 0 2 2 0 011.523-1.943A5.977 5.977 0 0116 10c0 .34-.028.675-.083 1H15a2 2 0 00-2 2v2.197A5.973 5.973 0 0110 16v-2a2 2 0 00-2-2 2 2 0 01-2-2 2 2 0 00-1.668-1.973z" clip-rule="evenodd" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">View Public Site</h3>
          <p class="text-sm text-muted-foreground">
            See the site as users see it
          </p>
        </a>

        <a
          href="/dashboard"
          class="group rounded-lg border-2 border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="rounded-full bg-gray-100 p-3 mb-4 group-hover:bg-gray-200 transition-colors">
            <svg class="h-6 w-6 text-gray-600" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10.707 2.293a1 1 0 00-1.414 0l-7 7a1 1 0 001.414 1.414L4 10.414V17a1 1 0 001 1h2a1 1 0 001-1v-2a1 1 0 011-1h2a1 1 0 011 1v2a1 1 0 001 1h2a1 1 0 001-1v-6.586l.293.293a1 1 0 001.414-1.414l-7-7z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">My Dashboard</h3>
          <p class="text-sm text-muted-foreground">
            Return to your personal dashboard
          </p>
        </a>
      </div>

      <!-- Recent Activity (Placeholder) -->
      <div class="mt-8 rounded-lg border border-border bg-white p-6">
        <h2 class="text-xl font-bold mb-4">Recent Activity</h2>
        <p class="text-sm text-muted-foreground">
          Activity tracking coming soon...
        </p>
      </div>
    </div>
  </section>
</Layout>
