---
import Layout from '@/components/astro/Layout.astro';
import { createServerClient } from '@/lib/supabase';

const serverClient = createServerClient();

// Require admin
const user = Astro.locals.user;
if (!user) return Astro.redirect('/login?redirect=' + Astro.url.pathname);
if (user.role !== 'admin') return Astro.redirect('/dashboard');

// Get URL parameters for filtering and pagination
const url = new URL(Astro.request.url);
const page = parseInt(url.searchParams.get('page') || '1');
const searchTerm = url.searchParams.get('search') || '';
const statusFilter = url.searchParams.get('status') || '';
const tierFilter = url.searchParams.get('tier') || '';
const approvalFilter = url.searchParams.get('approval') || '';
const perPage = 50;

// Build filtered query
let query = serverClient
  .from('lobbyists')
  .select(`
    *,
    user:user_id (
      email,
      full_name
    )
  `, { count: 'exact' });

// Apply search filter
if (searchTerm) {
  query = query.or(`first_name.ilike.%${searchTerm}%,last_name.ilike.%${searchTerm}%,email.ilike.%${searchTerm}%`);
}

// Apply status filter
if (statusFilter === 'pending') {
  query = query.eq('is_pending', true);
} else if (statusFilter === 'active') {
  query = query.eq('is_active', true).eq('is_pending', false);
} else if (statusFilter === 'inactive') {
  query = query.eq('is_active', false).eq('is_pending', false);
}

// Apply tier filter
if (tierFilter) {
  query = query.eq('subscription_tier', tierFilter);
}

// Apply approval filter
if (approvalFilter) {
  query = query.eq('approval_status', approvalFilter);
}

// Apply pagination
query = query
  .order('created_at', { ascending: false })
  .range((page - 1) * perPage, page * perPage - 1);

const { data: lobbyists, count: filteredCount, error } = await query;

if (error) {
  console.error('Error fetching lobbyists:', error);
}

// Calculate pagination
const totalPages = Math.ceil((filteredCount || 0) / perPage);
const hasFilters = searchTerm || statusFilter || tierFilter || approvalFilter;

// Get statistics
const { count: totalCount } = await serverClient
  .from('lobbyists')
  .select('*', { count: 'exact', head: true });

const { count: activeCount } = await serverClient
  .from('lobbyists')
  .select('*', { count: 'exact', head: true })
  .eq('is_active', true);

const { count: pendingCount } = await serverClient
  .from('lobbyists')
  .select('*', { count: 'exact', head: true })
  .eq('is_pending', true);

const { count: premiumCount } = await serverClient
  .from('lobbyists')
  .select('*', { count: 'exact', head: true })
  .in('subscription_tier', ['premium', 'featured']);

const pageTitle = 'Manage Lobbyists | Admin';
---

<Layout title={pageTitle} description="Manage all lobbyist profiles">
  <section class="py-12">
    <div class="container max-w-7xl">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl font-bold mb-2">Manage Lobbyists</h1>
          <p class="text-muted-foreground">Comprehensive lobbyist profile management</p>
        </div>
        <a href="/admin" class="text-texas-blue-500 hover:underline">← Back to Admin</a>
      </div>

      <!-- Statistics Cards -->
      <div class="grid grid-cols-4 gap-4 mb-6">
        <div class="bg-white rounded-lg border p-4">
          <p class="text-sm text-muted-foreground mb-1">Total Lobbyists</p>
          <p class="text-2xl font-bold">{totalCount || 0}</p>
        </div>
        <div class="bg-white rounded-lg border p-4">
          <p class="text-sm text-muted-foreground mb-1">Active</p>
          <p class="text-2xl font-bold text-green-600">{activeCount || 0}</p>
        </div>
        <div class="bg-white rounded-lg border p-4">
          <p class="text-sm text-muted-foreground mb-1">Pending Approval</p>
          <p class="text-2xl font-bold text-amber-600">{pendingCount || 0}</p>
        </div>
        <div class="bg-white rounded-lg border p-4">
          <p class="text-sm text-muted-foreground mb-1">Paid Subscriptions</p>
          <p class="text-2xl font-bold text-purple-600">{premiumCount || 0}</p>
        </div>
      </div>

      <!-- Search and Filters -->
      <form method="GET" action="/admin/lobbyists" class="mb-6 space-y-4">
        <div class="flex gap-4">
          <div class="flex-1">
            <input
              type="text"
              name="search"
              value={searchTerm}
              placeholder="Search by name or email..."
              class="w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
            />
          </div>
          <select
            name="status"
            value={statusFilter}
            class="px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
          >
            <option value="">All Statuses</option>
            <option value="pending">Pending</option>
            <option value="active">Active</option>
            <option value="inactive">Inactive</option>
          </select>
          <select
            name="tier"
            value={tierFilter}
            class="px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
          >
            <option value="">All Tiers</option>
            <option value="free">Free</option>
            <option value="premium">Premium</option>
            <option value="featured">Featured</option>
          </select>
          <select
            name="approval"
            value={approvalFilter}
            class="px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
          >
            <option value="">All Approvals</option>
            <option value="approved">Approved</option>
            <option value="pending_approval">Pending Approval</option>
            <option value="rejected">Rejected</option>
          </select>
          <button
            type="submit"
            class="px-6 py-2 bg-texas-blue-600 text-white rounded-md hover:bg-texas-blue-700 font-medium"
          >
            Search
          </button>
        </div>
        <div class="flex items-center justify-between text-sm text-muted-foreground">
          <span>
            Showing {(page - 1) * perPage + 1}-{Math.min(page * perPage, filteredCount || 0)} of {filteredCount || 0} lobbyists
            {hasFilters && <span class="text-texas-blue-600"> (filtered)</span>}
          </span>
          <div class="flex items-center gap-4">
            {hasFilters && (
              <a
                href="/admin/lobbyists"
                class="text-texas-blue-600 hover:text-texas-blue-700 font-medium"
              >
                Clear Filters
              </a>
            )}
            <button
              type="button"
              id="export-all"
              class="px-3 py-1 bg-gray-600 text-white rounded-md hover:bg-gray-700 text-sm font-medium"
            >
              Export Current Page
            </button>
          </div>
        </div>
      </form>

      <!-- Lobbyists Table -->
      <div class="rounded-lg border border-border bg-white overflow-hidden">
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-border">
          <thead class="bg-muted">
            <tr>
              <th class="px-4 py-3 text-left">
                <input
                  type="checkbox"
                  id="select-all"
                  class="rounded border-gray-300 text-texas-blue-600 focus:ring-texas-blue-500"
                />
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Name</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Status</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Tier</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Approval</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Cities</th>
              <th class="px-4 py-3 text-left text-xs font-medium text-muted-foreground uppercase">Created</th>
              <th class="px-6 py-3 text-right text-xs font-medium text-muted-foreground uppercase sticky right-0 bg-muted shadow-sm">Actions</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-border">
            {lobbyists?.map((lobbyist) => (
              <tr class="hover:bg-muted/50">
                <td class="px-4 py-4 whitespace-nowrap">
                  <input
                    type="checkbox"
                    class="lobbyist-checkbox rounded border-gray-300 text-texas-blue-600 focus:ring-texas-blue-500"
                    data-lobbyist-id={lobbyist.id}
                    data-name={`${lobbyist.first_name} ${lobbyist.last_name}`}
                    data-email={lobbyist.email || lobbyist.user?.email || ''}
                  />
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <a href={`/admin/lobbyists/${lobbyist.id}`} class="block hover:text-texas-blue-600">
                    <div class="font-medium">{lobbyist.first_name} {lobbyist.last_name}</div>
                    <div class="text-sm text-muted-foreground">{lobbyist.email || lobbyist.user?.email}</div>
                  </a>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class={`inline-flex rounded-full px-2 py-1 text-xs font-semibold ${
                    lobbyist.is_pending ? 'bg-amber-100 text-amber-800' :
                    lobbyist.is_active ? 'bg-green-100 text-green-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {lobbyist.is_pending ? 'Pending' : lobbyist.is_active ? 'Active' : 'Inactive'}
                  </span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class={`inline-flex rounded-full px-2 py-1 text-xs font-semibold ${
                    lobbyist.subscription_tier === 'featured' ? 'bg-purple-100 text-purple-800' :
                    lobbyist.subscription_tier === 'premium' ? 'bg-blue-100 text-blue-800' :
                    'bg-gray-100 text-gray-800'
                  }`}>
                    {lobbyist.subscription_tier || 'free'}
                  </span>
                </td>
                <td class="px-4 py-4 whitespace-nowrap">
                  <span class={`inline-flex rounded-full px-2 py-1 text-xs font-semibold ${
                    lobbyist.approval_status === 'approved' ? 'bg-green-100 text-green-800' :
                    lobbyist.approval_status === 'rejected' ? 'bg-red-100 text-red-800' :
                    'bg-yellow-100 text-yellow-800'
                  }`}>
                    {lobbyist.approval_status === 'approved' ? 'Approved' :
                     lobbyist.approval_status === 'rejected' ? 'Rejected' : 'Pending'}
                  </span>
                </td>
                <td class="px-6 py-4 text-sm">
                  <div class="max-w-xs truncate" title={lobbyist.cities?.join(', ')}>
                    {lobbyist.cities?.slice(0, 2).join(', ')}
                    {lobbyist.cities && lobbyist.cities.length > 2 && ` +${lobbyist.cities.length - 2}`}
                  </div>
                </td>
                <td class="px-4 py-4 whitespace-nowrap text-sm text-muted-foreground">
                  {new Date(lobbyist.created_at).toLocaleDateString()}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm sticky right-0 bg-white shadow-sm">
                  <div class="flex items-center justify-end gap-2">
                    <a href={`/lobbyists/${lobbyist.slug}`} target="_blank" class="text-texas-blue-600 hover:text-texas-blue-700 font-medium">
                      View
                    </a>
                    <a href={`/admin/lobbyists/${lobbyist.id}`} class="text-gray-600 hover:text-gray-700 font-medium">
                      Manage
                    </a>
                  </div>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
        </div>
      </div>

      <!-- Pagination -->
      {totalPages > 1 && (
        <div class="mt-6 flex items-center justify-center gap-2">
          {/* Previous Button */}
          {page > 1 ? (
            <a
              href={`/admin/lobbyists?${new URLSearchParams({ page: String(page - 1), ...searchTerm && { search: searchTerm }, ...statusFilter && { status: statusFilter }, ...tierFilter && { tier: tierFilter }, ...approvalFilter && { approval: approvalFilter } }).toString()}`}
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground"
            >
              ← Previous
            </a>
          ) : (
            <span class="inline-flex items-center justify-center rounded-md border border-input bg-muted px-4 py-2 text-sm font-medium text-muted-foreground cursor-not-allowed">
              ← Previous
            </span>
          )}

          {/* Page Numbers */}
          <div class="flex items-center gap-1">
            {Array.from({ length: Math.min(totalPages, 5) }, (_, i) => {
              let pageNum = i + 1;
              if (totalPages > 5 && page > 3) {
                pageNum = page - 2 + i;
                if (pageNum > totalPages) pageNum = totalPages - (4 - i);
              }

              return (
                <a
                  href={`/admin/lobbyists?${new URLSearchParams({ page: String(pageNum), ...searchTerm && { search: searchTerm }, ...statusFilter && { status: statusFilter }, ...tierFilter && { tier: tierFilter }, ...approvalFilter && { approval: approvalFilter } }).toString()}`}
                  class={`inline-flex items-center justify-center rounded-md px-4 py-2 text-sm font-medium ${
                    pageNum === page
                      ? 'bg-texas-blue-500 text-white'
                      : 'border border-input bg-background hover:bg-accent hover:text-accent-foreground'
                  }`}
                >
                  {pageNum}
                </a>
              );
            })}
          </div>

          {/* Next Button */}
          {page < totalPages ? (
            <a
              href={`/admin/lobbyists?${new URLSearchParams({ page: String(page + 1), ...searchTerm && { search: searchTerm }, ...statusFilter && { status: statusFilter }, ...tierFilter && { tier: tierFilter }, ...approvalFilter && { approval: approvalFilter } }).toString()}`}
              class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground"
            >
              Next →
            </a>
          ) : (
            <span class="inline-flex items-center justify-center rounded-md border border-input bg-muted px-4 py-2 text-sm font-medium text-muted-foreground cursor-not-allowed">
              Next →
            </span>
          )}
        </div>
      )}
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Bulk selection functionality
    const selectAllCheckbox = document.getElementById('select-all') as HTMLInputElement;
    const lobbyistCheckboxes = document.querySelectorAll('.lobbyist-checkbox') as NodeListOf<HTMLInputElement>;
    const exportAllBtn = document.getElementById('export-all') as HTMLButtonElement;

    // Select all/none
    selectAllCheckbox?.addEventListener('change', () => {
      const isChecked = selectAllCheckbox.checked;
      lobbyistCheckboxes.forEach(checkbox => {
        checkbox.checked = isChecked;
      });
    });

    // Update select-all state when individual checkboxes change
    lobbyistCheckboxes.forEach(checkbox => {
      checkbox.addEventListener('change', () => {
        const allChecked = Array.from(lobbyistCheckboxes).every(cb => cb.checked);
        const someChecked = Array.from(lobbyistCheckboxes).some(cb => cb.checked);
        if (selectAllCheckbox) {
          selectAllCheckbox.checked = allChecked;
          selectAllCheckbox.indeterminate = someChecked && !allChecked;
        }
      });
    });

    // Export current page to CSV
    exportAllBtn?.addEventListener('click', () => {
      const rows = Array.from(document.querySelectorAll('tbody tr'));
      const data = rows.map(row => {
        const cells = row.querySelectorAll('td');
        return {
          name: cells[1]?.querySelector('.font-medium')?.textContent || '',
          email: cells[1]?.querySelector('.text-sm')?.textContent || '',
          status: cells[2]?.textContent?.trim() || '',
          tier: cells[3]?.textContent?.trim() || '',
          approval: cells[4]?.textContent?.trim() || '',
          cities: cells[5]?.textContent?.trim() || '',
          created: cells[6]?.textContent?.trim() || ''
        };
      });

      const headers = ['Name', 'Email', 'Status', 'Tier', 'Approval', 'Cities', 'Created'];
      const csvContent = [
        headers.join(','),
        ...data.map(row => [
          `"${row.name}"`,
          `"${row.email}"`,
          `"${row.status}"`,
          `"${row.tier}"`,
          `"${row.approval}"`,
          `"${row.cities}"`,
          `"${row.created}"`
        ].join(','))
      ].join('\n');

      const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
      const link = document.createElement('a');
      const url = URL.createObjectURL(blob);
      link.setAttribute('href', url);
      link.setAttribute('download', `lobbyists_page_${new Date().toISOString().split('T')[0]}.csv`);
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    });
  });
</script>
