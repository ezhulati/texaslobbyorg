---
import Layout from '@/components/astro/Layout.astro';
import { createServerClient } from '@/lib/supabase';

// Admin authentication
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login?redirect=' + Astro.url.pathname);
}

const serverClient = createServerClient();
const { data: currentUserData } = await serverClient
  .from('users')
  .select('role')
  .eq('id', user.id)
  .single();

if (currentUserData?.role !== 'admin') {
  return Astro.redirect('/');
}

const lobbyistId = Astro.params.id;

// Fetch lobbyist details
const { data: lobbyist, error: lobbyistError } = await serverClient
  .from('lobbyists')
  .select('*')
  .eq('id', lobbyistId)
  .single();

if (lobbyistError || !lobbyist) {
  return Astro.redirect('/admin/lobbyists');
}

// Fetch associated user account (if any)
const { data: linkedUser } = await serverClient
  .from('users')
  .select('id, email, full_name, role, created_at, is_suspended')
  .eq('email', lobbyist.email)
  .single();

// Get activity statistics
const { count: favoritesCount } = await serverClient
  .from('favorites')
  .select('*', { count: 'exact', head: true })
  .eq('lobbyist_id', lobbyistId);

const { count: viewsCount } = await serverClient
  .from('page_views')
  .select('*', { count: 'exact', head: true })
  .eq('lobbyist_id', lobbyistId);

// Recent favorites (last 5)
const { data: recentFavorites } = await serverClient
  .from('favorites')
  .select('created_at, user_id, users!inner(email, full_name)')
  .eq('lobbyist_id', lobbyistId)
  .order('created_at', { ascending: false })
  .limit(5);

// Recent page views (last 10)
const { data: recentViews } = await serverClient
  .from('page_views')
  .select('viewed_at, user_id, users(email, full_name)')
  .eq('lobbyist_id', lobbyistId)
  .order('viewed_at', { ascending: false })
  .limit(10);

// Profile completeness calculation
let completeness = 0;
let completenessItems = [];

if (lobbyist.first_name && lobbyist.last_name) {
  completeness += 15;
  completenessItems.push({ label: 'Name', complete: true });
} else {
  completenessItems.push({ label: 'Name', complete: false });
}

if (lobbyist.email) {
  completeness += 15;
  completenessItems.push({ label: 'Email', complete: true });
} else {
  completenessItems.push({ label: 'Email', complete: false });
}

if (lobbyist.phone) {
  completeness += 10;
  completenessItems.push({ label: 'Phone', complete: true });
} else {
  completenessItems.push({ label: 'Phone', complete: false });
}

if (lobbyist.cities && lobbyist.cities.length > 0) {
  completeness += 15;
  completenessItems.push({ label: 'Cities', complete: true });
} else {
  completenessItems.push({ label: 'Cities', complete: false });
}

if (lobbyist.subject_areas && lobbyist.subject_areas.length > 0) {
  completeness += 15;
  completenessItems.push({ label: 'Subject Areas', complete: true });
} else {
  completenessItems.push({ label: 'Subject Areas', complete: false });
}

if (lobbyist.bio && lobbyist.bio.length > 50) {
  completeness += 20;
  completenessItems.push({ label: 'Bio (detailed)', complete: true });
} else {
  completenessItems.push({ label: 'Bio', complete: false });
}

if (lobbyist.website) {
  completeness += 10;
  completenessItems.push({ label: 'Website', complete: true });
} else {
  completenessItems.push({ label: 'Website', complete: false });
}

const pageTitle = `Manage ${lobbyist.first_name} ${lobbyist.last_name} - Admin`;
const pageDescription = `Admin management page for lobbyist ${lobbyist.first_name} ${lobbyist.last_name}`;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="min-h-screen bg-gray-50 py-8">
    <div class="container mx-auto px-4 max-w-7xl">
      <!-- Header -->
      <div class="mb-6 flex items-center justify-between">
        <div>
          <a href="/admin/lobbyists" class="text-sm text-blue-600 hover:text-blue-800 mb-2 inline-block">
            ← Back to Lobbyists
          </a>
          <h1 class="text-3xl font-bold text-gray-900">Manage Lobbyist</h1>
        </div>
        <a
          href={`/lobbyists/${lobbyist.slug}`}
          target="_blank"
          class="px-4 py-2 bg-gray-100 text-gray-700 rounded-md hover:bg-gray-200 transition-colors text-sm"
        >
          View Public Profile →
        </a>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Content (2 columns) -->
        <div class="lg:col-span-2 space-y-6">
          <!-- Profile Card -->
          <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0">
                {lobbyist.profile_image_url ? (
                  <img
                    src={lobbyist.profile_image_url}
                    alt={`${lobbyist.first_name} ${lobbyist.last_name}`}
                    class="h-20 w-20 rounded-full object-cover"
                  />
                ) : (
                  <div class="h-20 w-20 rounded-full bg-blue-600 flex items-center justify-center text-white text-2xl font-bold">
                    {lobbyist.first_name?.[0]}{lobbyist.last_name?.[0]}
                  </div>
                )}
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold text-gray-900 mb-1">
                  {lobbyist.first_name} {lobbyist.last_name}
                </h2>
                <p class="text-gray-600 mb-2">{lobbyist.email}</p>
                <div class="flex flex-wrap gap-2">
                  <span class:list={[
                    'px-2 py-1 text-xs font-medium rounded-full',
                    lobbyist.is_active ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'
                  ]}>
                    {lobbyist.is_active ? 'Active' : 'Inactive'}
                  </span>
                  <span class:list={[
                    'px-2 py-1 text-xs font-medium rounded-full',
                    lobbyist.subscription_tier === 'featured' && 'bg-red-100 text-red-800',
                    lobbyist.subscription_tier === 'premium' && 'bg-blue-100 text-blue-800',
                    lobbyist.subscription_tier === 'free' && 'bg-gray-100 text-gray-800'
                  ]}>
                    {lobbyist.subscription_tier === 'free' ? 'Free' : lobbyist.subscription_tier === 'premium' ? 'Premium' : 'Featured'}
                  </span>
                  <span class:list={[
                    'px-2 py-1 text-xs font-medium rounded-full',
                    lobbyist.approval_status === 'approved' && 'bg-green-100 text-green-800',
                    lobbyist.approval_status === 'pending' && 'bg-yellow-100 text-yellow-800',
                    lobbyist.approval_status === 'rejected' && 'bg-red-100 text-red-800'
                  ]}>
                    {lobbyist.approval_status === 'approved' ? 'Approved' : lobbyist.approval_status === 'pending' ? 'Pending Approval' : 'Rejected'}
                  </span>
                </div>
              </div>
            </div>

            <div class="grid grid-cols-2 gap-4 mb-6">
              <div>
                <p class="text-sm text-gray-500">Phone</p>
                <p class="text-sm font-medium text-gray-900">{lobbyist.phone || 'Not provided'}</p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Website</p>
                {lobbyist.website ? (
                  <a href={lobbyist.website} target="_blank" class="text-sm font-medium text-blue-600 hover:text-blue-800">
                    {lobbyist.website}
                  </a>
                ) : (
                  <p class="text-sm font-medium text-gray-900">Not provided</p>
                )}
              </div>
              <div>
                <p class="text-sm text-gray-500">Member Since</p>
                <p class="text-sm font-medium text-gray-900">{new Date(lobbyist.created_at).toLocaleDateString()}</p>
              </div>
              <div>
                <p class="text-sm text-gray-500">Last Updated</p>
                <p class="text-sm font-medium text-gray-900">{new Date(lobbyist.updated_at).toLocaleDateString()}</p>
              </div>
            </div>

            {lobbyist.cities && lobbyist.cities.length > 0 && (
              <div class="mb-4">
                <p class="text-sm text-gray-500 mb-2">Cities Served</p>
                <div class="flex flex-wrap gap-2">
                  {lobbyist.cities.map((city: string) => (
                    <span class="px-2 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded">
                      {city}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
              <div class="mb-4">
                <p class="text-sm text-gray-500 mb-2">Subject Areas</p>
                <div class="flex flex-wrap gap-2">
                  {lobbyist.subject_areas.map((area: string) => (
                    <span class="px-2 py-1 bg-purple-50 text-purple-700 text-xs font-medium rounded">
                      {area}
                    </span>
                  ))}
                </div>
              </div>
            )}

            {lobbyist.bio && (
              <div>
                <p class="text-sm text-gray-500 mb-2">Bio</p>
                <p class="text-sm text-gray-700 whitespace-pre-wrap">{lobbyist.bio}</p>
              </div>
            )}
          </div>

          <!-- Profile Completeness -->
          <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Profile Completeness</h3>
            <div class="mb-4">
              <div class="flex items-center justify-between mb-2">
                <span class="text-2xl font-bold text-gray-900">{completeness}%</span>
                <span class="text-sm text-gray-600">Complete</span>
              </div>
              <div class="w-full bg-gray-200 rounded-full h-3">
                <div
                  class="bg-blue-600 h-3 rounded-full transition-all"
                  style={`width: ${completeness}%`}
                ></div>
              </div>
            </div>
            <div class="space-y-2">
              {completenessItems.map(item => (
                <div class="flex items-center gap-2">
                  {item.complete ? (
                    <svg class="h-5 w-5 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                  ) : (
                    <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  )}
                  <span class:list={[
                    'text-sm',
                    item.complete ? 'text-gray-900 font-medium' : 'text-gray-500'
                  ]}>
                    {item.label}
                  </span>
                </div>
              ))}
            </div>
          </div>

          <!-- Activity Statistics -->
          <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Activity Statistics</h3>
            <div class="grid grid-cols-2 gap-4">
              <div class="bg-blue-50 rounded-lg p-4">
                <p class="text-sm text-blue-600 mb-1">Profile Views</p>
                <p class="text-3xl font-bold text-blue-900">{viewsCount || 0}</p>
              </div>
              <div class="bg-purple-50 rounded-lg p-4">
                <p class="text-sm text-purple-600 mb-1">Favorites</p>
                <p class="text-3xl font-bold text-purple-900">{favoritesCount || 0}</p>
              </div>
            </div>
          </div>

          <!-- Linked User Account -->
          {linkedUser && (
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Linked User Account</h3>
              <div class="space-y-3">
                <div class="flex items-center justify-between">
                  <div>
                    <p class="text-sm text-gray-500">User ID</p>
                    <p class="text-sm font-medium text-gray-900 font-mono">{linkedUser.id}</p>
                  </div>
                  <a
                    href={`/admin/users/${linkedUser.id}`}
                    class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-700 transition-colors"
                  >
                    View User
                  </a>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Full Name</p>
                  <p class="text-sm font-medium text-gray-900">{linkedUser.full_name || 'Not set'}</p>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Role</p>
                  <span class:list={[
                    'px-2 py-1 text-xs font-medium rounded-full',
                    linkedUser.role === 'admin' && 'bg-red-100 text-red-800',
                    linkedUser.role === 'lobbyist' && 'bg-blue-100 text-blue-800',
                    linkedUser.role === 'client' && 'bg-green-100 text-green-800'
                  ]}>
                    {linkedUser.role}
                  </span>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Account Status</p>
                  <span class:list={[
                    'px-2 py-1 text-xs font-medium rounded-full',
                    linkedUser.is_suspended ? 'bg-red-100 text-red-800' : 'bg-green-100 text-green-800'
                  ]}>
                    {linkedUser.is_suspended ? 'Suspended' : 'Active'}
                  </span>
                </div>
                <div>
                  <p class="text-sm text-gray-500">Joined</p>
                  <p class="text-sm font-medium text-gray-900">{new Date(linkedUser.created_at).toLocaleDateString()}</p>
                </div>
              </div>
            </div>
          )}

          <!-- Recent Favorites -->
          {recentFavorites && recentFavorites.length > 0 && (
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Favorites ({favoritesCount})</h3>
              <div class="space-y-3">
                {recentFavorites.map((fav: any) => (
                  <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        {fav.users?.full_name || fav.users?.email || 'Anonymous'}
                      </p>
                      <p class="text-xs text-gray-500">{fav.users?.email}</p>
                    </div>
                    <p class="text-xs text-gray-500">
                      {new Date(fav.created_at).toLocaleDateString()}
                    </p>
                  </div>
                ))}
              </div>
            </div>
          )}

          <!-- Recent Views -->
          {recentViews && recentViews.length > 0 && (
            <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Recent Profile Views ({viewsCount})</h3>
              <div class="space-y-3">
                {recentViews.slice(0, 5).map((view: any) => (
                  <div class="flex items-center justify-between py-2 border-b border-gray-100 last:border-0">
                    <div>
                      <p class="text-sm font-medium text-gray-900">
                        {view.users?.full_name || view.users?.email || 'Anonymous'}
                      </p>
                      {view.users?.email && (
                        <p class="text-xs text-gray-500">{view.users.email}</p>
                      )}
                    </div>
                    <p class="text-xs text-gray-500">
                      {new Date(view.viewed_at).toLocaleDateString()}
                    </p>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Sidebar (1 column) -->
        <div class="space-y-6">
          <!-- Quick Actions -->
          <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Quick Actions</h3>
            <div class="space-y-2">
              {(lobbyist.approval_status === 'pending' || lobbyist.approval_status === 'rejected') && (
                <button
                  id="approve-btn"
                  class="w-full px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors text-sm font-medium"
                >
                  Approve Profile
                </button>
              )}

              {lobbyist.approval_status === 'approved' && (
                <button
                  id="reject-btn"
                  class="w-full px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition-colors text-sm font-medium"
                >
                  Reject Profile
                </button>
              )}

              {lobbyist.is_active ? (
                <button
                  id="deactivate-btn"
                  class="w-full px-4 py-2 border border-orange-600 text-orange-600 rounded-md hover:bg-orange-50 transition-colors text-sm font-medium"
                >
                  Deactivate Profile
                </button>
              ) : (
                <button
                  id="activate-btn"
                  class="w-full px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors text-sm font-medium"
                >
                  Activate Profile
                </button>
              )}

              <a
                href={`/admin/lobbyists/${lobbyistId}/edit`}
                class="w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors text-sm font-medium block text-center"
              >
                Edit Profile
              </a>

              {lobbyist.subscription_tier === 'free' && (
                <button
                  id="upgrade-tier-btn"
                  class="w-full px-4 py-2 border border-blue-600 text-blue-600 rounded-md hover:bg-blue-50 transition-colors text-sm font-medium"
                >
                  Upgrade Tier
                </button>
              )}

              <button
                id="delete-btn"
                class="w-full px-4 py-2 border-2 border-red-600 text-red-600 rounded-md hover:bg-red-50 transition-colors text-sm font-medium"
              >
                Delete Profile
              </button>
            </div>
          </div>

          <!-- Rejection History (if applicable) -->
          {lobbyist.rejection_reason && (
            <div class="bg-red-50 rounded-lg border border-red-200 shadow-sm p-6">
              <h3 class="text-lg font-semibold text-red-900 mb-4">Rejection History</h3>
              <div class="space-y-3">
                <div>
                  <p class="text-sm font-medium text-red-900">Last Rejection Reason:</p>
                  <p class="text-sm text-gray-700 mt-1 whitespace-pre-wrap">{lobbyist.rejection_reason}</p>
                </div>
                {lobbyist.rejected_at && (
                  <div>
                    <p class="text-sm font-medium text-red-900">Rejected:</p>
                    <p class="text-sm text-gray-700">{new Date(lobbyist.rejected_at).toLocaleDateString()} at {new Date(lobbyist.rejected_at).toLocaleTimeString()}</p>
                  </div>
                )}
                {lobbyist.rejection_count && (
                  <div>
                    <p class="text-sm font-medium text-red-900">Rejection Count:</p>
                    <p class="text-sm text-gray-700">{lobbyist.rejection_count} of 3 maximum attempts</p>
                  </div>
                )}
              </div>
            </div>
          )}

          <!-- Internal Notes -->
          <div class="bg-white rounded-lg border border-gray-200 shadow-sm p-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Internal Notes</h3>
            <textarea
              id="internal-notes"
              rows="6"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 text-sm"
              placeholder="Add internal admin notes about this lobbyist..."
            >{lobbyist.internal_notes || ''}</textarea>
            <button
              id="save-notes-btn"
              class="w-full mt-3 px-4 py-2 bg-gray-900 text-white rounded-md hover:bg-gray-800 transition-colors text-sm font-medium"
            >
              Save Notes
            </button>
          </div>

          <!-- Quick Info -->
          <div class="bg-gray-50 rounded-lg border border-gray-200 p-4">
            <h3 class="text-sm font-semibold text-gray-700 mb-3">Quick Info</h3>
            <div class="space-y-2 text-xs">
              <div class="flex justify-between">
                <span class="text-gray-600">Profile ID:</span>
                <span class="font-mono text-gray-900">{lobbyist.id}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Slug:</span>
                <span class="font-mono text-gray-900">{lobbyist.slug}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Created:</span>
                <span class="text-gray-900">{new Date(lobbyist.created_at).toLocaleDateString()}</span>
              </div>
              <div class="flex justify-between">
                <span class="text-gray-600">Updated:</span>
                <span class="text-gray-900">{new Date(lobbyist.updated_at).toLocaleDateString()}</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script define:vars={{ lobbyistId, linkedUserId: linkedUser?.id }}>
    // Approve profile
    document.getElementById('approve-btn')?.addEventListener('click', async () => {
      if (!confirm('Approve this lobbyist profile?')) return;

      try {
        const response = await fetch('/api/admin/approve-lobbyist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to approve profile');
        }

        alert('Profile approved successfully');
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Reject profile
    document.getElementById('reject-btn')?.addEventListener('click', async () => {
      const reason = prompt('Enter rejection reason:');
      if (!reason) return;

      try {
        const response = await fetch('/api/admin/reject-lobbyist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId, reason })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to reject profile');
        }

        alert('Profile rejected');
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Activate profile
    document.getElementById('activate-btn')?.addEventListener('click', async () => {
      if (!confirm('Activate this lobbyist profile?')) return;

      try {
        const response = await fetch('/api/admin/activate-lobbyist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to activate profile');
        }

        alert('Profile activated');
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Deactivate profile
    document.getElementById('deactivate-btn')?.addEventListener('click', async () => {
      if (!confirm('Deactivate this lobbyist profile? The profile will be hidden from search results.')) return;

      try {
        const response = await fetch('/api/admin/deactivate-lobbyist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to deactivate profile');
        }

        alert('Profile deactivated');
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Upgrade tier
    document.getElementById('upgrade-tier-btn')?.addEventListener('click', async () => {
      const tier = prompt('Enter new tier (premium or featured):');
      if (!tier || !['premium', 'featured'].includes(tier.toLowerCase())) {
        alert('Invalid tier. Must be "premium" or "featured"');
        return;
      }

      try {
        const response = await fetch('/api/admin/update-lobbyist-tier', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId, tier: tier.toLowerCase() })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to update tier');
        }

        alert(`Tier upgraded to ${tier}`);
        window.location.reload();
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Save internal notes
    document.getElementById('save-notes-btn')?.addEventListener('click', async () => {
      const notes = document.getElementById('internal-notes').value;

      try {
        const response = await fetch('/api/admin/update-lobbyist-notes', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId, notes })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to save notes');
        }

        alert('Notes saved successfully');
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });

    // Delete profile
    document.getElementById('delete-btn')?.addEventListener('click', async () => {
      if (!confirm('Are you sure you want to delete this lobbyist profile? This action cannot be undone.')) return;
      if (!confirm('FINAL WARNING: This will permanently delete all data associated with this profile. Continue?')) return;

      try {
        const response = await fetch('/api/admin/delete-lobbyist', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ lobbyistId })
        });

        const data = await response.json();

        if (!response.ok) {
          throw new Error(data.error || 'Failed to delete profile');
        }

        alert('Profile deleted successfully');
        window.location.href = '/admin/lobbyists';
      } catch (error) {
        console.error('Error:', error);
        alert(error instanceof Error ? error.message : 'Something went wrong');
      }
    });
  </script>
