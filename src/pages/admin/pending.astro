---
import Layout from '@/components/astro/Layout.astro';

import { createServerClient } from '@/lib/supabase';

// Require admin authentication
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login?redirect=' + Astro.url.pathname);
}

// Role check using middleware
if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}

// Use server client for admin access
const serverClient = createServerClient();

// Get pending claim requests (new system)
const { data: pendingClaims } = await serverClient
  .from('profile_claim_requests')
  .select(`
    id,
    verification_document_url,
    submitted_at,
    status,
    lobbyist_id,
    lobbyists!inner (
      id,
      first_name,
      last_name,
      email,
      phone,
      website,
      bio,
      cities,
      subject_areas,
      slug,
      photo_url
    ),
    user_id,
    users!inner (
      email,
      full_name
    )
  `)
  .eq('status', 'pending')
  .order('submitted_at', { ascending: true });

const pageTitle = 'Pending Claim Requests | Admin';
const pageDescription = 'Review and approve profile claim requests with ID verification.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-12">
    <div class="container max-w-6xl">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Pending Claim Requests</h1>
          <p class="text-muted-foreground">
            Review profile claims with ID verification
          </p>
        </div>
        <a
          href="/admin"
          class="inline-flex items-center gap-2 text-texas-blue-500 hover:underline"
        >
          ← Back to Admin
        </a>
      </div>

      <!-- Pending Count -->
      <div class="mb-6 rounded-lg border border-border bg-white p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="rounded-full bg-amber-100 p-2">
              <svg class="h-5 w-5 text-amber-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd" />
              </svg>
            </div>
            <div>
              <div class="font-semibold">{pendingClaims?.length || 0} Claim Requests Awaiting Review</div>
              <div class="text-sm text-muted-foreground">Target: Review within 48 hours</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pending Claims List -->
      {pendingClaims && pendingClaims.length > 0 ? (
        <div class="space-y-6">
          {pendingClaims.map((claim: any) => {
            const profile = claim.lobbyists;
            const claimant = claim.users;
            const daysPending = Math.floor((Date.now() - new Date(claim.submitted_at).getTime()) / (1000 * 60 * 60 * 24));
            const isOverdue = daysPending > 2;

            return (
            <div class={`rounded-lg border-2 ${isOverdue ? 'border-red-300 bg-red-50/30' : 'border-border bg-white'} p-6 hover:shadow-lg transition-shadow`}>
              <!-- Time warning for overdue claims -->
              {isOverdue && (
                <div class="mb-4 rounded-md bg-red-100 border border-red-300 p-3">
                  <div class="flex items-center gap-2 text-red-800">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">Overdue: {daysPending} days pending (target: 2 days)</span>
                  </div>
                </div>
              )}

              <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                <!-- Left Column: Profile Info -->
                <div>
                  <h3 class="text-lg font-semibold mb-4 text-texas-blue-600">Profile Being Claimed</h3>

                  <div class="flex items-start gap-4 mb-4">
                    {profile.photo_url ? (
                      <img
                        src={profile.photo_url}
                        alt={`${profile.first_name} ${profile.last_name}`}
                        class="h-16 w-16 rounded-full object-cover border-2 border-border"
                      />
                    ) : (
                      <div class="h-16 w-16 rounded-full bg-muted flex items-center justify-center border-2 border-border">
                        <svg class="h-8 w-8 text-muted-foreground" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
                        </svg>
                      </div>
                    )}

                    <div class="flex-1">
                      <h4 class="text-xl font-bold mb-1">
                        {profile.first_name} {profile.last_name}
                      </h4>
                      <p class="text-sm text-muted-foreground">
                        Profile Email: {profile.email || 'Not set'}
                      </p>
                    </div>
                  </div>

                  {profile.cities && profile.cities.length > 0 && (
                    <div class="mb-3">
                      <p class="text-sm font-medium text-muted-foreground mb-1">Cities:</p>
                      <div class="flex flex-wrap gap-2">
                        {profile.cities.slice(0, 5).map((city: string) => (
                          <span class="inline-flex items-center rounded-full bg-texas-blue-100 px-2.5 py-0.5 text-xs font-medium text-texas-blue-800">
                            {city}
                          </span>
                        ))}
                      </div>
                    </div>
                  )}

                  <div class="space-y-2 text-sm">
                    <div class="flex items-center gap-2">
                      <span class="font-medium">Claimant:</span>
                      <span class="text-muted-foreground">{claimant.email}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="font-medium">Submitted:</span>
                      <span class="text-muted-foreground">{new Date(claim.submitted_at).toLocaleString()}</span>
                    </div>
                    <div class="flex items-center gap-2">
                      <span class="font-medium">Days Pending:</span>
                      <span class={`font-semibold ${isOverdue ? 'text-red-600' : 'text-green-600'}`}>{daysPending} days</span>
                    </div>
                  </div>

                  <div class="mt-4">
                    <a
                      href={`/lobbyists/${profile.slug}`}
                      target="_blank"
                      class="text-sm text-texas-blue-500 hover:underline flex items-center gap-1"
                    >
                      View Public Profile →
                    </a>
                  </div>
                </div>

                <!-- Right Column: ID Verification -->
                <div>
                  <h3 class="text-lg font-semibold mb-4 text-texas-blue-600">ID Verification Document</h3>

                  <div class="rounded-lg border-2 border-border p-4 bg-muted/30">
                    {claim.verification_document_url && (
                      claim.verification_document_url.endsWith('.pdf') ? (
                        <div class="text-center">
                          <div class="inline-flex items-center justify-center w-32 h-32 rounded-lg bg-red-50 border border-red-200 mb-3">
                            <svg class="h-16 w-16 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21h10a2 2 0 002-2V9.414a1 1 0 00-.293-.707l-5.414-5.414A1 1 0 0012.586 3H7a2 2 0 00-2 2v14a2 2 0 002 2z" />
                            </svg>
                          </div>
                          <a
                            href={claim.verification_document_url}
                            target="_blank"
                            class="inline-flex items-center gap-2 text-sm text-texas-blue-500 hover:underline font-medium"
                          >
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                            </svg>
                            View PDF Document
                          </a>
                        </div>
                      ) : (
                        <div>
                          <img
                            src={claim.verification_document_url}
                            alt="ID Verification"
                            class="w-full rounded-md border border-border mb-3"
                          />
                          <a
                            href={claim.verification_document_url}
                            target="_blank"
                            class="text-sm text-texas-blue-500 hover:underline flex items-center justify-center gap-1"
                          >
                            <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7" />
                            </svg>
                            View Full Size
                          </a>
                        </div>
                      )
                    )}
                  </div>

                  <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded-md">
                    <p class="text-xs text-blue-800">
                      <strong>Verification Checklist:</strong>
                    </p>
                    <ul class="text-xs text-blue-700 mt-1 space-y-0.5 list-disc list-inside">
                      <li>Name matches profile name</li>
                      <li>Photo is clearly visible</li>
                      <li>Document appears authentic</li>
                      <li>Not expired (if visible)</li>
                    </ul>
                  </div>
                </div>
              </div>

              <!-- Actions -->
              <div class="mt-6 pt-6 border-t border-border flex gap-3">
                <form method="POST" action="/api/admin/approve-claim" class="flex-1">
                  <input type="hidden" name="claim_id" value={claim.id} />
                  <button
                    type="submit"
                    class="w-full inline-flex items-center justify-center rounded-md bg-green-600 px-6 py-3 text-sm font-medium text-white hover:bg-green-700 transition-colors shadow-sm"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Approve Claim
                  </button>
                </form>
                <form method="POST" action="/api/admin/reject-claim" class="flex-1">
                  <input type="hidden" name="claim_id" value={claim.id} />
                  <button
                    type="submit"
                    class="w-full inline-flex items-center justify-center rounded-md border-2 border-red-600 px-6 py-3 text-sm font-medium text-red-600 hover:bg-red-50 transition-colors"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Reject Claim
                  </button>
                </form>
              </div>
            </div>
          )})}
        </div>
      ) : (
        <div class="rounded-lg border-2 border-dashed border-border bg-muted/30 p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-muted-foreground mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2">No Pending Claim Requests</h3>
          <p class="text-muted-foreground">
            All claim requests have been reviewed. Great work!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
