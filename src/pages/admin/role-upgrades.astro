---
import Layout from '@/components/astro/Layout.astro';

import { createServerClient } from '@/lib/supabase';

// Require admin authentication
const user = Astro.locals.user;
if (!user) {
  return Astro.redirect('/login?redirect=' + Astro.url.pathname);
}

// Role check using middleware
if (user.role !== 'admin') {
  return Astro.redirect('/dashboard');
}

// Use server client for admin access
const serverClient = createServerClient();

// Get pending role upgrade requests
const { data: pendingUpgrades } = await serverClient
  .from('role_upgrade_requests')
  .select(`
    id,
    from_role,
    to_role,
    reason,
    admin_notes,
    submitted_at,
    status,
    user_id,
    users!inner (
      email,
      full_name,
      created_at
    )
  `)
  .eq('status', 'pending')
  .order('submitted_at', { ascending: true });

const pageTitle = 'Role Upgrade Requests | Admin';
const pageDescription = 'Review and approve account role upgrade requests.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-12">
    <div class="container max-w-6xl">
      <!-- Header -->
      <div class="flex items-center justify-between mb-8">
        <div>
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Role Upgrade Requests</h1>
          <p class="text-muted-foreground">
            Review requests from searchers who want to become lobbyists
          </p>
        </div>
        <a
          href="/admin"
          class="inline-flex items-center gap-2 text-texas-blue-500 hover:underline"
        >
          ‚Üê Back to Admin
        </a>
      </div>

      <!-- Pending Count -->
      <div class="mb-6 rounded-lg border border-border bg-white p-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="rounded-full bg-indigo-100 p-2">
              <svg class="h-5 w-5 text-indigo-600" fill="currentColor" viewBox="0 0 20 20">
                <path d="M8 9a3 3 0 100-6 3 3 0 000 6zM8 11a6 6 0 016 6H2a6 6 0 016-6zM16 7a1 1 0 10-2 0v1h-1a1 1 0 100 2h1v1a1 1 0 102 0v-1h1a1 1 0 100-2h-1V7z" />
              </svg>
            </div>
            <div>
              <div class="font-semibold">{pendingUpgrades?.length || 0} Upgrade Requests Pending</div>
              <div class="text-sm text-muted-foreground">Target: Review within 24-48 hours</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Pending Upgrades List -->
      {pendingUpgrades && pendingUpgrades.length > 0 ? (
        <div class="space-y-6">
          {pendingUpgrades.map((upgrade: any) => {
            const requester = upgrade.users;
            const daysPending = Math.floor((Date.now() - new Date(upgrade.submitted_at).getTime()) / (1000 * 60 * 60 * 24));
            const isOverdue = daysPending > 2;

            // Parse admin_notes JSON if it exists
            let additionalInfo: any = {};
            try {
              if (upgrade.admin_notes) {
                additionalInfo = JSON.parse(upgrade.admin_notes);
              }
            } catch (e) {
              console.error('Error parsing admin_notes:', e);
            }

            return (
            <div class={`rounded-lg border-2 ${isOverdue ? 'border-red-300 bg-red-50/30' : 'border-border bg-white'} p-6 hover:shadow-lg transition-shadow`}>
              <!-- Overdue warning -->
              {isOverdue && (
                <div class="mb-4 rounded-md bg-red-100 border border-red-300 p-3">
                  <div class="flex items-center gap-2 text-red-800">
                    <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                    </svg>
                    <span class="font-medium">Overdue: {daysPending} days pending (target: 2 days)</span>
                  </div>
                </div>
              )}

              <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
                <!-- Left: User Info -->
                <div class="lg:col-span-1">
                  <h3 class="font-semibold text-sm text-muted-foreground mb-3">User Information</h3>

                  <div class="space-y-3 text-sm">
                    <div>
                      <p class="text-xs text-muted-foreground mb-0.5">Email</p>
                      <p class="font-medium">{requester.email}</p>
                    </div>
                    {requester.full_name && (
                      <div>
                        <p class="text-xs text-muted-foreground mb-0.5">Full Name</p>
                        <p class="font-medium">{requester.full_name}</p>
                      </div>
                    )}
                    <div>
                      <p class="text-xs text-muted-foreground mb-0.5">Current Role</p>
                      <span class="inline-flex items-center rounded-full bg-gray-100 px-2.5 py-0.5 text-xs font-semibold uppercase">
                        {upgrade.from_role}
                      </span>
                    </div>
                    <div>
                      <p class="text-xs text-muted-foreground mb-0.5">Requested Role</p>
                      <span class="inline-flex items-center rounded-full bg-blue-100 px-2.5 py-0.5 text-xs font-semibold text-blue-800 uppercase">
                        {upgrade.to_role}
                      </span>
                    </div>
                    <div>
                      <p class="text-xs text-muted-foreground mb-0.5">Member Since</p>
                      <p class="text-sm">{new Date(requester.created_at).toLocaleDateString()}</p>
                    </div>
                    <div>
                      <p class="text-xs text-muted-foreground mb-0.5">Request Submitted</p>
                      <p class="text-sm">{new Date(upgrade.submitted_at).toLocaleDateString()}</p>
                      <p class={`text-xs ${isOverdue ? 'text-red-600 font-semibold' : 'text-green-600'}`}>
                        {daysPending} {daysPending === 1 ? 'day' : 'days'} ago
                      </p>
                    </div>
                  </div>
                </div>

                <!-- Middle: Request Details -->
                <div class="lg:col-span-2">
                  <h3 class="font-semibold text-sm text-muted-foreground mb-3">Request Details</h3>

                  <div class="space-y-4">
                    <!-- Reason -->
                    <div>
                      <p class="text-sm font-medium mb-2">Why they want to become a lobbyist:</p>
                      <div class="rounded-lg border border-border bg-muted/30 p-4">
                        <p class="text-sm whitespace-pre-wrap">{upgrade.reason}</p>
                      </div>
                    </div>

                    <!-- Additional Info -->
                    {(additionalInfo.current_firm || additionalInfo.years_experience || additionalInfo.tec_registration) && (
                      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        {additionalInfo.current_firm && (
                          <div class="rounded-md border border-border bg-white p-3">
                            <p class="text-xs text-muted-foreground mb-1">Current Firm</p>
                            <p class="text-sm font-medium">{additionalInfo.current_firm}</p>
                          </div>
                        )}
                        {additionalInfo.years_experience && (
                          <div class="rounded-md border border-border bg-white p-3">
                            <p class="text-xs text-muted-foreground mb-1">Years of Experience</p>
                            <p class="text-sm font-medium">{additionalInfo.years_experience} years</p>
                          </div>
                        )}
                        {additionalInfo.tec_registration && (
                          <div class="rounded-md border border-border bg-white p-3">
                            <p class="text-xs text-muted-foreground mb-1">TEC Registration</p>
                            <p class="text-sm font-medium">
                              {additionalInfo.tec_registration === 'yes' ? 'Currently Registered' :
                               additionalInfo.tec_registration === 'pending' ? 'Registration Pending' :
                               'Plans to Register'}
                            </p>
                          </div>
                        )}
                      </div>
                    )}

                    <!-- Approval Guidelines -->
                    <div class="rounded-lg border border-blue-200 bg-blue-50 p-4">
                      <p class="text-xs font-medium text-blue-900 mb-2">Approval Guidelines:</p>
                      <ul class="text-xs text-blue-800 space-y-1 list-disc list-inside">
                        <li>Verify the request appears legitimate (not spam)</li>
                        <li>Reason should demonstrate genuine lobbying intent</li>
                        <li>Consider TEC registration status (required for active lobbying)</li>
                        <li>Check account age and activity (suspicious if brand new)</li>
                      </ul>
                    </div>
                  </div>
                </div>
              </div>

              <!-- Actions -->
              <div class="mt-6 pt-6 border-t border-border flex gap-3">
                <form method="POST" action="/api/admin/approve-role-upgrade" class="flex-1">
                  <input type="hidden" name="upgrade_id" value={upgrade.id} />
                  <button
                    type="submit"
                    class="w-full inline-flex items-center justify-center rounded-md bg-green-600 px-6 py-3 text-sm font-medium text-white hover:bg-green-700 transition-colors shadow-sm"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    Approve Upgrade
                  </button>
                </form>
                <form method="POST" action="/api/admin/reject-role-upgrade" class="flex-1">
                  <input type="hidden" name="upgrade_id" value={upgrade.id} />
                  <button
                    type="submit"
                    class="w-full inline-flex items-center justify-center rounded-md border-2 border-red-600 px-6 py-3 text-sm font-medium text-red-600 hover:bg-red-50 transition-colors"
                  >
                    <svg class="h-5 w-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                    Reject Request
                  </button>
                </form>
              </div>
            </div>
          )})}
        </div>
      ) : (
        <div class="rounded-lg border-2 border-dashed border-border bg-muted/30 p-12 text-center">
          <svg class="mx-auto h-12 w-12 text-muted-foreground mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h3 class="text-lg font-semibold mb-2">No Pending Role Upgrades</h3>
          <p class="text-muted-foreground">
            All role upgrade requests have been reviewed. Great work!
          </p>
        </div>
      )}
    </div>
  </section>
</Layout>
