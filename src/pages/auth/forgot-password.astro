---
import Layout from '@/components/astro/Layout.astro';
import ForgotPasswordForm from '@/components/react/ForgotPasswordForm';

const pageTitle = 'Forgot Password';
const pageDescription = 'Reset your TexasLobby.org account password.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-16 min-h-[calc(100vh-4rem)]">
    <div class="container max-w-md">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-3">Reset Your Password</h1>
        <p class="text-lg text-muted-foreground">
          Enter your email address and we'll send you a link to reset your password
        </p>
      </div>

      <!-- Forgot Password Form -->
      <div class="rounded-lg border border-border bg-white p-8 shadow-sm">
        <ForgotPasswordForm client:load />
      </div>

      <!-- Back to Login -->
      <div class="mt-6 text-center">
        <a
          href="/login"
          class="text-sm text-texas-blue-500 hover:underline"
        >
          ‚Üê Back to login
        </a>
      </div>
    </div>
  </section>
</Layout>
