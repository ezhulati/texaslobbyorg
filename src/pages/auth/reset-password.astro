---
import Layout from '@/components/astro/Layout.astro';
import ResetPasswordForm from '@/components/react/ResetPasswordForm';

const pageTitle = 'Reset Password';
const pageDescription = 'Create a new password for your TexasLobby.org account.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-16 min-h-[calc(100vh-4rem)]">
    <div class="container max-w-md">
      <!-- Header -->
      <div class="text-center mb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-3">Create New Password</h1>
        <p class="text-lg text-muted-foreground">
          Enter your new password below
        </p>
      </div>

      <!-- Reset Password Form -->
      <div class="rounded-lg border border-border bg-white p-8 shadow-sm">
        <ResetPasswordForm client:load />
      </div>
    </div>
  </section>
</Layout>
