---
import Layout from '@/components/astro/Layout.astro';
import { createServerAuthClient, createServerClient } from '@/lib/supabase';

const pageTitle = 'Verify Email';
const pageDescription = 'Verify your email address to complete your registration.';

// Handle email verification from Supabase
const { searchParams } = Astro.url;
const token_hash = searchParams.get('token_hash');
const type = searchParams.get('type');

let verificationStatus: 'success' | 'error' | 'pending' = 'pending';
let message = 'Verifying your email...';
let redirectUrl = '/lobbyists'; // Default redirect

if (token_hash && type) {
  try {
    console.log('[Auth Verify] Verifying OTP for type:', type);

    // Use SSR auth client for verification
    const supabase = createServerAuthClient(Astro.cookies);

    const { data, error } = await supabase.auth.verifyOtp({
      token_hash,
      type: type as any,
    });

    if (error) throw error;

    if (data.user) {
      console.log('[Auth Verify] User verified:', data.user.id);

      // Use service role client for database operations
      const serverClient = createServerClient();

      // Get user type from metadata
      const userType = data.user.user_metadata?.user_type || 'searcher';
      const firstName = data.user.user_metadata?.first_name || null;
      const lastName = data.user.user_metadata?.last_name || null;

      console.log('[Auth Verify] User type from metadata:', userType);

      // Check if user already exists in database
      const { data: existingUser, error: checkError } = await serverClient
        .from('users')
        .select('id, role')
        .eq('id', data.user.id)
        .single();

      let userRole: 'searcher' | 'lobbyist' | 'admin' = userType as 'searcher' | 'lobbyist' | 'admin';

      // Only create user record if it doesn't exist
      if (checkError && checkError.code === 'PGRST116') {
        const { error: insertError } = await serverClient.from('users').insert({
          id: data.user.id,
          email: data.user.email!,
          role: userRole,
          full_name: firstName && lastName ? `${firstName} ${lastName}`.trim() : null,
        });

        if (insertError) {
          console.error('[Auth Verify] Error creating user record:', insertError);
        } else {
          console.log('[Auth Verify] Created user record with role:', userRole);
        }
      } else if (existingUser) {
        userRole = existingUser.role;
        console.log('[Auth Verify] Existing user found with role:', userRole);
      }

      // SMART ROUTING: Determine redirect based on user role and status
      if (userRole === 'admin') {
        redirectUrl = '/admin';
        console.log('[Auth Verify] Admin user, redirecting to admin dashboard');
      } else if (userRole === 'lobbyist') {
        // Check if lobbyist has a profile
        const { data: lobbyistProfile, error: profileError } = await serverClient
          .from('lobbyists')
          .select('id, slug')
          .eq('user_id', data.user.id)
          .single();

        if (!profileError && lobbyistProfile) {
          redirectUrl = '/dashboard';
          console.log('[Auth Verify] Lobbyist with profile, redirecting to dashboard');
        } else {
          redirectUrl = '/create-profile';
          console.log('[Auth Verify] Lobbyist without profile, redirecting to create profile');
        }
      } else {
        // Searcher - check if they have favorites
        const { data: favorites, error: favError } = await serverClient
          .from('favorites')
          .select('id')
          .eq('user_id', data.user.id)
          .limit(1);

        if (!favError && favorites && favorites.length > 0) {
          redirectUrl = '/favorites';
          console.log('[Auth Verify] Searcher with favorites, redirecting to favorites page');
        } else {
          redirectUrl = '/lobbyists';
          console.log('[Auth Verify] Searcher without favorites, redirecting to directory');
        }
      }

      verificationStatus = 'success';
      message = 'Email verified successfully! Redirecting...';
      console.log('[Auth Verify] Verification complete, redirecting to:', redirectUrl);
    }
  } catch (err: any) {
    console.error('[Auth Verify] Verification error:', err);
    verificationStatus = 'error';
    message = err?.message || 'Failed to verify email. The link may have expired.';
  }
}
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-16 min-h-[calc(100vh-4rem)]">
    <div class="container max-w-md">
      <div class="rounded-lg border border-border bg-white p-8 shadow-sm text-center">
        {verificationStatus === 'success' && (
          <div class="space-y-4">
            <div class="mx-auto w-16 h-16 rounded-full bg-green-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold text-green-900">Email Verified!</h1>
            <p class="text-muted-foreground">{message}</p>
            <script define:vars={{ redirectUrl }}>
              // Redirect to the appropriate page based on user role/status
              setTimeout(() => {
                window.location.href = redirectUrl;
              }, 2000);
            </script>
          </div>
        )}

        {verificationStatus === 'error' && (
          <div class="space-y-4">
            <div class="mx-auto w-16 h-16 rounded-full bg-red-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold text-red-900">Verification Failed</h1>
            <p class="text-muted-foreground">{message}</p>
            <div class="pt-4">
              <a
                href="/signup"
                class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-4 py-2 text-sm font-medium text-white hover:bg-texas-blue-600 transition-colors"
              >
                Try signing up again
              </a>
            </div>
          </div>
        )}

        {verificationStatus === 'pending' && (
          <div class="space-y-4">
            <div class="mx-auto w-16 h-16 rounded-full bg-blue-100 flex items-center justify-center">
              <svg class="w-8 h-8 text-blue-600 animate-spin" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
              </svg>
            </div>
            <h1 class="text-2xl font-bold">Verifying...</h1>
            <p class="text-muted-foreground">{message}</p>
          </div>
        )}
      </div>
    </div>
  </section>
</Layout>
