const publishedDate = '2025-11-11';
const updatedDate = '2025-11-11';
const author = 'By Byron Campbell, Capitol Insights';
const category = 'Lobbying Guide';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: pageTitle,
  description: pageDescription,
  datePublished: publishedDate,
  dateModified: updatedDate,
  author: {
    '@type': 'Person',
    name: 'Byron Campbell'
  },
  publisher: {
    '@type': 'Organization',
    name: 'TexasLobby.org',
    logo: {
      '@type': 'ImageObject',
      url: 'https://texaslobby.org/logo.png'
    }
  }
};
---

