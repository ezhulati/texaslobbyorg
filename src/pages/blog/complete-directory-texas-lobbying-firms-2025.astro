const updatedDate = '2025-11-11';
const author = 'By TexasLobby.org Research Team';
const category = 'Directory';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'BlogPosting',
  headline: pageTitle,
  description: pageDescription,
  datePublished: publishedDate,
  dateModified: updatedDate,
  author: {
    '@type': 'Organization',
    name: 'TexasLobby.org'
  },
  publisher: {
    '@type': 'Organization',
    name: 'TexasLobby.org',
    logo: {
      '@type': 'ImageObject',
      url: 'https://texaslobby.org/logo.png'
    }
  }
};
