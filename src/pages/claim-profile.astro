---
import Layout from '@/components/astro/Layout.astro';
import ClaimProfileSearch from '@/components/react/ClaimProfileSearch';
import { supabase } from '@/lib/supabase';

// Check if user is authenticated
const user = Astro.locals.user;

// If user is authenticated, check if they already have a claimed profile
if (user) {
  const { data } = await supabase
    .from('lobbyists')
    .select('id, slug')
    .eq('user_id', user.id)
    .eq('is_claimed', true)
    .single();

  if (data) {
    return Astro.redirect(`/lobbyists/${data.slug}`);
  }
}

const pageTitle = 'Claim Your Texas Lobbyist Profile | Free Listing';
const pageDescription = 'Claim your lobbyist profile on TexasLobby.org. Manage your information, showcase clients, increase visibility. Connect with Texas businesses seeking advocacy.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="relative bg-gradient-to-b from-texas-blue-50 to-white pt-20 pb-16">
    <div class="container max-w-5xl">
      <div class="text-center mb-12">
        <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-texas-blue-100 text-texas-blue-700 text-sm font-medium mb-6">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
