          <ClaimProfileSearch
            client:load
            isAuthenticated={!!user}
            userId={user?.id}
            userEmail={user?.email}
          />
        </div>

        <!-- Not in directory CTA -->
        <div class="mt-8 text-center">
          <p class="text-gray-600 mb-3">
            Don't have a profile yet?
          </p>
          <a
            href="/signup"
