---
import Layout from '@/components/astro/Layout.astro';
import { MapPin, Clock } from 'lucide-react';

const pageTitle = 'Contact Us | TexasLobby.org';
const pageDescription = 'Get in touch with TexasLobby.org. We\'re here to help businesses find the right lobbyist and assist lobbyists in growing their practice.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-texas-blue-500/5 to-background py-12 border-b border-border">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-muted-foreground">
          Have questions? We're here to help. Send us a message and we'll respond as soon as possible.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg border border-border p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-6">Send us a message</h2>

            <form
              id="contact-form"
              class="space-y-6"
            >
              <!-- Honeypot for spam prevention -->
              <div class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" id="bot-field" />
                </label>
              </div>

              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-foreground mb-2">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="John Doe"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-foreground mb-2">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="john@example.com"
                />
              </div>

              <!-- Phone (optional) -->
              <div>
                <label for="phone" class="block text-sm font-medium text-foreground mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="(512) 555-0100"
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm font-medium text-foreground mb-2">
                  Subject <span class="text-red-500">*</span>
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                >
                  <option value="">Select a subject</option>
                  <option value="general">General Inquiry</option>
                  <option value="business">For Businesses (Finding a Lobbyist)</option>
                  <option value="lobbyist">For Lobbyists (Claiming Profile)</option>
                  <option value="technical">Technical Support</option>
                  <option value="partnership">Partnership Opportunities</option>
                  <option value="press">Press & Media</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-foreground mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent resize-none"
                  placeholder="Tell us how we can help you..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  class="w-full inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-600 transition-colors"
                >
                  Send Message
                </button>
              </div>

              <p class="text-sm text-muted-foreground text-center">
                We typically respond within 1-2 business days.
              </p>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Contact Information -->
          <div class="bg-white rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold mb-4">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100 flex-shrink-0">
                  <MapPin className="h-5 w-5 text-texas-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-sm mb-1">Location</h4>
                  <p class="text-sm text-muted-foreground">
                    Austin, Texas<br />
                    United States
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100 flex-shrink-0">
                  <Clock className="h-5 w-5 text-texas-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-sm mb-1">Business Hours</h4>
                  <p class="text-sm text-muted-foreground">
                    Monday - Friday<br />
                    9:00 AM - 5:00 PM CST
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="bg-white rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <div class="space-y-3">
              <a href="/how-it-works" class="block text-sm text-texas-blue-500 hover:underline">
                How It Works
              </a>
              <a href="/for-lobbyists" class="block text-sm text-texas-blue-500 hover:underline">
                For Lobbyists
              </a>
              <a href="/pricing" class="block text-sm text-texas-blue-500 hover:underline">
                Pricing & Plans
              </a>
              <a href="/guides" class="block text-sm text-texas-blue-500 hover:underline">
                Guides & Resources
              </a>
            </div>
          </div>

          <!-- FAQ CTA -->
          <div class="bg-texas-blue-500/5 rounded-lg border border-texas-blue-500/20 p-6">
            <h3 class="text-lg font-semibold mb-2">Have a Question?</h3>
            <p class="text-sm text-muted-foreground mb-4">
              Check our guides section for answers to common questions about working with lobbyists in Texas.
            </p>
            <a
              href="/guides"
              class="inline-flex items-center text-sm font-medium text-texas-blue-500 hover:underline"
            >
              Browse Guides
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Form JavaScript -->
  <script>
    document.getElementById('contact-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();

      const form = e.target as HTMLFormElement;
      const submitButton = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalButtonText = submitButton.textContent;

      // Check honeypot
      const botField = (document.getElementById('bot-field') as HTMLInputElement)?.value;
      if (botField) {
        console.log('Bot detected');
        return; // Silent fail for bots
      }

      // Disable button and show loading state
      submitButton.disabled = true;
      submitButton.textContent = 'Sending...';

      // Remove any existing messages
      const existingMessage = form.querySelector('.form-message');
      if (existingMessage) {
        existingMessage.remove();
      }

      try {
        const formData = new FormData(form);

        const response = await fetch('/api/contact', {
          method: 'POST',
          body: formData,
        });

        const result = await response.json();

        if (response.ok) {
          // Success message
          const successDiv = document.createElement('div');
          successDiv.className = 'form-message rounded-lg border border-green-200 bg-green-50 p-4';
          successDiv.innerHTML = `
            <div class="flex items-start gap-3">
              <svg class="h-5 w-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <div>
                <p class="font-medium text-green-800">Message sent successfully!</p>
                <p class="text-sm text-green-700 mt-1">We'll get back to you within 1-2 business days.</p>
              </div>
            </div>
          `;
          form.insertAdjacentElement('beforebegin', successDiv);

          // Reset form
          form.reset();

          // Scroll to success message
          successDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });

        } else {
          throw new Error(result.error || 'Failed to send message');
        }

      } catch (error: any) {
        // Error message
        const errorDiv = document.createElement('div');
        errorDiv.className = 'form-message rounded-lg border border-red-200 bg-red-50 p-4';
        errorDiv.innerHTML = `
          <div class="flex items-start gap-3">
            <svg class="h-5 w-5 text-red-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
            <div>
              <p class="font-medium text-red-800">Failed to send message</p>
              <p class="text-sm text-red-700 mt-1">${error.message || 'Please try again later.'}</p>
            </div>
          </div>
        `;
        form.insertAdjacentElement('beforebegin', errorDiv);

        // Scroll to error message
        errorDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });

      } finally {
        // Re-enable button
        submitButton.disabled = false;
        submitButton.textContent = originalButtonText;
      }
    });
  </script>
</Layout>
