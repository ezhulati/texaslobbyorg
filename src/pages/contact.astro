---
import Layout from '@/components/astro/Layout.astro';
import { Mail, Phone, MapPin, Clock } from 'lucide-react';

const pageTitle = 'Contact Us | TexasLobby.org';
const pageDescription = 'Get in touch with TexasLobby.org. We\'re here to help businesses find the right lobbyist and assist lobbyists in growing their practice.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-texas-blue-500/5 to-background py-12 border-b border-border">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Contact Us</h1>
        <p class="text-xl text-muted-foreground">
          Have questions? We're here to help. Send us a message and we'll respond as soon as possible.
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12 md:py-16">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Contact Form -->
        <div class="lg:col-span-2">
          <div class="bg-white rounded-lg border border-border p-6 md:p-8">
            <h2 class="text-2xl font-bold mb-6">Send us a message</h2>

            <form
              name="contact"
              method="POST"
              action="/contact/success"
              data-netlify="true"
              netlify
              netlify-honeypot="bot-field"
              class="space-y-6"
            >
              <!-- Hidden fields for Netlify -->
              <input type="hidden" name="form-name" value="contact" />
              <div class="hidden">
                <label>
                  Don't fill this out if you're human: <input name="bot-field" />
                </label>
              </div>

              <!-- Name -->
              <div>
                <label for="name" class="block text-sm font-medium text-foreground mb-2">
                  Full Name <span class="text-red-500">*</span>
                </label>
                <input
                  type="text"
                  id="name"
                  name="name"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="John Doe"
                />
              </div>

              <!-- Email -->
              <div>
                <label for="email" class="block text-sm font-medium text-foreground mb-2">
                  Email Address <span class="text-red-500">*</span>
                </label>
                <input
                  type="email"
                  id="email"
                  name="email"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="john@example.com"
                />
              </div>

              <!-- Phone (optional) -->
              <div>
                <label for="phone" class="block text-sm font-medium text-foreground mb-2">
                  Phone Number
                </label>
                <input
                  type="tel"
                  id="phone"
                  name="phone"
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                  placeholder="(512) 555-0100"
                />
              </div>

              <!-- Subject -->
              <div>
                <label for="subject" class="block text-sm font-medium text-foreground mb-2">
                  Subject <span class="text-red-500">*</span>
                </label>
                <select
                  id="subject"
                  name="subject"
                  required
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent"
                >
                  <option value="">Select a subject</option>
                  <option value="general">General Inquiry</option>
                  <option value="business">For Businesses (Finding a Lobbyist)</option>
                  <option value="lobbyist">For Lobbyists (Claiming Profile)</option>
                  <option value="technical">Technical Support</option>
                  <option value="partnership">Partnership Opportunities</option>
                  <option value="press">Press & Media</option>
                  <option value="other">Other</option>
                </select>
              </div>

              <!-- Message -->
              <div>
                <label for="message" class="block text-sm font-medium text-foreground mb-2">
                  Message <span class="text-red-500">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  required
                  rows="6"
                  class="w-full px-4 py-2.5 rounded-md border border-border focus:outline-none focus:ring-2 focus:ring-texas-blue-500 focus:border-transparent resize-none"
                  placeholder="Tell us how we can help you..."
                ></textarea>
              </div>

              <!-- Submit Button -->
              <div>
                <button
                  type="submit"
                  class="w-full inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-600 transition-colors"
                >
                  Send Message
                </button>
              </div>

              <p class="text-sm text-muted-foreground text-center">
                We typically respond within 1-2 business days.
              </p>
            </form>
          </div>
        </div>

        <!-- Contact Info Sidebar -->
        <div class="lg:col-span-1 space-y-6">
          <!-- Contact Information -->
          <div class="bg-white rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold mb-4">Contact Information</h3>
            <div class="space-y-4">
              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100 flex-shrink-0">
                  <Mail className="h-5 w-5 text-texas-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-sm mb-1">Email</h4>
                  <a href="mailto:contact@texaslobby.org" class="text-sm text-texas-blue-500 hover:underline">
                    contact@texaslobby.org
                  </a>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100 flex-shrink-0">
                  <MapPin className="h-5 w-5 text-texas-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-sm mb-1">Location</h4>
                  <p class="text-sm text-muted-foreground">
                    Austin, Texas<br />
                    United States
                  </p>
                </div>
              </div>

              <div class="flex items-start gap-3">
                <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100 flex-shrink-0">
                  <Clock className="h-5 w-5 text-texas-blue-600" />
                </div>
                <div>
                  <h4 class="font-medium text-sm mb-1">Business Hours</h4>
                  <p class="text-sm text-muted-foreground">
                    Monday - Friday<br />
                    9:00 AM - 5:00 PM CST
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Links -->
          <div class="bg-white rounded-lg border border-border p-6">
            <h3 class="text-lg font-semibold mb-4">Quick Links</h3>
            <div class="space-y-3">
              <a href="/how-it-works" class="block text-sm text-texas-blue-500 hover:underline">
                How It Works
              </a>
              <a href="/for-lobbyists" class="block text-sm text-texas-blue-500 hover:underline">
                For Lobbyists
              </a>
              <a href="/pricing" class="block text-sm text-texas-blue-500 hover:underline">
                Pricing & Plans
              </a>
              <a href="/guides" class="block text-sm text-texas-blue-500 hover:underline">
                Guides & Resources
              </a>
            </div>
          </div>

          <!-- FAQ CTA -->
          <div class="bg-texas-blue-500/5 rounded-lg border border-texas-blue-500/20 p-6">
            <h3 class="text-lg font-semibold mb-2">Have a Question?</h3>
            <p class="text-sm text-muted-foreground mb-4">
              Check our guides section for answers to common questions about working with lobbyists in Texas.
            </p>
            <a
              href="/guides"
              class="inline-flex items-center text-sm font-medium text-texas-blue-500 hover:underline"
            >
              Browse Guides
              <svg class="ml-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>
