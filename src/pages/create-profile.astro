---
import Layout from '@/components/astro/Layout.astro';
import CreateProfileForm from '@/components/react/CreateProfileForm';
import { createServerClient } from '@/lib/supabase';

// Check if user is authenticated (from middleware)
const user = Astro.locals.user;

// If user is authenticated, check if they already have a profile
let existingProfile = false;
let rejectedWithMaxAttempts = false;
let rejectionCount = 0;

if (user) {
  const serverClient = createServerClient();
  const { data } = await serverClient
    .from('lobbyists')
    .select('id, slug, is_pending, is_rejected, rejection_count, is_active')
    .or(`user_id.eq.${user.id},claimed_by.eq.${user.id}`)
    .single();

  if (data) {
    // Check if user has rejected profile with max attempts
    if (data.is_rejected && (data.rejection_count || 0) >= 3) {
      rejectedWithMaxAttempts = true;
      rejectionCount = data.rejection_count || 0;
    }
    // Check if profile is pending or rejected (but still within attempts)
    else if (data.is_pending || (data.is_rejected && (data.rejection_count || 0) < 3)) {
      // Redirect to dashboard if pending or rejected (they should use resubmit flow)
      return Astro.redirect('/dashboard');
    }
    // If profile is approved and active
    else if (data.is_active) {
      // Profile is approved, redirect to it
      return Astro.redirect(`/lobbyists/${data.slug}`);
    }
  }
}

// SEO-optimized title (55-60 chars) and description (155-160 chars)
const pageTitle = 'Create Lobbyist Profile | Join TexasLobby Directory';
const pageDescription = 'Create your Texas lobbyist profile on TexasLobby.org. Get discovered by businesses, showcase expertise, connect with clients. Reviewed within 24-48 hours.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Create Profile Page -->
  <section class="py-16 min-h-[calc(100vh-4rem)]">
    <div class="container max-w-4xl">
      <!-- Header -->
      <div class="text-center mb-12">
        <h1 class="text-3xl md:text-4xl font-bold mb-4">Create Your Lobbyist Profile</h1>
        <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
          New to Texas lobbying or not yet in our database? Create your profile and we'll review it for approval.
        </p>
      </div>

      {rejectedWithMaxAttempts ? (
        <!-- Max Attempts Reached - Contact Support -->
        <div class="rounded-lg border-2 border-red-300 bg-red-50 p-8 text-center">
          <div class="mb-4">
            <svg
              class="mx-auto h-12 w-12 text-red-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
              />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-red-900 mb-3">Maximum Submission Attempts Reached</h3>
          <p class="text-red-800 mb-4">
            You've reached the maximum number of profile submission attempts ({rejectionCount} of 3).
          </p>
          <p class="text-red-700 mb-6">
            Our support team is here to help you get your profile approved. Please contact us for personalized assistance with your submission.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 justify-center">
            <a
              href="/contact"
              class="inline-flex items-center justify-center gap-2 rounded-md bg-red-600 px-6 py-3 text-base font-medium text-white hover:bg-red-700 transition-colors"
            >
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              Contact Support Team
            </a>
            <a
              href="/dashboard"
              class="inline-flex items-center justify-center rounded-md border border-border bg-white px-6 py-3 text-base font-medium hover:bg-accent transition-colors"
            >
              Return to Dashboard
            </a>
          </div>
        </div>
      ) : existingProfile ? (
        <!-- Already Has Pending Profile -->
        <div class="rounded-lg border-2 border-yellow-200 bg-yellow-50 p-8 text-center">
          <div class="mb-4">
            <svg
              class="mx-auto h-12 w-12 text-yellow-600"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                strokeLinecap="round"
                strokeLinejoin="round"
                strokeWidth={2}
                d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
              />
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-yellow-900 mb-2">Profile Under Review</h3>
          <p class="text-yellow-700 mb-6">
            Your profile has been submitted and is currently under review by our team. We'll email you once it's approved, typically within 24-48 hours.
          </p>
          <a
            href="/dashboard"
            class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-600 transition-colors"
          >
            Go to Dashboard
          </a>
        </div>
      ) : !user ? (
        <!-- Not Logged In -->
        <div class="space-y-8">
          <!-- Primary Action: Create New Profile -->
          <div class="rounded-lg border-2 border-texas-blue-300 bg-gradient-to-br from-texas-blue-50 to-white p-8">
            <div class="flex items-start gap-4 mb-6">
              <div class="flex-shrink-0">
                <svg class="h-12 w-12 text-texas-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                </svg>
              </div>
              <div class="flex-1">
                <h2 class="text-2xl font-bold mb-2">Create New Lobbyist Profile</h2>
                <p class="text-muted-foreground mb-6">
                  Not yet in our directory? Create your profile and we'll review it within 24-48 hours.
                </p>

                <!-- Benefits -->
                <div class="grid sm:grid-cols-3 gap-4 mb-6">
                  <div class="flex items-start gap-2">
                    <svg class="h-5 w-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm">24-48 hour review</span>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg class="h-5 w-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm">Free forever</span>
                  </div>
                  <div class="flex items-start gap-2">
                    <svg class="h-5 w-5 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="text-sm">Full control</span>
                  </div>
                </div>

                <!-- Single Clear CTA -->
                <div class="space-y-3">
                  <a
                    href="/login?redirect=/create-profile"
                    class="block w-full sm:w-auto text-center sm:inline-flex items-center justify-center rounded-md bg-texas-blue-600 px-8 py-3.5 text-base font-semibold text-white hover:bg-texas-blue-700 transition-all shadow-md hover:shadow-lg"
                  >
                    Sign In to Create Profile
                  </a>
                  <p class="text-sm text-muted-foreground">
                    Don't have an account yet? <a href="/signup?redirect=/create-profile" class="text-texas-blue-600 hover:underline font-medium">Create one now →</a>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Secondary Option: Claim Existing -->
          <div class="relative">
            <div class="absolute inset-0 flex items-center" aria-hidden="true">
              <div class="w-full border-t border-gray-300"></div>
            </div>
            <div class="relative flex justify-center text-sm">
              <span class="px-4 bg-white text-gray-500 font-medium">OR</span>
            </div>
          </div>

          <div class="rounded-lg border border-gray-300 bg-gray-50 p-6">
            <div class="flex items-start gap-4">
              <div class="flex-shrink-0">
                <svg class="h-10 w-10 text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold mb-2">Already in Our Directory?</h3>
                <p class="text-sm text-muted-foreground mb-4">
                  If you're registered with the Texas Ethics Commission, you likely have an existing profile. Claim it for instant access.
                </p>
                <a
                  href="/claim-profile"
                  class="inline-flex items-center text-sm font-medium text-texas-blue-600 hover:text-texas-blue-700"
                >
                  Claim Existing Profile →
                </a>
              </div>
            </div>
          </div>
        </div>
      ) : (
        <!-- Logged In - Show Create Form -->
        <div class="space-y-8">
          <!-- Info Alert -->
          <div class="rounded-lg border border-blue-200 bg-blue-50 p-6">
            <div class="flex gap-3">
              <svg class="h-6 w-6 text-blue-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"></path>
              </svg>
              <div>
                <h3 class="font-semibold text-blue-900 mb-1">Profile Review Process</h3>
                <p class="text-sm text-blue-800">
                  New profiles are reviewed by our team to ensure quality and accuracy. This typically takes 24-48 hours. You'll receive an email once your profile is approved and live.
                </p>
              </div>
            </div>
          </div>

          <!-- Create Form -->
          <div class="rounded-lg border border-border bg-white p-8">
            <CreateProfileForm
              client:load
              userId={user.id}
              userEmail={user.email || undefined}
              userFirstName={user.first_name || undefined}
              userLastName={user.last_name || undefined}
            />
          </div>
        </div>
      )}

    </div>
  </section>
</Layout>
