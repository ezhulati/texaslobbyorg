      <!-- Duplicate Profiles Detected Banner -->
      {duplicates && duplicates.length > 0 && !pendingMerge && (
        <div class="mb-8 rounded-lg border-2 border-purple-200 bg-purple-50 p-6">
          <div class="flex gap-4">
