---
import Layout from '@/components/astro/Layout.astro';
import { supabase } from '@/lib/supabase';
import { createServerClient } from '@/lib/supabase';
import { getUserRole } from '@/lib/auth';

// Check if user is authenticated (from middleware)
const user = Astro.locals.user;

if (!user) {
  // Not authenticated, redirect to login
  return Astro.redirect('/login?redirect=/dashboard');
}

// Get user's role to determine dashboard type
const userRole = await getUserRole(user.id);

// Redirect admins to admin dashboard
if (userRole === 'admin') {
  return Astro.redirect('/admin');
}

// Fetch user data from users table for searcher dashboard
const serverClient = createServerClient();
const { data: userData } = await serverClient
  .from('users')
  .select('*, cancel_at_period_end, subscription_current_period_end')
  .eq('id', user.id)
  .single();

// Store cancellation data
const cancelAtPeriodEnd = userData?.cancel_at_period_end ?? false;
const periodEnd = userData?.subscription_current_period_end
  ? new Date(userData.subscription_current_period_end)
  : null;

// Fetch user's lobbyist profile if they have one
// Check both user_id (created profiles) and claimed_by (claimed profiles)
const { data: lobbyist, error: lobbyistError } = await serverClient
  .from('lobbyists')
  .select('*')
  .or(`user_id.eq.${user.id},claimed_by.eq.${user.id}`)
  .maybeSingle(); // Use maybeSingle() to handle 0 or 1 results gracefully

// Log error for debugging
if (lobbyistError) {
  console.error('Error fetching lobbyist profile:', lobbyistError);
}

// Check if subscription is cancelled but still active (after lobbyist is loaded)
const isCancelledButActive = cancelAtPeriodEnd && lobbyist?.subscription_tier !== 'free' && periodEnd && periodEnd > new Date();

// Check for pending role upgrade request (for searchers)
let pendingRoleUpgrade = null;
if (userRole === 'searcher') {
  const { data: upgrade } = await serverClient
    .from('role_upgrade_requests')
    .select('*')
    .eq('user_id', user.id)
    .eq('status', 'pending')
    .single();
  pendingRoleUpgrade = upgrade;
}

// Lobbyist-specific data (only load if user has a profile)
let isPending = false;
let isActive = false;
let isClaimed = false;
let isRejected = false;
let rejectionReason = '';
let rejectionCategory = '';
let rejectionCount = 0;
let canResubmit = false;
let duplicates = [];
let pendingMerge = null;

if (lobbyist) {
  // Check profile status for conditional rendering
  isPending = lobbyist.is_pending === true;
  isActive = lobbyist.is_active === true;
  isClaimed = lobbyist.is_claimed === true;
  isRejected = lobbyist.is_rejected === true;
  rejectionReason = lobbyist.rejection_reason || '';
  rejectionCategory = lobbyist.rejection_category || '';
  rejectionCount = lobbyist.rejection_count || 0;

  // Check if user can resubmit (using database helper function)
  if (isRejected) {
    const { data: canResubmitResult } = await serverClient.rpc('can_user_resubmit', {
      lobbyist_uuid: lobbyist.id
    });
    canResubmit = canResubmitResult === true;
  }

  // Check for duplicate profiles using fuzzy matching
  const { data: potentialDuplicates } = await serverClient.rpc('find_potential_duplicates', {
    p_first_name: lobbyist.first_name,
    p_last_name: lobbyist.last_name,
    p_email: user.email
  });

  // Filter out the current profile and only show high-confidence matches
  duplicates = potentialDuplicates?.filter((d: any) =>
    d.id !== lobbyist.id &&
    d.similarity_score > 0.7 &&
    !d.deleted_at
  ) || [];

  // Check if user already has a pending merge request
  const { data: merge } = await serverClient
    .from('account_merge_requests')
    .select('id')
    .eq('user_id', user.id)
    .eq('status', 'pending')
    .single();
  pendingMerge = merge;
}

// SEO
const pageTitle = 'Lobbyist Dashboard | TexasLobby.org';
const pageDescription = 'Manage your Texas lobbyist profile, update information, and track engagement.';
