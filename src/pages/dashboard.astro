---
import Layout from '@/components/astro/Layout.astro';
import { getCurrentUser } from '@/lib/auth';
import { Button } from '@/components/ui/button';

// Require authentication
const user = await getCurrentUser();

if (!user) {
  return Astro.redirect('/login');
}

const pageTitle = 'Dashboard';
const pageDescription = 'Manage your TexasLobby.org account and profile.';
---

<Layout title={pageTitle} description={pageDescription}>
  <section class="py-16 min-h-[calc(100vh-4rem)]">
    <div class="container max-w-4xl">
      <!-- Header -->
      <div class="mb-8">
        <h1 class="text-3xl md:text-4xl font-bold mb-2">Welcome to Your Dashboard</h1>
        <p class="text-lg text-muted-foreground">
          Manage your profile and account settings
        </p>
      </div>

      <!-- User Info Card -->
      <div class="rounded-lg border border-border bg-white p-6 shadow-sm mb-6">
        <h2 class="text-xl font-semibold mb-4">Account Information</h2>
        <div class="space-y-3">
          <div>
            <span class="text-sm font-medium text-muted-foreground">Email:</span>
            <p class="text-base">{user.email}</p>
          </div>
          {user.user_metadata?.full_name && (
            <div>
              <span class="text-sm font-medium text-muted-foreground">Name:</span>
              <p class="text-base">{user.user_metadata.full_name}</p>
            </div>
          )}
          <div>
            <span class="text-sm font-medium text-muted-foreground">Account ID:</span>
            <p class="text-xs font-mono text-muted-foreground">{user.id}</p>
          </div>
        </div>
      </div>

      <!-- Quick Actions -->
      <div class="rounded-lg border border-border bg-white p-6 shadow-sm mb-6">
        <h2 class="text-xl font-semibold mb-4">Quick Actions</h2>
        <div class="grid gap-4 md:grid-cols-2">
          <a
            href="/lobbyists"
            class="flex flex-col p-4 rounded-lg border border-border hover:border-texas-blue-500 hover:bg-texas-blue-50 transition-colors"
          >
            <h3 class="font-semibold mb-1">Browse Lobbyists</h3>
            <p class="text-sm text-muted-foreground">Find and connect with Texas lobbyists</p>
          </a>

          <a
            href="/claim-profile"
            class="flex flex-col p-4 rounded-lg border border-border hover:border-texas-blue-500 hover:bg-texas-blue-50 transition-colors"
          >
            <h3 class="font-semibold mb-1">Claim Your Profile</h3>
            <p class="text-sm text-muted-foreground">Are you a registered lobbyist? Claim your profile</p>
          </a>
        </div>
      </div>

      <!-- Sign Out -->
      <div class="rounded-lg border border-border bg-white p-6 shadow-sm">
        <h2 class="text-xl font-semibold mb-4">Account Actions</h2>
        <form method="POST" action="/api/auth/signout">
          <Button type="submit" variant="outline" class="text-red-600 hover:text-red-700 hover:bg-red-50">
            Sign Out
          </Button>
        </form>
      </div>
    </div>
  </section>
</Layout>
