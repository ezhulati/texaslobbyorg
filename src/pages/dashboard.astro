  <!-- Searcher Dashboard -->
  {userRole === 'searcher' && !lobbyist && (
    <section class="py-8 min-h-[calc(100vh-4rem)]">
      <div class="container max-w-5xl">
        <!-- Header -->
        <div class="mb-8">
          <h1 class="text-3xl md:text-4xl font-bold mb-2">Dashboard</h1>
