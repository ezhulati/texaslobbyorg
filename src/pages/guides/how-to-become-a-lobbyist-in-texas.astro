---
import Layout from '@/components/astro/Layout.astro';
import { supabase } from '@/lib/supabase';

// Fetch real data
const { data: lobbyists } = await supabase
  .from('lobbyists')
  .select('*')
  .eq('is_active', true);

const totalLobbyists = lobbyists?.length || 0;
const claimedCount = lobbyists?.filter(l => l.is_claimed).length || 0;

// Calculate average subjects per lobbyist
const avgSubjects = lobbyists && lobbyists.length > 0
  ? (lobbyists.reduce((sum, l) => sum + (l.subject_areas?.length || 0), 0) / lobbyists.length).toFixed(1)
  : '0';

const pageTitle = 'How to Become a Lobbyist in Texas: Complete Career Guide 2025';
const pageDescription = 'Step-by-step guide to starting a lobbying career in Texas. Registration requirements, education paths, building your network, getting clients, and what you can realistically earn. No law degree required.';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'HowTo',
  name: 'How to Become a Lobbyist in Texas',
  description: pageDescription,
  step: [
    { '@type': 'HowToStep', name: 'Get relevant education', text: 'Earn a bachelor\'s degree in political science, law, public relations, or related field' },
    { '@type': 'HowToStep', name: 'Gain political experience', text: 'Work on campaigns, intern at the Capitol, or work in government' },
    { '@type': 'HowToStep', name: 'Build your network', text: 'Develop relationships with legislators, staffers, and industry contacts' },
    { '@type': 'HowToStep', name: 'Register with Texas Ethics Commission', text: 'File registration when you meet compensation thresholds' },
    { '@type': 'HowToStep', name: 'Get your first client', text: 'Leverage relationships and demonstrate value' },
    { '@type': 'HowToStep', name: 'Establish your professional presence', text: 'Claim your profile and build credibility' }
  ]
};
