---
import Layout from '@/components/astro/Layout.astro';
import { supabase } from '@/lib/supabase';

// Fetch some real data to make the guide more credible
const { data: lobbyists } = await supabase
  .from('lobbyists')
  .select('*')
  .eq('is_active', true);

const totalLobbyists = lobbyists?.length || 0;
const claimedCount = lobbyists?.filter(l => l.is_claimed).length || 0;

const pageTitle = 'How to Hire a Lobbyist in Texas: Complete 2025 Guide';
const pageDescription = 'Everything you need to know about hiring a lobbyist in Texas. From finding the right advocate to understanding costs, contracts, and measuring success. Expert guidance for businesses, nonprofits, and organizations.';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'HowTo',
  name: 'How to Hire a Lobbyist in Texas',
  description: pageDescription,
  step: [
    { '@type': 'HowToStep', name: 'Determine if you need a lobbyist', text: 'Assess your legislative or regulatory needs' },
    { '@type': 'HowToStep', name: 'Define your goals and budget', text: 'Set clear objectives and financial parameters' },
    { '@type': 'HowToStep', name: 'Research potential lobbyists', text: 'Find lobbyists with relevant expertise and connections' },
    { '@type': 'HowToStep', name: 'Interview candidates', text: 'Ask the right questions to evaluate fit' },
    { '@type': 'HowToStep', name: 'Check references and track record', text: 'Verify experience and past results' },
    { '@type': 'HowToStep', name: 'Negotiate contract terms', text: 'Agree on scope, deliverables, and compensation' },
    { '@type': 'HowToStep', name: 'Establish communication protocols', text: 'Set expectations for updates and reporting' },
    { '@type': 'HowToStep', name: 'Monitor progress and results', text: 'Track outcomes and measure ROI' }
  ]
};
