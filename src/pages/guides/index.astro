---
import Layout from '@/components/astro/Layout.astro';

const guides = {
  'For Businesses': [
    {
      title: 'When Should Your Business Hire a Lobbyist?',
      description: 'The 7 warning signals, cost of waiting vs. hiring early, and how to know if you\'re already too late. Timing determines success more than money.',
      href: '/guides/when-should-your-business-hire-a-lobbyist',
      readTime: '18 min',
      difficulty: 'Beginner'
    },
    {
      title: 'How to Hire a Lobbyist in Texas',
      description: 'Complete guide to finding, evaluating, and working with professional advocates. From vetting candidates to measuring success.',
      href: '/guides/how-to-hire-a-lobbyist-in-texas',
      readTime: '15 min',
      difficulty: 'Beginner'
    },
    {
      title: 'How to Work Effectively with Your Lobbyist',
      description: 'Maximize your lobbying investment: setting expectations, communication best practices, measuring success, and knowing when the relationship isn\'t working.',
      href: '/guides/how-to-work-effectively-with-your-lobbyist',
      readTime: '22 min',
      difficulty: 'Intermediate'
    },
    {
      title: 'How Much Does a Lobbyist Cost?',
      description: 'Understand lobbying fees, retainer structures, expenses, and how to budget for political representation in Texas.',
      href: '/guides/how-much-does-a-lobbyist-cost',
      readTime: '8 min',
      difficulty: 'Beginner'
    },
  ],
  'For Lobbyists': [
    {
      title: 'How to Become a Lobbyist in Texas',
      description: 'Career guide covering registration, ethics compliance, building a practice, and succeeding in Texas government relations.',
      href: '/guides/how-to-become-a-lobbyist-in-texas',
      readTime: '12 min',
      difficulty: 'Beginner'
    },
    {
      title: 'How to Win Your First Lobbying Clients in Texas',
      description: 'Insider strategies for new lobbyists - where clients come from, how to price your services, and which first clients set you up for success.',
      href: '/guides/how-to-win-first-lobbying-clients-texas',
      readTime: '15 min',
      difficulty: 'Intermediate'
    },
  ],
  'Understanding Lobbying': [
    {
      title: 'What Does a Lobbyist Do?',
      description: 'Demystifying the lobbying profession: daily activities, skills required, and how lobbyists actually influence policy.',
      href: '/guides/what-does-a-lobbyist-do',
      readTime: '10 min',
      difficulty: 'Beginner'
    },
    {
      title: 'How Laws Actually Get Made in Texas (Beyond the Textbook Version)',
      description: 'The gap between civics class and Capitol reality: committee politics, staff power, calendar games, and where lobbyists add value.',
      href: '/guides/how-laws-get-made-in-texas',
      readTime: '22 min',
      difficulty: 'Intermediate'
    },
    {
      title: 'How to Read a Bill and Track It Through the Texas Legislature',
      description: 'Step-by-step guide to understanding bill text, tracking legislation on capitol.texas.gov, and knowing when a bill is moving, stalled, or dead.',
      href: '/guides/how-to-read-track-texas-bills',
      readTime: '12 min',
      difficulty: 'Beginner'
    },
    {
      title: 'Understanding Texas Legislative Deadlines (And Why They Matter)',
      description: 'The 140-day session, bill filing deadlines, committee kill points, and why "we\'ll fix it next session" means waiting 2+ years.',
      href: '/guides/understanding-texas-legislative-deadlines',
      readTime: '14 min',
      difficulty: 'Beginner'
    },
  ],
};

const pageTitle = 'Texas Lobbying Guides | How-To Resources for Businesses & Lobbyists';
const pageDescription = 'Comprehensive guides on hiring lobbyists, understanding costs, navigating Texas politics, and building a lobbying career. Expert advice for businesses and advocates.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero -->
  <section class="bg-gradient-to-b from-texas-blue-500/10 to-background py-16 border-b border-border">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center rounded-full bg-texas-blue-500/10 px-4 py-2 text-sm font-medium text-texas-blue-700 mb-6">
          How-To Guides
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Texas Lobbying Guides
        </h1>
        <p class="text-xl text-muted-foreground">
          Comprehensive, step-by-step resources to help you navigate Texas politics, hire the right advocates, and build effective government relations strategies
        </p>
      </div>
    </div>
  </section>

  <!-- Guides by Category -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        {Object.entries(guides).map(([category, categoryGuides]) => (
          <div class="mb-16 last:mb-0">
            <h2 class="text-3xl font-bold mb-8">{category}</h2>
            <div class="grid md:grid-cols-2 gap-6">
              {categoryGuides.map((guide) => (
                <a
                  href={guide.href}
                  class="group bg-white rounded-lg border border-border p-8 hover:border-texas-blue-500 hover:shadow-lg transition-all"
                >
                  <div class="flex items-start justify-between mb-4">
                    <div class="flex-1">
                      <h3 class="text-xl font-bold mb-2 group-hover:text-texas-blue-500 transition-colors">
                        {guide.title}
                      </h3>
                    </div>
                    <svg
                      class="h-6 w-6 text-muted-foreground group-hover:text-texas-blue-500 transition-colors flex-shrink-0 ml-4"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </div>

                  <p class="text-muted-foreground mb-4">
                    {guide.description}
                  </p>

                  <div class="flex items-center gap-4 text-sm text-muted-foreground pt-4 border-t border-border">
                    <div class="flex items-center gap-2">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                      </svg>
                      {guide.readTime}
                    </div>
                    <div class="flex items-center gap-2">
                      <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                      </svg>
                      {guide.difficulty}
                    </div>
                  </div>
                </a>
              ))}
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gradient-to-br from-texas-blue-500 to-texas-blue-600 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Ready to Put These Guides Into Action?</h2>
        <p class="text-xl text-blue-50 mb-8">
          Browse 1,600+ Texas lobbyists and find the right advocate for your needs
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/lobbyists"
            class="inline-flex items-center justify-center rounded-md bg-white px-8 py-4 text-lg font-medium text-texas-blue-600 hover:bg-gray-100 transition-colors"
          >
            Find a Lobbyist
          </a>
          <a
            href="/blog"
            class="inline-flex items-center justify-center rounded-md border-2 border-white px-8 py-4 text-lg font-medium text-white hover:bg-white/10 transition-colors"
          >
            Read Our Blog
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
