---
import Layout from '@/components/astro/Layout.astro';
import { supabase } from '@/lib/supabase';
import { Clock, Users, FileText, MessageCircle, TrendingUp, AlertCircle, CheckCircle, XCircle } from 'lucide-react';

// Fetch some real data
const { data: lobbyists, error } = await supabase
  .from('lobbyists')
  .select('subscription_tier, is_claimed, subject_areas')
  .eq('is_active', true);

const totalLobbyists = lobbyists?.length || 0;

// Get most common subject areas
const subjectCounts = lobbyists?.reduce((acc, l) => {
  l.subject_areas?.forEach((subject: string) => {
    acc[subject] = (acc[subject] || 0) + 1;
  });
  return acc;
}, {} as Record<string, number>) || {};

const topSubjects = Object.entries(subjectCounts)
  .sort(([, a], [, b]) => b - a)
  .slice(0, 5)
  .map(([subject]) => subject);

const pageTitle = 'What Does a Lobbyist Actually Do? Texas Lobbying 101';
const pageDescription = 'The real story: what lobbyists do all day, common misconceptions debunked, different types of lobbyists, ethics and legal limits, and how the profession actually works in Texas.';

const schema = {
  '@context': 'https://schema.org',
  '@type': 'Article',
  headline: pageTitle,
  description: pageDescription,
  author: {
    '@type': 'Organization',
    name: 'TexasLobby.org',
  },
  publisher: {
    '@type': 'Organization',
    name: 'TexasLobby.org',
    logo: {
      '@type': 'ImageObject',
      url: 'https://texaslobby.org/logo.png',
    },
  },
  datePublished: '2025-01-06',
  dateModified: '2025-01-06',
};
---

<Layout title={pageTitle} description={pageDescription} schema={schema}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-texas-blue-50 via-white to-background py-20 lg:py-28 border-b border-border">
    <div class="container max-w-3xl">
      <div class="mb-8">
        <a
          href="/guides"
          class="inline-flex items-center text-sm font-medium text-texas-blue-600 hover:text-texas-blue-700 transition-colors group"
        >
          <svg class="w-4 h-4 mr-2 transition-transform group-hover:-translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
          </svg>
          Back to all guides
        </a>
      </div>

      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight tracking-tight">
        What Does a Lobbyist Actually Do?
      </h1>

      <p class="text-xl md:text-2xl text-muted-foreground mb-10 leading-relaxed">
        Let's clear up the mystery. Here's what Texas lobbyists <em>really</em> do all day,
        the myths that need busting, and why the profession is more important (and less shady) than you think.
      </p>

      <div class="flex flex-wrap gap-6 text-sm text-muted-foreground border-t border-border pt-6">
        <div class="flex items-center gap-2">
          <Clock className="h-5 w-5 text-texas-blue-500" />
          <span class="font-medium">12 min read</span>
        </div>
        <div class="flex items-center gap-2">
          <Users className="h-5 w-5 text-texas-blue-500" />
          <span class="font-medium">{totalLobbyists.toLocaleString()} active Texas lobbyists</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Table of Contents -->
  <section class="py-12 bg-gradient-to-b from-muted/20 to-background border-b border-border">
    <div class="container">
      <div class="max-w-3xl mx-auto">
        <div class="bg-white rounded-2xl border border-border shadow-sm p-8 lg:p-10">
          <h2 class="text-lg font-bold mb-6 text-foreground">What You'll Learn</h2>
          <nav class="grid md:grid-cols-2 gap-x-8 gap-y-3">
            <a href="#simple-answer" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">The Simple Answer</span>
            </a>
            <a href="#myths" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">6 Myths Debunked</span>
            </a>
            <a href="#day-in-life" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">A Day in the Life</span>
            </a>
            <a href="#types" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">Three Types of Lobbyists</span>
            </a>
            <a href="#skills" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">Real Skills for Success</span>
            </a>
            <a href="#ethics" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">Ethics and Legal Limits</span>
            </a>
            <a href="#tools" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">Tools of the Trade</span>
            </a>
            <a href="#success-stories" class="group flex items-start gap-2 text-sm font-medium text-muted-foreground hover:text-texas-blue-600 transition-colors">
              <span class="text-texas-blue-500 mt-0.5">‚Üí</span>
              <span class="group-hover:translate-x-1 transition-transform">What Success Looks Like</span>
            </a>
          </nav>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <article class="py-20 lg:py-24">
    <div class="container">
      <div class="max-w-3xl mx-auto article-content">

        <!-- Simple Answer -->
        <div id="simple-answer" class="not-prose scroll-mt-24">
          <h2 class="text-3xl font-bold mb-6">The Simple Answer</h2>
        </div>

        <p class="lead">
          <strong>A lobbyist is a professional advocate who represents clients' interests in front of government officials.</strong>
          They provide information, expertise, and strategic advice to help shape legislation, regulations, and
          public policy in ways that benefit their clients.
        </p>

        <p>
          Think of lobbyists as translators between two worlds: the complex world of business, nonprofits, or
          special interests, and the equally complex world of government. They speak both languages fluently.
        </p>

        <div class="not-prose my-8 bg-blue-50 border border-blue-200 rounded-lg p-6">
          <h3 class="text-lg font-semibold text-blue-900 mb-3">The Four Core Jobs</h3>
          <div class="grid md:grid-cols-2 gap-4">
            <div class="bg-white rounded-lg p-4">
              <div class="flex items-start gap-3">
                <FileText className="h-5 w-5 text-blue-600 flex-shrink-0 mt-1" />
                <div>
                  <div class="font-semibold text-blue-900 mb-1">1. Monitor & Alert</div>
                  <p class="text-sm text-blue-800">Track thousands of bills, flag the ones that affect clients</p>
                </div>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <div class="flex items-start gap-3">
                <MessageCircle className="h-5 w-5 text-blue-600 flex-shrink-0 mt-1" />
                <div>
                  <div class="font-semibold text-blue-900 mb-1">2. Educate & Inform</div>
                  <p class="text-sm text-blue-800">Explain complex issues to legislators and staff</p>
                </div>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <div class="flex items-start gap-3">
                <Users className="h-5 w-5 text-blue-600 flex-shrink-0 mt-1" />
                <div>
                  <div class="font-semibold text-blue-900 mb-1">3. Build Relationships</div>
                  <p class="text-sm text-blue-800">Develop trust and access with key decision-makers</p>
                </div>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <div class="flex items-start gap-3">
                <TrendingUp className="h-5 w-5 text-blue-600 flex-shrink-0 mt-1" />
                <div>
                  <div class="font-semibold text-blue-900 mb-1">4. Strategize & Execute</div>
                  <p class="text-sm text-blue-800">Plan campaigns to pass, kill, or amend legislation</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Myths -->
        <div id="myths" class="not-prose scroll-mt-24">
          <h2 class="text-3xl font-bold mb-6 mt-20">6 Myths About Lobbyists (Debunked)</h2>
        </div>

        <p>
          Let's be honest: lobbyists have a bad reputation. Some of it is deserved, but most of it is based on
          misconceptions. Here's what people get wrong:
        </p>

        <!-- Myth 1 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #1: "Lobbyists are all wealthy fat cats"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> While some top lobbyists earn six figures, many make modest salaries.
                  Entry-level lobbyists might start at $40K-$50K. The image of every lobbyist as a wealthy insider
                  is just not accurate‚Äîplenty work long hours for middle-class pay.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                One former lobbyist in DC reported earning just $32,000 in their first lobbying job after graduate
                school. In Texas, average lobbyist salaries are around $47,000 annually.
              </p>
            </div>
          </div>
        </div>

        <!-- Myth 2 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #2: "Lobbyists only represent big corporations"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> Look at the {totalLobbyists.toLocaleString()} active Texas lobbyists. They represent churches,
                  hospitals, universities, environmental groups, patient advocacy organizations, small business
                  associations, and yes‚Äîcorporations too. Anyone with an interest in public policy can hire a lobbyist.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                <strong>Top subject areas in Texas right now:</strong> {topSubjects.slice(0, 3).join(', ')}.
                That's hardly just "corporate interests."
              </p>
            </div>
          </div>
        </div>

        <!-- Myth 3 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #3: "Lobbyists buy votes with campaign contributions"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> This is probably the biggest misconception. Campaign contributions buy
                  <em>access</em>, not votes. A donation gets you a meeting; what you do in that meeting determines
                  whether you win or lose. Plenty of well-funded interests lose fights, and grassroots groups with no
                  money win them.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                <strong>The truth:</strong> Legislators care about three things more than money: (1) what their constituents
                want, (2) what their party leadership wants, and (3) what they personally believe is right. Money is just
                the entry fee to make your case‚Äîit doesn't guarantee results.
              </p>
            </div>
          </div>
        </div>

        <!-- Myth 4 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #4: "Lobbyists don't contribute anything valuable"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> Legislators deal with thousands of bills every session. They can't possibly
                  be experts on everything from healthcare to agriculture to cryptocurrency. Lobbyists provide specialized
                  expertise and real-world impact analysis that helps legislators make informed decisions.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                <strong>Example:</strong> When Texas considered regulating ride-sharing apps in 2015, legislators
                heard from lobbyists representing Uber, taxi companies, cities, disability advocates, and insurance
                companies. Each provided different perspectives and data. The resulting law balanced all those interests‚Äî
                imperfectly, but better than if legislators had tried to figure it all out themselves.
              </p>
            </div>
          </div>
        </div>

        <!-- Myth 5 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #5: "Lobbying is all about fancy dinners and golf outings"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> Sure, relationship building happens over meals and events. But 90% of
                  lobbying is unglamorous: reading bills, tracking amendments, sitting in committee hearings,
                  writing policy briefs, coordinating coalitions, and sending hundreds of emails.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                <strong>A more accurate picture:</strong> For every fancy dinner, there are 10 hours of bill analysis,
                5 conference calls with clients, 3 coalition meetings, and 50+ emails to legislative staff.
              </p>
            </div>
          </div>
        </div>

        <!-- Myth 6 -->
        <div class="not-prose my-8">
          <div class="bg-red-50 border-2 border-red-200 rounded-lg p-6">
            <div class="flex items-start gap-4 mb-4">
              <div class="bg-red-100 rounded-full p-3 flex-shrink-0">
                <XCircle className="h-6 w-6 text-red-700" />
              </div>
              <div class="flex-1">
                <h3 class="text-xl font-bold text-red-900 mb-2">Myth #6: "Lobbying is only about legislation"</h3>
                <p class="text-red-800 mb-3">
                  <strong>Reality:</strong> Most lobbying in Texas actually happens <em>between</em> legislative sessions.
                  Lobbyists spend huge amounts of time on state agency regulations, administrative rules, budget
                  appropriations, and helping clients navigate bureaucracy.
                </p>
              </div>
            </div>
            <div class="bg-white rounded-lg p-4">
              <p class="text-sm text-muted-foreground">
                <strong>Example:</strong> The Texas Commission on Environmental Quality (TCEQ) writes hundreds of
                pages of rules every year. Healthcare lobbyists spend months working with the Health and Human Services
                Commission on Medicaid policy. That's all lobbying‚Äîeven though no bills are involved.
              </p>
            </div>
          </div>
        </div>

        <!-- Day in the Life -->
        <div id="day-in-life" class="not-prose scroll-mt-24">
          <h2 class="text-3xl font-bold mb-6 mt-20">A Day in the Life: What They Actually Do</h2>
        </div>

        <p>
          Let's follow a mid-level contract lobbyist through a typical day during the Texas legislative session
          (January‚ÄìMay). This is what the work <em>really</em> looks like:
        </p>

        <div class="not-prose my-12 space-y-8">
          <!-- Morning -->
          <div class="bg-white border-l-4 border-orange-500 rounded-lg p-6 shadow-sm">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-orange-500 text-white rounded-lg px-3 py-1 text-sm font-bold">7:00 AM</div>
              <h3 class="text-xl font-bold">Morning: Bill Tracking & Capitol Intel</h3>
            </div>
            <div class="space-y-3 text-sm">
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">7:00‚Äì7:30 AM: Review overnight updates</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Check Capitol email alerts for new bill filings and amendments</li>
                  <li>‚Ä¢ Scan Texas Tribune and Austin American-Statesman for political news</li>
                  <li>‚Ä¢ Review overnight texts from legislative staff contacts</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">7:30‚Äì8:30 AM: Committee hearings begin</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Attend House Public Health Committee hearing (client's bill is on the agenda)</li>
                  <li>‚Ä¢ Fill out witness card to testify in favor</li>
                  <li>‚Ä¢ Text client updates on what other witnesses are saying</li>
                  <li>‚Ä¢ Give 3-minute testimony explaining client's position</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">8:30‚Äì9:00 AM: Post-hearing huddle</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Grab the committee chairman's chief of staff for a quick conversation</li>
                  <li>‚Ä¢ Gauge whether the bill has enough votes to pass out of committee</li>
                  <li>‚Ä¢ Identify which members need more information before they'll vote yes</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Late Morning -->
          <div class="bg-white border-l-4 border-blue-500 rounded-lg p-6 shadow-sm">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-blue-500 text-white rounded-lg px-3 py-1 text-sm font-bold">9:30 AM</div>
              <h3 class="text-xl font-bold">Late Morning: Meetings & Strategy</h3>
            </div>
            <div class="space-y-3 text-sm">
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">9:30‚Äì10:00 AM: Capitol office visit #1</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Meet with Rep. Johnson's legislative director about different client's bill</li>
                  <li>‚Ä¢ Drop off one-page fact sheet and leave-behind materials</li>
                  <li>‚Ä¢ Answer questions about how the bill affects rural districts</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">10:00‚Äì11:00 AM: Coalition meeting</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Conference call with 8 other organizations supporting HB 1234</li>
                  <li>‚Ä¢ Divide up list of legislators‚Äîwho will talk to whom</li>
                  <li>‚Ä¢ Agree on unified messaging and talking points</li>
                  <li>‚Ä¢ Discuss fundraising strategy for targeted legislators</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">11:00 AM‚Äì12:00 PM: Bill drafting session</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Meet with legislative counsel to draft amendment language</li>
                  <li>‚Ä¢ Work through technical details of how the bill would actually work</li>
                  <li>‚Ä¢ Get legal advice on constitutional issues</li>
                </ul>
              </div>
            </div>
          </div>

          <!-- Lunch -->
          <div class="bg-white border-l-4 border-purple-600 rounded-lg p-6 shadow-sm">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-purple-500 text-white rounded-lg px-3 py-1 text-sm font-bold">12:00 PM</div>
              <h3 class="text-xl font-bold">Lunch: Relationship Building</h3>
            </div>
            <div class="space-y-3 text-sm">
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">12:00‚Äì1:30 PM: Working lunch</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Take Senate staffer to lunch at Iron Cactus (one of Austin's popular Capitol-area spots)</li>
                  <li>‚Ä¢ 20 minutes of small talk: family, sports, the craziness of session</li>
                  <li>‚Ä¢ 40 minutes of substance: walk through client's concerns about pending bill</li>
                  <li>‚Ä¢ Leave with commitment: staffer will set up meeting with the Senator next week</li>
                </ul>
              </div>
              <p class="text-xs text-muted-foreground italic px-4">
                Note: Under Texas ethics rules, lobbyists can buy meals for legislators and staff, but it must be
                reported if it exceeds certain thresholds. Many lobbyists now avoid meals altogether to stay away
                from ethics gray areas.
              </p>
            </div>
          </div>

          <!-- Afternoon -->
          <div class="bg-white border-l-4 border-green-600 rounded-lg p-6 shadow-sm">
            <div class="flex items-center gap-3 mb-4">
              <div class="bg-green-500 text-white rounded-lg px-3 py-1 text-sm font-bold">2:00 PM</div>
              <h3 class="text-xl font-bold">Afternoon: Client Work & Floor Action</h3>
            </div>
            <div class="space-y-3 text-sm">
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">2:00‚Äì2:30 PM: House floor session</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Watch House floor debate on bill that affects three different clients</li>
                  <li>‚Ä¢ Text real-time updates to clients as amendments are offered</li>
                  <li>‚Ä¢ Rapid strategy call: should we support the amendment or oppose it?</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">2:30‚Äì4:00 PM: Crisis management</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ A hostile amendment just got added to client's bill‚Äîthis is bad</li>
                  <li>‚Ä¢ Emergency calls to bill author's office and key committee members</li>
                  <li>‚Ä¢ Draft alternative amendment language that everyone can live with</li>
                  <li>‚Ä¢ Negotiate compromise with opposing lobbyist in Capitol hallway</li>
                </ul>
              </div>
              <div class="bg-white rounded-lg p-4">
                <p class="font-semibold mb-2">4:00‚Äì5:30 PM: Research & prep work</p>
                <ul class="text-muted-foreground space-y-1 ml-4">
                  <li>‚Ä¢ Back to the office to write policy brief for tomorrow's meetings</li>
                  <li>‚Ä¢ Research how other states have handled similar issues</li>
                  <li>‚Ä¢ Pull economic impact data to support client's position</li>
