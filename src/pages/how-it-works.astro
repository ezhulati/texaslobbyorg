---
import Layout from '@/components/astro/Layout.astro';

const pageTitle = 'How It Works | TexasLobby.org';
const pageDescription =
  'Learn how TexasLobby.org connects businesses with experienced Texas lobbyists. Simple, transparent, and effective political representation.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <section class="bg-texas-blue-500 text-white py-16">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">How It Works</h1>
        <p class="text-xl text-white/90">
          Finding the right political representation in Texas has never been easier
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-16">
    <div class="container max-w-6xl">
      <!-- For Businesses -->
      <div class="mb-20">
        <div class="text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">For Businesses & Organizations</h2>
          <p class="text-lg text-muted-foreground">
            Three simple steps to find and hire the perfect lobbyist for your needs
          </p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          <!-- Step 1 -->
          <div class="relative">
            <div class="absolute top-0 left-1/2 -translate-x-1/2 -translate-y-1/2 w-12 h-12 rounded-full bg-texas-blue-500 text-white flex items-center justify-center text-xl font-bold z-10">
              1
            </div>
            <div class="rounded-lg border-2 border-texas-blue-500 bg-white p-8 pt-10">
              <div class="mb-4">
                <svg
                  class="h-12 w-12 text-texas-blue-500 mx-auto"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold mb-3 text-center">Search & Filter</h3>
              <p class="text-muted-foreground text-center">
                Browse our directory of Texas lobbyists. Filter by location, expertise area,
                experience level, and more.
              </p>
              <ul class="mt-4 space-y-2 text-sm">
                <li class="flex gap-2">
                  <svg class="h-5 w-5 text-texas-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Search by city or region</span>
                </li>
                <li class="flex gap-2">
                  <svg class="h-5 w-5 text-texas-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  <span>Filter by subject area</span>
                </li>
                <li class="flex gap-2">
                  <svg class="h-5 w-5 text-texas-blue-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
