---
import Layout from '@/components/astro/Layout.astro';
import AISearchBar from '@/components/react/AISearchBar';
import SearchFilter from '@/components/react/SearchFilter';
import { supabase } from '@/lib/supabase';

// Fetch cities and subject areas for the search filter
const { data: cities } = await supabase
  .from('cities')
  .select('id, name, slug')
  .order('name')
  .limit(10000); // Override default 1000 limit

const { data: subjectAreas } = await supabase
  .from('subject_areas')
  .select('id, name, slug')
  .order('name')
  .limit(10000); // Override default 1000 limit

// Fetch featured lobbyists for homepage showcase
// Prioritize lobbyists with profile photos
const { data: allFeaturedLobbyists } = await supabase
  .from('lobbyists')
  .select('id, first_name, last_name, slug, bio, profile_image_url, cities, subject_areas, subscription_tier, featured_order')
  .eq('subscription_tier', 'featured')
  .eq('is_active', true)
  .eq('approval_status', 'approved')
  .order('featured_order', { nullsFirst: false })
  .limit(10000); // Override default 1000 limit

// Sort to prioritize those with profile images, then by featured_order
const featuredLobbyists = allFeaturedLobbyists?.sort((a, b) => {
  // First, sort by whether they have a profile image (with image comes first)
  if (a.profile_image_url && !b.profile_image_url) return -1;
  if (!a.profile_image_url && b.profile_image_url) return 1;
  // Then sort by featured_order
  return (a.featured_order || 999) - (b.featured_order || 999);
}).slice(0, 6);

type Lobbyist = {
  id: string;
  first_name: string;
  last_name: string;
  slug: string;
  bio: string | null;
  profile_image_url: string | null;
  cities: string[];
  subject_areas: string[];
  subscription_tier: 'free' | 'premium' | 'featured';
};

const schema = {
  '@context': 'https://schema.org',
  '@type': 'WebSite',
  name: 'TexasLobby.org',
  url: 'https://texaslobby.org',
  description: 'Search 1,600+ registered Texas lobbyists by city, industry, and specialty. Compare profiles, client lists, and expertise.',
  potentialAction: {
    '@type': 'SearchAction',
    target: {
      '@type': 'EntryPoint',
      urlTemplate: 'https://texaslobby.org/lobbyists?q={search_term_string}',
    },
    'query-input': 'required name=search_term_string',
  },
};
---

<Layout
  title="Texas Lobbyist Directory | Search 1,600+ by Industry"
  description="Search 1,600+ registered Texas lobbyists by city, industry, and specialty. Compare profiles, client lists, and expertise."
  ogImage="/images/TexasLobby.jpg"
  schema={schema}
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-texas-blue-500/5 to-background py-20 md:py-32 relative overflow-visible z-10">
    <!-- Texas Flag Decorative Element -->
    <div class="absolute top-10 right-10 opacity-5 hidden lg:block -z-10">
      <img src="/images/texas-lobby-favicon.svg" alt="" class="w-32 h-32" />
    </div>
    <div class="absolute bottom-10 left-10 opacity-5 hidden lg:block -z-10">
      <img src="/images/texas-lobby-favicon.svg" alt="" class="w-32 h-32" />
    </div>

    <div class="container relative z-20">
      <div class="max-w-4xl mx-auto text-center">
        <!-- StoryBrand Hero Message -->
        <h1 class="text-5xl md:text-7xl lg:text-8xl font-bold tracking-tight mb-6">
          <span class="text-texas-blue-500">Find Your Voice in</span> <span class="text-texas-red-500">Texas Politics</span>
        </h1>
        <p class="text-xl md:text-2xl text-muted-foreground mb-4">
          Connect with experienced lobbyists who understand your industry
        </p>
        <p class="text-lg text-muted-foreground mb-12">
          Just describe what you need. Our AI will find the perfect match from 1,600+ Texas lobbyists.
        </p>

        <!-- AI Search Bar -->
        <div class="bg-white rounded-lg shadow-lg p-6 md:p-8">
          <AISearchBar client:load />
        </div>

        <!-- Traditional Filter Toggle -->
        <details class="mt-6">
          <summary class="text-sm text-texas-blue-600 hover:text-texas-blue-700 cursor-pointer font-medium text-center">
            Or use traditional filters →
          </summary>
          <div class="mt-4 bg-white rounded-lg shadow-lg p-6 md:p-8">
            <SearchFilter
              cities={cities || []}
              subjectAreas={subjectAreas || []}
              client:load
            />
          </div>
        </details>
      </div>
    </div>
  </section>

  <!-- Problem/Solution Section (StoryBrand Framework) -->
  <section class="py-20 border-t border-border">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center mb-16">
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Stop Losing to Legislation You Never Saw Coming
        </h2>
        <p class="text-xl md:text-2xl text-muted-foreground max-w-3xl mx-auto">
          Every legislative session, Texas businesses lose millions because they had no voice at the table.
          The lobbying system feels like an insider-only club. We're changing that.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8">
        <!-- Feature 1 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-texas-blue-500/10 mb-4">
            <svg class="w-6 h-6 text-texas-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Search by City & Industry</h3>
          <p class="text-muted-foreground">
            Find lobbyists who specialize in your industry and know your local market
          </p>
        </div>

        <!-- Feature 2 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-texas-blue-500/10 mb-4 p-3">
            <img src="/images/texas-lobby-favicon.svg" alt="" class="w-full h-full object-contain" />
          </div>
          <h3 class="text-xl font-semibold mb-2">Transparent Track Records</h3>
          <p class="text-muted-foreground">
            See real client lists, years of experience, and areas of expertise
          </p>
        </div>

        <!-- Feature 3 -->
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-texas-blue-500/10 mb-4">
            <svg class="w-6 h-6 text-texas-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3"></path>
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-2">Compare & Connect</h3>
          <p class="text-muted-foreground">
            Compare multiple lobbyists side-by-side, then connect directly
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured Lobbyists -->
  {featuredLobbyists && featuredLobbyists.length > 0 && (
    <section class="py-20 bg-muted/50">
      <div class="container">
        <div class="max-w-3xl mx-auto text-center mb-12">
          <h2 class="text-3xl md:text-4xl font-bold mb-4">Featured Lobbyists</h2>
          <p class="text-lg text-muted-foreground">
            Connect with top-rated political advocates across Texas
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {(featuredLobbyists as Lobbyist[]).map((lobbyist) => (
            <a
              href={`/lobbyists/${lobbyist.slug}`}
              class="block bg-white rounded-lg border border-border p-6 hover:shadow-lg transition-shadow"
            >
              <div class="flex items-start space-x-4">
                {lobbyist.profile_image_url ? (
                  <img
                    src={lobbyist.profile_image_url}
                    alt={`${lobbyist.first_name} ${lobbyist.last_name}`}
                    class="w-16 h-16 rounded-full object-cover"
                  />
                ) : (
                  <div class="w-16 h-16 rounded-full bg-texas-blue-500/10 flex items-center justify-center text-texas-blue-500 font-semibold text-xl">
                    {lobbyist.first_name[0]}{lobbyist.last_name[0]}
                  </div>
                )}
                <div class="flex-1 min-w-0">
                  <div class="flex items-center space-x-2">
                    <h3 class="font-semibold text-lg">
                      {lobbyist.first_name} {lobbyist.last_name}
                    </h3>
                    <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-texas-red-500 text-white">
                      Featured
                    </span>
                  </div>
                  {lobbyist.cities && lobbyist.cities.length > 0 && (
                    <p class="text-sm text-muted-foreground mt-1">
                      {lobbyist.cities.slice(0, 2).join(', ')}
                      {lobbyist.cities.length > 2 && ` +${lobbyist.cities.length - 2}`}
                    </p>
                  )}
                  {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
                    <div class="flex flex-wrap gap-1 mt-2">
                      {lobbyist.subject_areas.slice(0, 3).map((subject) => (
                        <span class="inline-flex items-center px-2 py-0.5 rounded text-xs font-medium bg-muted text-muted-foreground">
                          {subject}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
              </div>
            </a>
          ))}
        </div>

        <div class="text-center mt-12">
          <a
            href="/lobbyists"
            class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-600 transition-colors"
          >
            View All Lobbyists
          </a>
        </div>
      </div>
    </section>
  )}

  <!-- Resources Section -->
  <section class="py-20 bg-gradient-to-b from-background to-muted/30">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Before You Hire: Essential Resources
        </h2>
        <p class="text-lg text-muted-foreground">
          Everything you need to make an informed decision about lobbying representation
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        <!-- Guide Card -->
        <a
          href="/guides/how-to-hire-a-lobbyist-in-texas"
          class="group relative bg-white rounded-lg border-2 border-border p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
        >
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-texas-blue-500/10 mb-4">
            <svg class="w-6 h-6 text-texas-blue-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
            </svg>
          </div>
          <div class="text-xs font-semibold text-texas-blue-600 uppercase tracking-wide mb-2">
            Hiring Guide
          </div>
          <h3 class="text-xl font-bold mb-2 group-hover:text-texas-blue-600 transition-colors">
            Learn How to Hire a Lobbyist
          </h3>
          <p class="text-muted-foreground mb-4 text-sm leading-relaxed">
            Step-by-step guide to finding, evaluating, and hiring a lobbyist who delivers results—not just promises.
          </p>
          <div class="flex items-center justify-between">
            <span class="text-xs text-muted-foreground">5-minute read</span>
            <span class="inline-flex items-center text-sm font-medium text-texas-blue-600 group-hover:underline">
              Read Guide
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>

        <!-- Blog Card -->
        <a
          href="/blog/best-texas-lobbying-firms"
          class="group relative bg-white rounded-lg border-2 border-border p-6 hover:border-texas-gold-500 hover:shadow-lg transition-all"
        >
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-texas-gold-500/10 mb-4">
            <svg class="w-6 h-6 text-texas-gold-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
          <div class="text-xs font-semibold text-texas-gold-700 uppercase tracking-wide mb-2">
            Capitol Insights
          </div>
          <h3 class="text-xl font-bold mb-2 group-hover:text-texas-gold-600 transition-colors">
            Inside Texas Lobbying
          </h3>
          <p class="text-muted-foreground mb-4 text-sm leading-relaxed">
            Veteran lobbyist reveals what Capitol Inside rankings mean, which firms deliver results, and how to pick the right advocate.
          </p>
          <div class="flex items-center justify-between">
            <span class="text-xs text-muted-foreground">Latest analysis</span>
            <span class="inline-flex items-center text-sm font-medium text-texas-gold-600 group-hover:underline">
              Read Insights
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>

        <!-- Bills Card -->
        <a
          href="/bills"
          class="group relative bg-white rounded-lg border-2 border-border p-6 hover:border-texas-red-500 hover:shadow-lg transition-all"
        >
          <div class="inline-flex items-center justify-center w-12 h-12 rounded-full bg-texas-red-500/10 mb-4">
            <svg class="w-6 h-6 text-texas-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
            </svg>
          </div>
          <div class="text-xs font-semibold text-texas-red-600 uppercase tracking-wide mb-2">
            Bills Hub
          </div>
          <h3 class="text-xl font-bold mb-2 group-hover:text-texas-red-600 transition-colors">
            Track Texas Legislation
          </h3>
          <p class="text-muted-foreground mb-4 text-sm leading-relaxed">
            Search and monitor 8,700+ bills from the Texas Legislature. Track status, find bills by subject, stay informed.
          </p>
          <div class="flex items-center justify-between">
            <span class="text-xs text-muted-foreground">Updated daily</span>
            <span class="inline-flex items-center text-sm font-medium text-texas-red-600 group-hover:underline">
              Search Bills
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </span>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Final CTA Section -->
  <section class="py-20 bg-texas-blue-500 text-white relative overflow-hidden">
    <!-- Texas Flag Accent -->
    <div class="absolute -right-20 top-1/2 -translate-y-1/2 opacity-10 hidden md:block">
      <img src="/images/texas.png" alt="" class="w-96 h-64 object-cover rotate-12" />
    </div>

    <div class="container relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <!-- Texas Flag Icon -->
        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-white/10 mb-6 p-4">
          <img src="/images/texas-lobby-favicon.svg" alt="" class="w-full h-full object-contain" />
        </div>

        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          Ready to Find Your Lobbyist?
        </h2>
        <p class="text-xl mb-8 opacity-90">
          Search 1,600+ Texas lobbyists by expertise and location. Compare profiles and connect with confidence.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/lobbyists"
            class="inline-flex items-center justify-center rounded-md bg-white px-8 py-3 text-base font-medium text-texas-blue-500 hover:bg-gray-100 transition-colors"
          >
            Browse All Lobbyists
          </a>
          <a
            href="/claim-profile"
            class="inline-flex items-center justify-center rounded-md border-2 border-white px-8 py-3 text-base font-medium text-white hover:bg-white/10 transition-colors"
          >
            Are You a Lobbyist?
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
