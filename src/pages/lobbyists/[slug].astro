---
import Layout from '@/components/astro/Layout.astro';
import CollapsibleTags from '@/components/react/CollapsibleTags';
import { getLobbyistBySlug, getLobbyistClients } from '@/lib/api/lobbyists';
import { MapPin, Briefcase, Mail, Phone, Globe, Calendar, Linkedin } from 'lucide-react';
import type { Database } from '@/lib/database.types';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/lobbyists');
}

// Fetch lobbyist data
const lobbyist = await getLobbyistBySlug(slug);

if (!lobbyist) {
  return Astro.redirect('/lobbyists');
}

// Fetch clients
const clients: Database['public']['Tables']['clients']['Row'][] = await getLobbyistClients(lobbyist.id);

// Build page title and description
const fullName = `${lobbyist.first_name} ${lobbyist.last_name}`;
const pageTitle = `${fullName} - Texas Lobbyist`;
const pageDescription = lobbyist.bio || `Contact ${fullName}, an experienced Texas lobbyist${lobbyist.cities.length > 0 ? ` serving ${lobbyist.cities[0]}` : ''}${lobbyist.subject_areas.length > 0 ? ` specializing in ${lobbyist.subject_areas[0]}` : ''}.`;

// Schema.org markup
const schema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: fullName,
  url: `https://texaslobby.org/lobbyists/${slug}`,
  description: lobbyist.bio,
  email: lobbyist.email || undefined,
  telephone: lobbyist.phone || undefined,
  address: lobbyist.cities.length > 0 ? {
    '@type': 'PostalAddress',
    addressLocality: lobbyist.cities[0],
    addressRegion: 'TX',
    addressCountry: 'US',
  } : undefined,
  jobTitle: 'Lobbyist',
  workLocation: {
    '@type': 'State',
    name: 'Texas',
  },
};

const initials = `${lobbyist.first_name[0]}${lobbyist.last_name[0]}`;
---

<Layout
  title={pageTitle}
  description={pageDescription}
  schema={schema}
  ogType="profile"
>
  <!-- Profile Header -->
  <section class="bg-gradient-to-b from-texas-blue-500/5 to-background py-12 border-b border-border">
    <div class="container">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-6">
        {/* Avatar */}
        <div
          class={`flex h-24 w-24 md:h-32 md:w-32 flex-shrink-0 items-center justify-center rounded-full text-3xl md:text-4xl font-bold ${
            lobbyist.subscription_tier === 'featured' ? 'bg-texas-blue-500 text-white' :
            lobbyist.subscription_tier === 'premium' ? 'bg-texas-gold-500 text-white' :
            'bg-muted text-muted-foreground'
          }`}
        >
          {lobbyist.profile_image_url ? (
            <img
              src={lobbyist.profile_image_url}
              alt={fullName}
              class="h-full w-full rounded-full object-cover"
            />
          ) : (
            initials
          )}
        </div>

        {/* Info */}
        <div class="flex-1">
          <div class="flex flex-wrap items-center gap-3 mb-2">
            <h1 class="text-3xl md:text-4xl font-bold">{fullName}</h1>
            {lobbyist.subscription_tier !== 'free' && (
              <span
                class={`inline-flex items-center rounded-full px-3 py-1 text-sm font-medium ${
                  lobbyist.subscription_tier === 'featured' ? 'bg-texas-blue-500 text-white' :
                  'bg-texas-gold-500 text-white'
                }`}
              >
                {lobbyist.subscription_tier === 'featured' ? 'Featured Lobbyist' : 'Premium Lobbyist'}
              </span>
            )}
          </div>

          {/* Location */}
          {lobbyist.cities && lobbyist.cities.length > 0 && (
            <div class="flex items-center text-muted-foreground mb-3">
              <MapPin className="mr-2 h-5 w-5" />
              <span>{lobbyist.cities.join(', ')}</span>
            </div>
          )}

          {/* Subject Areas - Collapsible */}
          {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
            <CollapsibleTags
              tags={lobbyist.subject_areas}
              initialVisibleCount={10}
              client:load
            />
          )}
        </div>

        {/* Contact CTA */}
        {lobbyist.is_claimed ? (
          <div class="flex flex-col gap-2 w-full md:w-auto">
            <a
              href={`mailto:${lobbyist.email}`}
              class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-500/90 transition-colors whitespace-nowrap"
            >
              Contact {lobbyist.first_name}
            </a>
            <p class="text-xs text-center text-muted-foreground">
              {lobbyist.view_count.toLocaleString()} profile {lobbyist.view_count === 1 ? 'view' : 'views'}
            </p>
          </div>
        ) : (
          <div class="w-full md:w-auto">
            <a
              href="/claim-profile"
              class="inline-flex items-center justify-center rounded-md border-2 border-texas-blue-500 text-texas-blue-500 px-6 py-3 text-base font-medium hover:bg-texas-blue-500/5 transition-colors whitespace-nowrap"
            >
              Claim This Profile
            </a>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8">
        {/* Main Column */}
        <div class="lg:col-span-2">
          {/* Bio */}
          {lobbyist.bio ? (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">About</h2>
              <div class="prose prose-lg max-w-none">
                <p class="text-muted-foreground leading-relaxed">{lobbyist.bio}</p>
              </div>
            </div>
          ) : !lobbyist.is_claimed && (
            <div class="mb-8 rounded-lg border border-dashed border-border bg-muted/30 p-8 text-center">
              <h2 class="text-xl font-semibold mb-2">Profile Not Yet Claimed</h2>
              <p class="text-muted-foreground mb-4">
                This profile was created from public Texas Ethics Commission data.
                The lobbyist can claim it to add more information.
              </p>
              <a
                href="/claim-profile"
                class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-2.5 text-sm font-medium text-white hover:bg-texas-blue-500/90 transition-colors"
              >
                Are you {fullName}? Claim this profile
              </a>
            </div>
          )}

          {/* Clients */}
          {clients && clients.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">Clients & Representations</h2>
              <div class="space-y-4">
                {clients.map((client) => (
                  <div class="rounded-lg border border-border p-4 hover:shadow-md transition-shadow">
                    <div class="flex items-start justify-between gap-4">
                      <div class="flex-1">
                        <h3 class="font-semibold text-lg">{client.name}</h3>
                        {client.description && (
                          <p class="text-sm text-muted-foreground mt-1">{client.description}</p>
                        )}
                      </div>
                      {client.is_current && (
                        <span class="inline-flex items-center rounded-full bg-green-100 px-2.5 py-0.5 text-xs font-medium text-green-800">
                          Current
                        </span>
                      )}
                    </div>
                    {(client.year_started || client.year_ended) && (
                      <div class="flex items-center text-sm text-muted-foreground mt-2">
                        <Calendar className="mr-1.5 h-4 w-4" />
                        {client.year_started && client.year_ended ? (
                          <span>{client.year_started} - {client.year_ended}</span>
                        ) : client.year_started ? (
                          <span>{client.year_started} - Present</span>
                        ) : (
                          <span>Until {client.year_ended}</span>
                        )}
                      </div>
                    )}
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        {/* Sidebar */}
        <div class="lg:col-span-1">
          {/* Contact Information */}
          <div class="rounded-lg border border-border bg-white p-6 sticky top-6">
            <h3 class="text-lg font-semibold mb-4">Contact Information</h3>
            <div class="space-y-3">
              {lobbyist.email && (
                <a
                  href={`mailto:${lobbyist.email}`}
                  class="flex items-center text-sm text-muted-foreground hover:text-texas-blue-500 transition-colors"
                >
                  <Mail className="mr-3 h-5 w-5 flex-shrink-0" />
                  <span class="truncate">{lobbyist.email}</span>
                </a>
              )}

              {lobbyist.phone && (
                <a
                  href={`tel:${lobbyist.phone}`}
                  class="flex items-center text-sm text-muted-foreground hover:text-texas-blue-500 transition-colors"
                >
                  <Phone className="mr-3 h-5 w-5 flex-shrink-0" />
                  <span>{lobbyist.phone}</span>
                </a>
              )}

              {lobbyist.website && (
                <a
                  href={lobbyist.website}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center text-sm text-muted-foreground hover:text-texas-blue-500 transition-colors"
                >
                  <Globe className="mr-3 h-5 w-5 flex-shrink-0" />
                  <span class="truncate">Website</span>
                </a>
              )}

              {lobbyist.linkedin_url && (
                <a
                  href={lobbyist.linkedin_url}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center text-sm text-muted-foreground hover:text-[#0A66C2] transition-colors"
                >
                  <Linkedin className="mr-3 h-5 w-5 flex-shrink-0" />
                  <span class="truncate">LinkedIn Profile</span>
                </a>
              )}

              {!lobbyist.email && !lobbyist.phone && !lobbyist.website && !lobbyist.linkedin_url && (
                <p class="text-sm text-muted-foreground">
                  {lobbyist.is_claimed ? 'No contact information provided' : 'Contact information will be added when the lobbyist claims this profile'}
                </p>
              )}
            </div>

            {lobbyist.is_claimed && (
              <a
                href={`mailto:${lobbyist.email}`}
                class="mt-6 inline-flex w-full items-center justify-center rounded-md bg-texas-blue-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-texas-blue-500/90 transition-colors"
              >
                Send Message
              </a>
            )}
          </div>

          {/* Upgrade CTA for unclaimed profiles */}
          {!lobbyist.is_claimed && (
            <div class="mt-6 rounded-lg border-2 border-dashed border-texas-blue-500 bg-texas-blue-500/5 p-6">
              <h3 class="text-lg font-semibold mb-2">Is this you?</h3>
              <p class="text-sm text-muted-foreground mb-4">
                Claim your profile to add your bio, client list, and contact information. It's free!
              </p>
              <a
                href="/claim-profile"
                class="inline-flex w-full items-center justify-center rounded-md bg-texas-blue-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-texas-blue-500/90 transition-colors"
              >
                Claim Profile
              </a>
            </div>
          )}

          {/* Upgrade CTA for free tier */}
          {lobbyist.is_claimed && lobbyist.subscription_tier === 'free' && (
            <div class="mt-6 rounded-lg border-2 border-dashed border-texas-gold-500 bg-texas-gold-500/5 p-6">
              <h3 class="text-lg font-semibold mb-2">Upgrade Your Profile</h3>
              <p class="text-sm text-muted-foreground mb-4">
                Get priority placement in search results and unlock analytics with Premium or Featured listings.
              </p>
              <a
                href="/pricing"
                class="inline-flex w-full items-center justify-center rounded-md bg-texas-gold-500 px-4 py-2.5 text-sm font-medium text-white hover:bg-texas-gold-500/90 transition-colors"
              >
                View Pricing
              </a>
            </div>
          )}
        </div>
      </div>
    </div>
  </section>

  {/* Back to Search */}
  <section class="py-8 border-t border-border">
    <div class="container">
      <a
        href="/lobbyists"
        class="inline-flex items-center text-texas-blue-500 hover:underline"
      >
        ‚Üê Back to all lobbyists
      </a>
    </div>
  </section>
</Layout>

