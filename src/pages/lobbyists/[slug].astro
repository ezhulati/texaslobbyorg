---
import Layout from '@/components/astro/Layout.astro';
import CollapsibleTags from '@/components/react/CollapsibleTags';
import CollapsibleClients from '@/components/react/CollapsibleClients';
import CollapsibleBio from '@/components/react/CollapsibleBio';
import SimilarLobbyistsList from '@/components/react/SimilarLobbyistsList';
import FavoriteButton from '@/components/react/FavoriteButton';
import TestimonialsDisplay from '@/components/react/TestimonialsDisplay';
import { getLobbyistBySlug, getLobbyistClients } from '@/lib/api/lobbyists';
import { getLobbyistTaggedBills } from '@/lib/api/bills';
import { calculateSimilarLobbyists } from '@/lib/utils/similarity';
import { supabase } from '@/lib/supabase';
import { MapPin, Briefcase, Mail, Phone, Globe, Calendar, Linkedin } from 'lucide-react';
import type { Database } from '@/lib/database.types';

const { slug } = Astro.params;

if (!slug) {
  return Astro.redirect('/lobbyists');
}

// Fetch lobbyist data
const lobbyist = await getLobbyistBySlug(slug);

if (!lobbyist) {
  return Astro.redirect('/lobbyists');
}

// Check if user is authenticated and if this lobbyist is favorited
const isAuthenticated = Astro.locals.isAuthenticated || false;
const currentUser = Astro.locals.user;
let isFavorited = false;

if (isAuthenticated && currentUser) {
  const { data: favorite } = await supabase
    .from('favorites')
    .select('id')
    .eq('user_id', currentUser.id)
    .eq('lobbyist_id', lobbyist.id)
    .maybeSingle();

  isFavorited = !!favorite;
}

// Fetch clients
const clients: Database['public']['Tables']['clients']['Row'][] = await getLobbyistClients(lobbyist.id);

// Fetch tagged bills (public only)
let taggedBills: any[] = [];
try {
  const allTaggedBills = await getLobbyistTaggedBills(lobbyist.id);
  taggedBills = allTaggedBills.filter((tag: any) => tag.is_public);
} catch (err) {
  console.error('Failed to fetch tagged bills:', err);
}

// Fetch candidate lobbyists for recommendations
// Note: No limit to ensure all similar lobbyists are considered
const { data: candidateLobbyists } = await supabase
  .from('lobbyists')
  .select(`
    *,
    clients (
      id,
      name,
      description
    )
  `)
  .eq('is_active', true)
  .neq('id', lobbyist.id);

// Calculate similar lobbyists
const similarLobbyists = candidateLobbyists && candidateLobbyists.length > 0
  ? calculateSimilarLobbyists(
      { ...lobbyist, clients: clients.map(c => ({ name: c.name, description: c.description })) },
      candidateLobbyists,
      6
    )
  : [];

// Build page title and description
const fullName = `${lobbyist.first_name} ${lobbyist.last_name}`;

// Build SEO-optimized title - Simple format
const pageTitle = `${fullName} - Texas Lobbyist`;

// Build SEO-optimized description (155-160 chars max)
let pageDescription = '';
if (lobbyist.bio) {
  // Truncate bio to 155 chars, ending at last complete word
  const truncated = lobbyist.bio.substring(0, 155);
  const lastSpace = truncated.lastIndexOf(' ');
  pageDescription = lastSpace > 140 ? truncated.substring(0, lastSpace) + '...' : truncated + '...';
} else {
  // Fallback description
  const cityText = lobbyist.cities.length > 0 ? ` in ${lobbyist.cities[0]}` : '';
  const subjectText = lobbyist.subject_areas.length > 0 ? ` specializing in ${lobbyist.subject_areas[0]}` : '';
  pageDescription = `Contact ${fullName}, an experienced Texas lobbyist${cityText}${subjectText}. View profile, clients, and track record.`;
  // Ensure it doesn't exceed 160 chars
  if (pageDescription.length > 160) {
    pageDescription = pageDescription.substring(0, 157) + '...';
  }
}

// Schema.org markup
const schema = {
  '@context': 'https://schema.org',
  '@type': 'Person',
  name: fullName,
  url: `https://texaslobby.org/lobbyists/${slug}`,
  description: lobbyist.bio,
  email: lobbyist.email || undefined,
  telephone: lobbyist.phone || undefined,
  address: lobbyist.cities.length > 0 ? {
    '@type': 'PostalAddress',
    addressLocality: lobbyist.cities[0],
    addressRegion: 'TX',
    addressCountry: 'US',
  } : undefined,
  jobTitle: 'Lobbyist',
  workLocation: {
    '@type': 'State',
    name: 'Texas',
  },
};

const initials = `${lobbyist.first_name[0]}${lobbyist.last_name[0]}`;

// Tag type configuration for bill positions
const tagTypeConfig = {
  supporting: {
    label: 'Supporting',
    bgClass: 'bg-green-50',
    textClass: 'text-green-700',
    borderClass: 'border-green-200',
    icon: 'üëç',
  },
  monitoring: {
    label: 'Monitoring',
    bgClass: 'bg-blue-50',
    textClass: 'text-blue-700',
    borderClass: 'border-blue-200',
    icon: 'üëÅÔ∏è',
  },
  opposing: {
    label: 'Opposing',
    bgClass: 'bg-red-50',
    textClass: 'text-red-700',
    borderClass: 'border-red-200',
    icon: 'üëé',
  },
};
---

<Layout
  title={pageTitle}
  description={pageDescription}
  schema={schema}
  ogType="profile"
>
  <!-- Profile Header -->
  <section class="bg-gradient-to-b from-texas-blue-500/5 to-background py-12 border-b border-border">
    <div class="container">
      <div class="flex flex-col md:flex-row items-start md:items-center gap-6">
        {/* Avatar */}
        <div
          class={`flex h-24 w-24 md:h-32 md:w-32 flex-shrink-0 items-center justify-center rounded-full text-3xl md:text-4xl font-bold ${
            lobbyist.subscription_tier === 'featured' ? 'bg-texas-blue-500 text-white' :
            lobbyist.subscription_tier === 'premium' ? 'bg-texas-gold-500 text-white' :
            'bg-muted text-muted-foreground'
          }`}
        >
          {lobbyist.profile_image_url ? (
            <img
              src={lobbyist.profile_image_url}
              alt={fullName}
              class="h-full w-full rounded-full object-cover"
            />
          ) : (
            initials
          )}
        </div>

        {/* Info */}
        <div class="flex-1">
          <div class="flex flex-wrap items-center gap-3 mb-2">
            <h1 class="text-3xl md:text-4xl font-bold">{fullName}</h1>
            {lobbyist.subscription_tier !== 'free' && (
              <span
                class={`inline-flex items-center rounded-full px-3 py-1 text-sm font-medium ${
                  lobbyist.subscription_tier === 'featured' ? 'bg-texas-blue-500 text-white' :
                  'bg-texas-gold-500 text-white'
                }`}
              >
                {lobbyist.subscription_tier === 'featured' ? 'Featured Lobbyist' : 'Premium Lobbyist'}
              </span>
            )}
            <FavoriteButton
              lobbyistId={lobbyist.id}
              lobbyistName={fullName}
              initialIsFavorited={isFavorited}
              isAuthenticated={isAuthenticated}
              variant="button"
              client:load
            />
          </div>

          {/* Location */}
          {lobbyist.cities && lobbyist.cities.length > 0 && (
            <div class="flex items-center text-muted-foreground mb-3">
              <MapPin className="mr-2 h-5 w-5" />
              <span>{lobbyist.cities.join(', ')}</span>
            </div>
          )}

          {/* Subject Areas - Collapsible */}
          {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
            <CollapsibleTags
              tags={lobbyist.subject_areas}
              initialVisibleCount={10}
              client:load
            />
          )}
        </div>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="container">
      <div class="grid lg:grid-cols-3 gap-8">
        {/* Main Column */}
        <div class="lg:col-span-2 min-w-0">
          {/* Bio */}
          {lobbyist.bio ? (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">About</h2>
              <div class="prose prose-lg max-w-none">
                <CollapsibleBio bio={lobbyist.bio} previewSentences={3} client:load />
              </div>
            </div>
          ) : !lobbyist.is_claimed && !lobbyist.claimed_by && (
            <div class="mb-8 rounded-lg border border-dashed border-border bg-muted/30 p-8 text-center">
              <h2 class="text-xl font-semibold mb-2">Listing Not Yet Claimed</h2>
              <p class="text-muted-foreground mb-4">
                This listing was created from public Texas Ethics Commission data.
                The lobbyist can claim it to add more information.
              </p>
              <a
                href="/claim-profile"
                class="inline-flex items-center justify-center rounded-md bg-texas-blue-500 px-6 py-2.5 text-sm font-medium text-white hover:bg-texas-blue-500/90 transition-colors"
              >
                Are you {fullName}? Claim this listing
              </a>
            </div>
          )}

          {/* Clients */}
          {clients && clients.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">Clients & Representations</h2>
              <CollapsibleClients clients={clients} initialVisibleCount={10} client:load />
            </div>
          )}

          {/* Bills I'm Tracking */}
          {taggedBills && taggedBills.length > 0 && (
            <div class="mb-8">
              <div class="flex items-center justify-between mb-4">
                <h2 class="text-2xl font-bold">Bills I'm Tracking</h2>
                <span class="inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium bg-blue-50 text-blue-700 border border-blue-200">
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                  {taggedBills.length} {taggedBills.length === 1 ? 'Bill' : 'Bills'}
                </span>
              </div>
              <p class="text-muted-foreground mb-4">
                Active legislation {fullName} is currently tracking and working on. This demonstrates their current focus areas and legislative engagement.
              </p>
              <div class="space-y-3">
                {taggedBills.slice(0, 6).map((tag: any) => {
                  const bill = tag.bill;
                  const config = tagTypeConfig[tag.tag_type as keyof typeof tagTypeConfig] || tagTypeConfig.monitoring;

                  return (
                    <div class="bg-white border border-border rounded-lg p-5 hover:shadow-md transition-shadow">
                      <div class="flex items-start justify-between gap-4 mb-3">
                        <div class="flex-1 min-w-0">
                          <div class="flex items-center gap-2 mb-2">
                            <a
                              href={`/bills/${bill.slug}`}
                              class="text-lg font-semibold text-blue-600 hover:text-blue-700"
                            >
                              {bill.bill_number}
                            </a>
                            <span
                              class={`inline-flex items-center gap-1.5 px-2.5 py-0.5 rounded-full text-xs font-medium ${config.bgClass} ${config.textClass} border ${config.borderClass}`}
                            >
                              <span>{config.icon}</span>
                              {config.label}
                            </span>
                          </div>
                          <h3 class="text-sm text-gray-900 mb-2 leading-snug">
                            {bill.title}
                          </h3>
                        </div>
                      </div>

                      {/* Notes */}
                      {tag.context_notes && (
                        <div class="mb-3 p-3 bg-gray-50 rounded-md border border-gray-200">
                          <div class="text-xs text-gray-500 mb-1 font-medium">{fullName}'s Insight</div>
                          <p class="text-sm text-gray-700 leading-relaxed">{tag.context_notes}</p>
                        </div>
                      )}

                      {/* Bill Details */}
                      <div class="flex flex-wrap items-center gap-3 text-xs text-gray-600">
                        {bill.current_status && (
                          <span class="inline-flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                            </svg>
                            {bill.current_status}
                          </span>
                        )}
                        {bill.chamber && (
                          <span class="inline-flex items-center gap-1">
                            <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                            </svg>
                            {bill.chamber}
                          </span>
                        )}
                        {bill.subject_areas && bill.subject_areas.length > 0 && (
                          <div class="flex flex-wrap gap-1">
                            {bill.subject_areas.slice(0, 2).map((subject: string) => (
                              <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-100 text-gray-700">
                                {subject}
                              </span>
                            ))}
                            {bill.subject_areas.length > 2 && (
                              <span class="text-gray-500">+{bill.subject_areas.length - 2}</span>
                            )}
                          </div>
                        )}
                      </div>
                    </div>
                  );
                })}
              </div>
              {taggedBills.length > 6 && (
                <div class="mt-4 text-center">
                  <a
                    href="/bills"
                    class="inline-flex items-center gap-2 text-sm font-medium text-blue-600 hover:text-blue-700"
                  >
                    View all {taggedBills.length} bills {fullName} is tracking
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                </div>
              )}
            </div>
          )}

          {/* Areas of Expertise - Always show */}
          {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">Areas of Expertise</h2>
              <p class="text-muted-foreground mb-4">
                {fullName} specializes in the following areas. Explore more lobbyists and resources in these fields.
              </p>
              <div class="grid sm:grid-cols-2 gap-4">
                {lobbyist.subject_areas.slice(0, 6).map(async (subject) => {
                  // Get count of lobbyists in this subject
                  const { count } = await supabase
                    .from('lobbyists')
                    .select('*', { count: 'exact', head: true })
                    .contains('subject_areas', [subject])
                    .eq('is_active', true);

                  const slug = subject.toLowerCase().replace(/\s+/g, '-').replace(/&/g, 'and');

                  return (
                    <a
                      href={`/subjects/${slug}`}
                      class="group relative overflow-hidden rounded-lg border border-border bg-white p-5 hover:border-texas-blue-500 hover:shadow-md transition-all"
                    >
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-1">
                            {subject}
                          </h3>
                          <p class="text-sm text-muted-foreground">
                            {count || 0} {count === 1 ? 'lobbyist' : 'lobbyists'}
                          </p>
                        </div>
                        <svg class="h-5 w-5 text-muted-foreground group-hover:text-texas-blue-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </a>
                  );
                })}
              </div>
            </div>
          )}

          {/* Cities They Serve - Always show */}
          {lobbyist.cities && lobbyist.cities.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">Cities They Serve</h2>
              <p class="text-muted-foreground mb-4">
                Find other lobbyists practicing in {fullName}'s service areas.
              </p>
              <div class="grid sm:grid-cols-2 gap-4">
                {lobbyist.cities.slice(0, 6).map(async (city) => {
                  // Get count of lobbyists in this city
                  const { count } = await supabase
                    .from('lobbyists')
                    .select('*', { count: 'exact', head: true })
                    .contains('cities', [city])
                    .eq('is_active', true);

                  const citySlug = city.toLowerCase().replace(/\s+/g, '-');

                  return (
                    <a
                      href={`/cities/${citySlug}`}
                      class="group relative overflow-hidden rounded-lg border border-border bg-white p-5 hover:border-texas-blue-500 hover:shadow-md transition-all"
                    >
                      <div class="flex items-start justify-between">
                        <div class="flex-1">
                          <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-1">
                            {city}
                          </h3>
                          <p class="text-sm text-muted-foreground">
                            {count || 0} {count === 1 ? 'lobbyist' : 'lobbyists'}
                          </p>
                        </div>
                        <svg class="h-5 w-5 text-muted-foreground group-hover:text-texas-blue-500 group-hover:translate-x-1 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                        </svg>
                      </div>
                    </a>
                  );
                })}
              </div>
            </div>
          )}

          {/* Related Guides - Always show */}
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Related Guides</h2>
            <p class="text-muted-foreground mb-4">
              Learn more about lobbying in Texas with these helpful resources.
            </p>
            <div class="grid sm:grid-cols-2 gap-4">
              <a
                href="/guides/what-does-a-lobbyist-do"
                class="group rounded-lg border border-border bg-white p-5 hover:border-texas-blue-500 hover:shadow-md transition-all"
              >
                <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-2">
                  What Does a Lobbyist Do?
                </h3>
                <p class="text-sm text-muted-foreground">
                  Understanding the role and responsibilities of professional lobbyists in Texas.
                </p>
              </a>

              <a
                href="/guides/how-to-hire-a-lobbyist-in-texas"
                class="group rounded-lg border border-border bg-white p-5 hover:border-texas-blue-500 hover:shadow-md transition-all"
              >
                <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-2">
                  How to Hire a Lobbyist
                </h3>
                <p class="text-sm text-muted-foreground">
                  A step-by-step guide to finding and working with the right lobbyist for your needs.
                </p>
              </a>

              <a
                href="/guides/how-much-does-a-lobbyist-cost"
                class="group rounded-lg border border-border bg-white p-5 hover:border-texas-blue-500 hover:shadow-md transition-all"
              >
                <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-2">
                  How Much Does a Lobbyist Cost?
                </h3>
                <p class="text-sm text-muted-foreground">
                  Learn about lobbyist fees, retainers, and what to expect when budgeting for advocacy services.
                </p>
              </a>

              <a
                href="/guides"
                class="group rounded-lg border-2 border-dashed border-border bg-muted/30 p-5 hover:border-texas-blue-500 hover:bg-texas-blue-500/5 transition-all"
              >
                <h3 class="font-semibold text-foreground group-hover:text-texas-blue-500 transition-colors mb-2 flex items-center gap-2">
                  View All Guides
                  <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </h3>
                <p class="text-sm text-muted-foreground">
                  Browse our complete library of Texas lobbying resources.
                </p>
              </a>
            </div>
          </div>

          {/* Industry Insights - Always show */}
          {lobbyist.subject_areas && lobbyist.subject_areas.length > 0 && (
            <div class="mb-8">
              <h2 class="text-2xl font-bold mb-4">Industry Insights</h2>
              <div class="rounded-lg border border-border bg-white p-6">
                <div class="grid sm:grid-cols-3 gap-6">
                  <div class="text-center">
                    <div class="text-3xl font-bold text-texas-blue-500 mb-2">
                      {lobbyist.subject_areas.length}
                    </div>
                    <div class="text-sm text-muted-foreground">
                      Practice {lobbyist.subject_areas.length === 1 ? 'Area' : 'Areas'}
                    </div>
                  </div>

                  <div class="text-center">
                    <div class="text-3xl font-bold text-texas-blue-500 mb-2">
                      {lobbyist.cities.length}
                    </div>
                    <div class="text-sm text-muted-foreground">
                      {lobbyist.cities.length === 1 ? 'City' : 'Cities'} Served
                    </div>
                  </div>

                  <div class="text-center">
                    <div class="text-3xl font-bold text-texas-blue-500 mb-2">
                      {clients.length}
                    </div>
                    <div class="text-sm text-muted-foreground">
                      {clients.length === 1 ? 'Client' : 'Clients'} Listed
                    </div>
                  </div>
                </div>
              </div>
            </div>
          )}

          {/* Professional Highlights - Always show */}
          <div class="mb-8">
            <h2 class="text-2xl font-bold mb-4">Professional Highlights</h2>
            <div class="space-y-4">
              <div class="rounded-lg border border-border bg-white p-5">
                <div class="flex items-start gap-4">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100">
                    <Briefcase className="h-5 w-5 text-texas-blue-600" />
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold mb-1">Registration Status</h3>
                    <p class="text-sm text-muted-foreground">
                      {lobbyist.is_active ? 'Active Texas Lobbyist' : 'Inactive'}
                    </p>
                  </div>
                </div>
              </div>

              <div class="rounded-lg border border-border bg-white p-5">
                <div class="flex items-start gap-4">
                  <div class="flex h-10 w-10 items-center justify-center rounded-full bg-texas-blue-100">
                    <MapPin className="h-5 w-5 text-texas-blue-600" />
                  </div>
                  <div class="flex-1">
                    <h3 class="font-semibold mb-1">Primary Location</h3>
                    <p class="text-sm text-muted-foreground">
                      {lobbyist.cities && lobbyist.cities.length > 0 ? lobbyist.cities[0] : 'Texas'}
                    </p>
                  </div>
                </div>
              </div>

              {lobbyist.subscription_tier !== 'free' && (
                <div class="rounded-lg border border-border bg-white p-5">
                  <div class="flex items-start gap-4">
