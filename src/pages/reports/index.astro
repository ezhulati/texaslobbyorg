---
import Layout from '@/components/astro/Layout.astro';

const reports = [
  {
    title: 'The State of Texas Lobbying: 2025 Annual Report',
    description: 'Comprehensive data-driven analysis of lobbying activity, influence, and trends across Texas. Based on 1,600+ active lobbyists.',
    href: '/reports/2025',
    publishedDate: '2025-01-06',
    type: 'Annual Report',
    featured: true,
    stats: [
      { label: 'Active Lobbyists', value: '1,600+' },
      { label: 'Total Clients', value: '3,000+' },
      { label: 'Cities Analyzed', value: '50+' },
    ]
  },
];

const pageTitle = 'Texas Lobbying Reports | Data-Driven Research & Analysis';
const pageDescription = 'In-depth reports on Texas lobbying activity, spending trends, industry analysis, and political influence. Original research and data analysis.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero -->
  <section class="bg-gradient-to-b from-texas-blue-500/10 to-background py-16 border-b border-border">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center rounded-full bg-texas-blue-500/10 px-4 py-2 text-sm font-medium text-texas-blue-700 mb-6">
          Research & Data
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-6">
          Texas Lobbying Reports
        </h1>
        <p class="text-xl text-muted-foreground">
          Original research, data analysis, and comprehensive reports on lobbying activity, spending trends, and political influence in Texas
        </p>
      </div>
    </div>
  </section>

  <!-- Reports -->
  <section class="py-16">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="grid gap-8">
          {reports.map((report) => (
            <article class={`bg-white rounded-lg border border-border overflow-hidden hover:shadow-lg transition-shadow ${
              report.featured ? 'md:grid md:grid-cols-5' : ''
            }`}>
              {report.featured && (
                <div class="md:col-span-2 bg-gradient-to-br from-texas-blue-500 to-texas-blue-600 p-12 flex flex-col items-center justify-center text-white">
                  <div class="inline-flex items-center rounded-full bg-white/20 px-4 py-2 text-sm font-medium mb-6">
                    Featured Report
                  </div>
                  <svg class="w-32 h-32 text-white/30 mb-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                  </svg>
                  {report.stats && (
                    <div class="grid grid-cols-3 gap-4 w-full">
                      {report.stats.map((stat) => (
                        <div class="text-center">
                          <div class="text-2xl font-bold text-white mb-1">{stat.value}</div>
                          <div class="text-xs text-blue-100">{stat.label}</div>
                        </div>
                      ))}
                    </div>
                  )}
                </div>
              )}

              <div class={report.featured ? 'md:col-span-3 p-8' : 'p-8'}>
                <div class="flex items-center gap-3 mb-4">
                  <span class="inline-flex items-center rounded-full bg-texas-blue-500/10 px-3 py-1 text-xs font-medium text-texas-blue-700">
                    {report.type}
                  </span>
                  <span class="text-sm text-muted-foreground">
                    {new Date(report.publishedDate).toLocaleDateString('en-US', {
                      month: 'long',
                      year: 'numeric'
                    })}
                  </span>
                </div>

                <h2 class="text-2xl md:text-3xl font-bold mb-4 hover:text-texas-blue-500 transition-colors">
                  <a href={report.href}>
                    {report.title}
                  </a>
                </h2>

                <p class="text-muted-foreground mb-6">
                  {report.description}
                </p>

                <div class="flex items-center gap-4">
                  <a
                    href={report.href}
                    class="inline-flex items-center rounded-md bg-texas-blue-500 px-6 py-3 text-base font-medium text-white hover:bg-texas-blue-600 transition-colors"
                  >
                    View Report
                    <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </a>
                  <button
                    class="inline-flex items-center rounded-md border border-border px-6 py-3 text-base font-medium hover:bg-muted transition-colors"
                  >
                    <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-4l-4 4m0 0l-4-4m4 4V4" />
                    </svg>
                    Download PDF
                  </button>
                </div>
              </div>
            </article>
          ))}
        </div>

        <!-- Coming Soon -->
        <div class="mt-12 bg-muted/30 rounded-lg border-2 border-dashed border-border p-12 text-center">
          <div class="inline-flex items-center justify-center w-16 h-16 rounded-full bg-muted mb-4">
            <svg class="w-8 h-8 text-muted-foreground" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="text-xl font-bold mb-2">More Reports Coming Soon</h3>
          <p class="text-muted-foreground mb-6 max-w-2xl mx-auto">
            We're working on quarterly activity reports, industry-specific analysis, and rate surveys.
            Subscribe to our newsletter to be notified when new reports are published.
          </p>
          <div class="flex flex-col sm:flex-row gap-3 max-w-md mx-auto">
            <input
              type="email"
              placeholder="Enter your email"
              class="flex-1 px-4 py-3 rounded-md border border-border"
            />
            <button class="px-6 py-3 bg-texas-blue-500 text-white font-medium rounded-md hover:bg-texas-blue-600 transition-colors">
              Subscribe
            </button>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Methodology -->
  <section class="py-16 bg-muted/30 border-t border-border">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <h2 class="text-3xl font-bold mb-6">Our Research Methodology</h2>
        <div class="prose prose-lg max-w-none">
          <p class="text-muted-foreground">
            All TexasLobby.org reports are based on comprehensive data from the Texas Ethics Commission's public
            lobbying disclosure records, supplemented by lobbyist-submitted profile information and public legislative records.
          </p>

          <div class="grid md:grid-cols-2 gap-6 mt-8">
            <div class="bg-white rounded-lg border border-border p-6">
              <h3 class="text-lg font-semibold mb-3">Data Sources</h3>
              <ul class="space-y-2 text-sm text-muted-foreground">
                <li>• Texas Ethics Commission lobbying registrations</li>
                <li>• Client representation disclosures</li>
                <li>• Legislative voting records</li>
                <li>• Self-reported lobbyist profiles</li>
              </ul>
            </div>

            <div class="bg-white rounded-lg border border-border p-6">
              <h3 class="text-lg font-semibold mb-3">Quality Standards</h3>
              <ul class="space-y-2 text-sm text-muted-foreground">
                <li>• Fact-checked against official records</li>
                <li>• Peer-reviewed by industry experts</li>
                <li>• Updated with latest available data</li>
                <li>• Transparent methodology documentation</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="py-16 bg-gradient-to-br from-texas-blue-500 to-texas-blue-600 text-white">
    <div class="container">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-4">Use These Insights to Your Advantage</h2>
        <p class="text-xl text-blue-50 mb-8">
          Find the right Texas lobbyist for your needs based on our research and data
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a
            href="/lobbyists"
            class="inline-flex items-center justify-center rounded-md bg-white px-8 py-4 text-lg font-medium text-texas-blue-600 hover:bg-gray-100 transition-colors"
          >
            Browse Lobbyists
          </a>
          <a
            href="/guides"
            class="inline-flex items-center justify-center rounded-md border-2 border-white px-8 py-4 text-lg font-medium text-white hover:bg-white/10 transition-colors"
          >
            Read Our Guides
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
