                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </div>

                  <div class="mt-4 pt-4 border-t border-border">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-2xl font-bold text-texas-blue-500">{count}</div>
                        <div class="text-xs text-muted-foreground">Lobbyists</div>
                      </div>
                      <div class="text-sm font-medium text-texas-blue-500 group-hover:underline">
                        View Experts →
                      </div>
                    </div>
                  </div>
                </a>
              );
            })
          }
        </div>
      </div>

      <!-- Info Sections -->
      <div class="grid md:grid-cols-2 gap-8 mt-16">
        <!-- Why Expertise Matters -->
        <div class="rounded-lg border border-border bg-white p-8">
          <h2 class="text-2xl font-bold mb-4">Why Expertise Matters</h2>
          <ul class="space-y-3">
            <li class="flex gap-3">
              <svg
                class="h-6 w-6 text-texas-blue-500 flex-shrink-0"
