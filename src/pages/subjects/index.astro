---
import Layout from '@/components/astro/Layout.astro';
import { supabase } from '@/lib/supabase';

// Get all subject areas
const { data: subjects } = await supabase
  .from('subject_areas')
  .select('*')
  .order('name');

// Get all lobbyists to count by subject
const { data: lobbyists } = await supabase
  .from('lobbyists')
  .select('subject_areas')
  .eq('is_active', true);

// Count lobbyists per subject
const subjectCounts: Record<string, number> = {};
lobbyists?.forEach((lobbyist) => {
  lobbyist.subject_areas?.forEach((subject: string) => {
    subjectCounts[subject] = (subjectCounts[subject] || 0) + 1;
  });
});

// Define featured/high-demand expertise areas (by slug)
const featuredSlugs = [
  'energy',
  'healthcare',
  'education',
  'real-estate',
  'transportation',
  'technology',
  'business-and-commerce',
  'agriculture',
  'environmental',
  'financial-institutions',
  'insurance',
  'local-government'
];

// Separate featured and other subjects
const featuredSubjects = subjects?.filter(s => featuredSlugs.includes(s.slug)) || [];
const otherSubjects = subjects?.filter(s => !featuredSlugs.includes(s.slug)) || [];

// Sort featured subjects by the order in featuredSlugs
featuredSubjects.sort((a, b) => {
  const indexA = featuredSlugs.indexOf(a.slug);
  const indexB = featuredSlugs.indexOf(b.slug);
  return indexA - indexB;
});

// SEO-optimized title (55-60 chars) and description (155-160 chars)
const pageTitle = 'Browse by Expertise | Find Texas Lobbyists by Subject';
const pageDescription = 'Find Texas lobbyists by areas of expertise. Browse specialists in healthcare, energy, education, real estate, technology. Compare profiles, connect with experts.';
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Header -->
  <section class="bg-texas-blue-500 text-white py-16">
    <div class="container">
      <div class="max-w-4xl">
        <h1 class="text-4xl md:text-5xl font-bold mb-4">
          Find Lobbyists by Expertise
        </h1>
        <p class="text-xl text-white/90">
          Browse our directory of experienced Texas lobbyists organized by their areas of
          specialization and industry expertise
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="py-12">
    <div class="container">
      <!-- Featured Expertise Areas -->
      <div class="mb-16">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold">Most Sought-After Expertise</h2>
          <span class="text-sm text-muted-foreground">Top specializations in Texas</span>
        </div>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            featuredSubjects.map((subject) => {
              const count = subjectCounts[subject.name] || 0;
              return (
                <a
                  href={`/subjects/${subject.slug}`}
                  class="group rounded-lg border-2 border-texas-blue-500/20 bg-gradient-to-br from-white to-texas-blue-500/5 p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
                >
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                      <h3 class="text-xl font-bold group-hover:text-texas-blue-500 transition-colors mb-2">
                        {subject.name}
                      </h3>
                      <p class="text-sm text-muted-foreground line-clamp-2">
                        {subject.description}
                      </p>
                    </div>
                    <svg
                      class="h-6 w-6 text-muted-foreground group-hover:text-texas-blue-500 transition-colors flex-shrink-0 ml-3"
                      fill="none"
                      stroke="currentColor"
                      viewBox="0 0 24 24"
                    >
                      <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M9 5l7 7-7 7"
                      />
                    </svg>
                  </div>

                  <div class="mt-4 pt-4 border-t border-texas-blue-500/20">
                    <div class="flex items-center justify-between">
                      <div>
                        <div class="text-2xl font-bold text-texas-blue-500">{count}</div>
                        <div class="text-xs text-muted-foreground">Lobbyists</div>
                      </div>
                      <div class="text-sm font-medium text-texas-blue-500 group-hover:underline">
                        View Experts →
                      </div>
                    </div>
                  </div>
                </a>
              );
            })
          }
        </div>
      </div>

      <!-- All Expertise Areas -->
      <div class="mb-12">
        <h2 class="text-2xl font-bold mb-6">All Expertise Areas</h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {
            otherSubjects.map((subject) => {
              const count = subjectCounts[subject.name] || 0;
              return (
                <a
                  href={`/subjects/${subject.slug}`}
                  class="group rounded-lg border border-border bg-white p-6 hover:border-texas-blue-500 hover:shadow-lg transition-all"
                >
                  <div class="flex items-start justify-between mb-3">
                    <div class="flex-1">
                      <h3 class="text-xl font-bold group-hover:text-texas-blue-500 transition-colors mb-2">
                        {subject.name}
                      </h3>
                      <p class="text-sm text-muted-foreground line-clamp-2">
