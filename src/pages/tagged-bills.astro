---
/**
 * My Tagged Bills Page
 *
 * Lobbyist dashboard showing bills they're tracking/working on with
 * their position and notes. Allows quick editing and management.
 */

import Layout from '@/components/astro/Layout.astro';
import { getLobbyistTaggedBills } from '@/lib/api/bills';
import { createServerClient } from '@/lib/supabase';

// Require authentication
const user = Astro.locals.user;
if (!user) {
  const returnUrl = `${Astro.url.pathname}${Astro.url.search}`;
  return Astro.redirect(`/login?redirect=${returnUrl}`);
}

// Only lobbyists can access this page
if (user.role !== 'lobbyist') {
  return Astro.redirect('/bills?error=lobbyist-only');
}

// Resolve lobbyist id (claimed or linked)
let lobbyistId: string | null = null;
try {
  const server = createServerClient();
  const { data } = await server
    .from('lobbyists')
    .select('id')
    .or(`user_id.eq.${user.id},claimed_by.eq.${user.id}`)
    .limit(1)
    .maybeSingle();
  lobbyistId = data?.id || null;
} catch {}

if (!lobbyistId) {
  return Astro.redirect('/claim-profile');
}

// Fetch tagged bills for this lobbyist
let taggedBills: any[] = [];
let error: string | null = null;

try {
  taggedBills = await getLobbyistTaggedBills(lobbyistId);
} catch (err) {
  console.error('Failed to fetch tagged bills:', err);
  error = err instanceof Error ? err.message : 'Failed to load tagged bills';
}

// Calculate stats
const stats = {
  total: taggedBills.length,
  supporting: taggedBills.filter((t) => t.tag_type === 'supporting').length,
  monitoring: taggedBills.filter((t) => t.tag_type === 'monitoring').length,
  opposing: taggedBills.filter((t) => t.tag_type === 'opposing').length,
  public: taggedBills.filter((t) => t.is_public).length,
};

const tagTypeConfig = {
  supporting: {
    label: 'Supporting',
    color: 'green',
    bgClass: 'bg-green-50',
    textClass: 'text-green-700',
    borderClass: 'border-green-200',
    icon: 'üëç',
  },
  monitoring: {
    label: 'Monitoring',
    color: 'blue',
    bgClass: 'bg-blue-50',
    textClass: 'text-blue-700',
    borderClass: 'border-blue-200',
    icon: 'üëÅÔ∏è',
  },
  opposing: {
    label: 'Opposing',
    color: 'red',
    bgClass: 'bg-red-50',
    textClass: 'text-red-700',
    borderClass: 'border-red-200',
    icon: 'üëé',
  },
};
---

<Layout title="My Tagged Bills" description="Manage bills you're tracking and working on">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {/* Header */}
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-gray-900 mb-2">
        My Tagged Bills
      </h1>
      <p class="text-lg text-gray-600">
        Manage the bills you're tracking and working on. Tag bills to show your expertise to potential clients.
      </p>
    </div>

    {/* Error Message */}
    {error && (
      <div class="mb-6 bg-red-50 border border-red-200 rounded-lg p-4">
        <p class="text-red-800">{error}</p>
      </div>
    )}

    {/* Stats Cards */}
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-3xl font-bold text-blue-600 mb-1">
          {stats.total}
        </div>
        <div class="text-sm text-gray-600">Total Tagged</div>
      </div>

      <div class="bg-green-50 border border-green-200 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-1">
          <span class="text-2xl">üëç</span>
          <span class="text-3xl font-bold text-green-700">{stats.supporting}</span>
        </div>
        <div class="text-sm text-gray-700">Supporting</div>
      </div>

      <div class="bg-blue-50 border border-blue-200 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-1">
          <span class="text-2xl">üëÅÔ∏è</span>
          <span class="text-3xl font-bold text-blue-700">{stats.monitoring}</span>
        </div>
        <div class="text-sm text-gray-700">Monitoring</div>
      </div>

      <div class="bg-red-50 border border-red-200 rounded-lg p-6">
        <div class="flex items-center gap-2 mb-1">
          <span class="text-2xl">üëé</span>
          <span class="text-3xl font-bold text-red-700">{stats.opposing}</span>
        </div>
        <div class="text-sm text-gray-700">Opposing</div>
      </div>

      <div class="bg-white border border-gray-200 rounded-lg p-6">
        <div class="text-3xl font-bold text-gray-900 mb-1">
          {stats.public}
        </div>
        <div class="text-sm text-gray-600">Public Tags</div>
      </div>
    </div>

    {/* Tagged Bills List */}
    {taggedBills.length === 0 ? (
      <div class="bg-white border border-gray-200 rounded-lg p-12 text-center">
        <div class="max-w-md mx-auto">
          <svg
            class="w-16 h-16 mx-auto mb-4 text-gray-400"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            No Tagged Bills Yet
          </h3>
          <p class="text-gray-600 mb-6">
            Start tagging bills to show your expertise and connect with potential clients.
            Browse bills and click "Tag This Bill" to get started.
          </p>
          <a
            href="/bills"
            class="inline-flex items-center gap-2 px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors"
          >
            Browse Bills
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    ) : (
      <div class="space-y-4">
        {taggedBills.map((tag) => {
          const bill = tag.bill;
          const config = tagTypeConfig[tag.tag_type as keyof typeof tagTypeConfig] || tagTypeConfig.monitoring;

          return (
            <div class="bg-white border border-gray-200 rounded-lg p-6 hover:shadow-md transition-shadow">
              <div class="flex items-start justify-between gap-4 mb-3">
                <div class="flex-1 min-w-0">
                  <div class="flex items-center gap-3 mb-2">
                    <a
                      href={`/bills/${bill.slug}`}
                      class="text-lg font-semibold text-blue-600 hover:text-blue-700"
                    >
                      {bill.bill_number}
                    </a>
                    <span
                      class={`inline-flex items-center gap-1.5 px-3 py-1 rounded-full text-sm font-medium ${config.bgClass} ${config.textClass} border ${config.borderClass}`}
                    >
                      <span>{config.icon}</span>
                      {config.label}
                    </span>
                    {tag.is_public ? (
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded bg-blue-100 text-blue-700 text-xs font-medium">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                        </svg>
                        Public
                      </span>
                    ) : (
                      <span class="inline-flex items-center gap-1 px-2 py-0.5 rounded bg-gray-100 text-gray-700 text-xs font-medium">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                        </svg>
                        Private
                      </span>
                    )}
                  </div>
                  <h3 class="text-base text-gray-900 mb-2 leading-snug">
                    {bill.title}
                  </h3>
                </div>
              </div>

                  {/* Notes */}
                  {(tag.notes || tag.context_notes) && (
                    <div class="mb-4 p-3 bg-gray-50 rounded-md border border-gray-200">
                      <div class="text-xs text-gray-500 mb-1 font-medium">My Notes</div>
                      <p class="text-sm text-gray-700 leading-relaxed">{tag.notes || tag.context_notes}</p>
                    </div>
                  )}

              {/* Bill Details */}
              <div class="flex flex-wrap items-center gap-4 text-sm text-gray-600 mb-4">
                {bill.current_status && (
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    {bill.current_status}
                  </span>
                )}
                {bill.chamber && (
                  <span class="inline-flex items-center gap-1">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                    </svg>
                    {bill.chamber}
                  </span>
                )}
                {bill.subject_areas && bill.subject_areas.length > 0 && (
                  <div class="flex flex-wrap gap-1">
                    {bill.subject_areas.slice(0, 3).map((subject: string) => (
                      <span class="inline-flex items-center px-2 py-0.5 rounded bg-gray-100 text-gray-700 text-xs">
                        {subject}
                      </span>
                    ))}
                  </div>
                )}
              </div>

              {/* Actions */}
              <div class="flex flex-wrap gap-2 pt-3 border-t border-gray-200">
                <a
                  href={`/bills/${bill.slug}`}
                  class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-blue-600 bg-blue-50 border border-blue-200 rounded-md hover:bg-blue-100 transition-colors"
                >
                  View Bill
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                  </svg>
                </a>
                <button
                  onclick={`window.location.href='/bills/${bill.slug}#tag'`}
                  class="inline-flex items-center gap-1.5 px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 rounded-md hover:bg-gray-50 transition-colors"
                >
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                  </svg>
                  Edit Tag
                </button>
              </div>
            </div>
          );
        })}
      </div>
    )}

    {/* Help Section */}
    <div class="mt-12 bg-blue-50 border border-blue-200 rounded-lg p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-2">
        Why Tag Bills?
      </h3>
      <ul class="space-y-2 text-gray-700">
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span><strong>Show Your Expertise:</strong> Public tags display on bill pages, connecting you with potential clients.</span>
        </li>
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span><strong>Track Your Work:</strong> Keep personal notes and organize bills by position.</span>
        </li>
        <li class="flex items-start gap-2">
          <svg class="w-5 h-5 text-blue-600 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span><strong>Build Credibility:</strong> Demonstrate your active involvement in Texas legislation.</span>
        </li>
      </ul>
    </div>
  </div>
</Layout>
