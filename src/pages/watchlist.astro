---
/**
 * Watchlist Page
 *
 * Displays user's saved bills with notification preferences.
 */

import Layout from '@/components/astro/Layout.astro';
import BillCard from '@/components/astro/bills/BillCard.astro';
import { getUserWatchlist } from '@/lib/api/bills';

// For now, use a mock user ID
// TODO: Replace with real auth when Supabase Auth is implemented
const mockUserId = 'mock-user-1731213600000'; // This will be from localStorage in client-side

// Fetch watchlist (will be empty initially, populated via client-side)
let bills = [];
try {
  bills = await getUserWatchlist(mockUserId);
} catch (error) {
  console.error('Failed to fetch watchlist:', error);
}

const pageTitle = 'My Watchlist';
const pageDescription =
  'Track Texas legislative bills that impact your business. Get notified when bills change status.';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {/* Page Header */}
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-3">My Watchlist</h1>
      <p class="text-lg text-gray-600">
        Bills you're tracking will appear here. Get notified when they change
        status.
      </p>
    </div>

    {/* Watchlist Stats */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div
        class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Total Watching</p>
            <p class="text-3xl font-bold text-gray-900" id="total-watching">
              {bills.length}
            </p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
            </svg>
          </div>
        </div>
      </div>

      <div
        class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Active Bills</p>
            <p class="text-3xl font-bold text-gray-900" id="active-bills">
              {bills.filter((b: any) => b.status !== 'signed' && b.status !== 'vetoed').length}
            </p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
      </div>

      <div
        class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Notifications</p>
            <p class="text-3xl font-bold text-gray-900" id="notifications-enabled">
              {bills.filter((b: any) => b.notifications_enabled).length}
            </p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    {/* Bills List */}
    <div id="watchlist-container">
      {bills.length > 0 ? (
        <div class="space-y-4">
          {bills.map((bill: any) => (
            <div class="relative">
              <BillCard bill={bill} showSummary={true} />
              <button
                class="absolute top-4 right-4 p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors"
                data-bill-id={bill.bill_id}
                data-action="remove"
                title="Remove from watchlist"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg
            class="mx-auto h-16 w-16 text-gray-300 mb-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Your watchlist is empty
          </h3>
          <p class="text-gray-600 mb-6">
            Start tracking bills to stay informed about legislation that impacts
            you.
          </p>
          <a
            href="/bills"
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors"
          >
            Browse Bills
            <svg
              class="ml-2 w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</Layout>

<script>
  import { getOrCreateMockUser } from '@/lib/auth-mock';

  // Handle remove from watchlist
  document.addEventListener('click', async (e) => {
    const button = (e.target as HTMLElement).closest(
      '[data-action="remove"]'
    );
    if (!button) return;

    const billId = (button as HTMLElement).dataset.billId;
    if (!billId) return;

    if (!confirm('Remove this bill from your watchlist?')) return;

    try {
      const user = getOrCreateMockUser();
      const response = await fetch(
        `/api/watchlist/${user.id}/bills/${billId}`,
        {
          method: 'DELETE',
        }
      );

      if (response.ok) {
        // Remove the bill card from the page
        const card = button.closest('.relative');
        if (card) {
          card.remove();

          // Update stats
          const totalElement = document.getElementById('total-watching');
          if (totalElement) {
            const current = parseInt(totalElement.textContent || '0');
            totalElement.textContent = (current - 1).toString();
          }

          // Check if watchlist is now empty
          const container = document.getElementById('watchlist-container');
          const remainingCards = container?.querySelectorAll('.relative');
          if (remainingCards && remainingCards.length === 0) {
            // Show empty state
            location.reload();
          }
        }
      } else {
        alert('Failed to remove bill from watchlist');
      }
    } catch (error) {
      console.error('Error removing from watchlist:', error);
      alert('Failed to remove bill from watchlist');
    }
  });
</script>
