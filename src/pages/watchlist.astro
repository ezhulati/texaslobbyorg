---
/**
 * Watchlist Page
 *
 * Displays user's saved bills with notification preferences.
 */

import Layout from '@/components/astro/Layout.astro';
import BillCard from '@/components/astro/bills/BillCard.astro';
import { getUserWatchlist } from '@/lib/api/bills';

// Require authentication
const user = Astro.locals.user;
if (!user) {
  const returnUrl = `${Astro.url.pathname}${Astro.url.search}`;
  return Astro.redirect(`/login?redirect=${returnUrl}`);
}

// Fetch watchlist for current user
let bills = [];
try {
  bills = await getUserWatchlist(user.id);
} catch (error) {
  console.error('Failed to fetch watchlist:', error);
}

const pageTitle = 'My Watchlist';
const pageDescription =
  'Track Texas legislative bills that impact your business. Get notified when bills change status.';
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {/* Page Header */}
    <div class="mb-8">
      <h1 class="text-4xl font-bold text-gray-900 mb-3">My Watchlist</h1>
      <p class="text-lg text-gray-600">
        Bills you're tracking will appear here. Get notified when they change
        status.
      </p>
    </div>

    {/* Watchlist Stats */}
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-8">
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Total Watching</p>
            <p class="text-3xl font-bold text-gray-900" id="total-watching">
              {bills.length}
            </p>
          </div>
          <div class="w-12 h-12 bg-blue-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z" />
            </svg>
          </div>
        </div>
      </div>

      <div
        class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Active Bills</p>
            <p class="text-3xl font-bold text-gray-900" id="active-bills">
              {bills.filter((b: any) => b.current_status !== 'signed' && b.current_status !== 'vetoed').length}
            </p>
          </div>
          <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
            </svg>
          </div>
        </div>
      </div>

      <div
        class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm"
      >
        <div class="flex items-center justify-between">
          <div>
            <p class="text-sm text-gray-600 mb-1">Notifications</p>
            <p class="text-3xl font-bold text-gray-900" id="notifications-enabled">
              {bills.filter((b: any) => b.notifications_enabled).length}
            </p>
          </div>
          <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
            <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
          </div>
        </div>
      </div>
    </div>

    {/* Bills List */}
    <div id="watchlist-container" data-user-id={user.id}>
      {bills.length > 0 ? (
        <div class="space-y-4">
          {bills.map((bill: any) => (
            <div class="relative">
              <div class="bg-white border border-gray-200 rounded-lg p-6">
                <div class="flex items-start justify-between mb-2">
                  <a href={`/bills/${bill.slug}`} class="text-lg font-semibold text-blue-600 hover:text-blue-700">
                    {bill.bill_number}
                  </a>
                  <div class="flex items-center gap-2">
                    <label class="flex items-center gap-2 text-sm">
                      <input type="checkbox" class="w-4 h-4" data-action="toggle-notifications" data-bill-id={bill.bill_id} checked={bill.notifications_enabled} />
                      Notifications
                    </label>
                    <button
                      class="px-2 py-1 text-xs border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50"
                      data-action="open-prefs"
                      data-bill-id={bill.bill_id}
                      title="Notification Preferences"
                    >
                      Preferences
                    </button>
                  </div>
                </div>
                <p class="text-sm text-gray-700 mb-2">{bill.title}</p>
                {bill.summary && (
                  <p class="text-sm text-gray-600">{bill.summary}</p>
                )}
                <div class="mt-3 text-xs text-gray-600">
                  Status: {bill.current_status}{bill.status_date && ` • ${bill.status_date}`}
                </div>
              </div>
              <button
                class="absolute top-4 right-4 p-2 text-gray-400 hover:text-red-600 hover:bg-red-50 rounded-md transition-colors"
                data-bill-id={bill.bill_id}
                data-action="remove"
                title="Remove from watchlist"
              >
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <svg
            class="mx-auto h-16 w-16 text-gray-300 mb-4"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"
            />
          </svg>
          <h3 class="text-xl font-semibold text-gray-900 mb-2">
            Your watchlist is empty
          </h3>
          <p class="text-gray-600 mb-6">
            Start tracking bills to stay informed about legislation that impacts
            you.
          </p>
          <a
            href="/bills"
            class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 transition-colors"
          >
            Browse Bills
            <svg
              class="ml-2 w-4 h-4"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M9 5l7 7-7 7"
              />
            </svg>
          </a>
        </div>
      )}
    </div>
  </div>
</Layout>

<script>
  // Handle remove from watchlist (uses server-rendered user id)
  document.addEventListener('click', async (e) => {
    const button = (e.target as HTMLElement).closest('[data-action="remove"]');
    if (!button) return;

    const billId = (button as HTMLElement).dataset.billId;
    if (!billId) return;

    if (!confirm('Remove this bill from your watchlist?')) return;

    try {
      const container = document.getElementById('watchlist-container');
      const userId = container?.getAttribute('data-user-id');
      if (!userId) {
        window.location.href = `/login?redirect=${encodeURIComponent(window.location.pathname + window.location.search)}`;
        return;
      }

      const response = await fetch(`/api/watchlist/${userId}/bills/${billId}`, { method: 'DELETE' });
      if (response.ok) {
        const card = button.closest('.relative');
        if (card) {
          card.remove();
          const totalElement = document.getElementById('total-watching');
          if (totalElement) {
            const current = parseInt(totalElement.textContent || '0');
            totalElement.textContent = (current - 1).toString();
          }
          const remainingCards = document.getElementById('watchlist-container')?.querySelectorAll('.relative');
          if (remainingCards && remainingCards.length === 0) location.reload();
        }
      } else {
        alert('Failed to remove bill from watchlist');
      }
    } catch (error) {
      console.error('Error removing from watchlist:', error);
      alert('Failed to remove bill from watchlist');
    }
  });

  // Handle notifications toggle
  document.addEventListener('change', async (e) => {
    const input = (e.target as HTMLInputElement).closest('[data-action="toggle-notifications"]') as HTMLInputElement | null;
    if (!input) return;
    const billId = input.dataset.billId;
    if (!billId) return;
    try {
      const container = document.getElementById('watchlist-container');
      const userId = container?.getAttribute('data-user-id');
      if (!userId) return;
      const response = await fetch(`/api/watchlist/${userId}/bills/${billId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ notifications_enabled: input.checked }),
      });
      if (!response.ok) {
        alert('Failed to update notifications');
        input.checked = !input.checked;
      }
    } catch (err) {
      console.error('Error updating notifications:', err);
      alert('Failed to update notifications');
      input.checked = !input.checked;
    }
  });

  // Preferences modal
  const modal = (() => {
    const el = document.createElement('div');
    el.id = 'prefs-modal';
    el.className = 'fixed inset-0 hidden bg-black/50 z-50 items-center justify-center p-4';
    el.innerHTML = `
      <div class="bg-white rounded-lg max-w-md w-full p-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-bold text-gray-900">Notification Preferences</h3>
          <button id="prefs-close" class="text-gray-400 hover:text-gray-600">✕</button>
        </div>
        <form id="prefs-form" class="space-y-3">
          <label class="flex items-center gap-2 text-sm">
            <input type="checkbox" name="types" value="status_change" class="w-4 h-4"/>
            Status changes
          </label>
          <label class="flex items-center gap-2 text-sm">
            <input type="checkbox" name="types" value="new_update" class="w-4 h-4"/>
            New updates
          </label>
          <label class="flex items-center gap-2 text-sm">
            <input type="checkbox" name="types" value="committee_action" class="w-4 h-4"/>
            Committee actions
          </label>
          <div class="pt-3 flex gap-2">
            <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-md text-sm">Save</button>
            <button type="button" id="prefs-cancel" class="px-4 py-2 border border-gray-300 rounded-md text-sm">Cancel</button>
          </div>
        </form>
      </div>
    `;
    document.body.appendChild(el);
    return el;
  })();

  let currentPrefsBillId: string | null = null;

  document.addEventListener('click', async (e) => {
    const btn = (e.target as HTMLElement).closest('[data-action="open-prefs"]') as HTMLElement | null;
    if (!btn) return;
    const billId = btn.getAttribute('data-bill-id');
    if (!billId) return;
    currentPrefsBillId = billId;
    // preload existing types if available (requires API fetch if not in page data)
    const form = modal.querySelector('#prefs-form') as HTMLFormElement;
    form.querySelectorAll<HTMLInputElement>('input[name="types"]').forEach(cb => cb.checked = false);
    // show
    modal.classList.remove('hidden');
    modal.classList.add('flex');
  });

  modal.addEventListener('click', (e) => {
    const target = e.target as HTMLElement;
    if (target.id === 'prefs-close' || target.id === 'prefs-cancel') {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      currentPrefsBillId = null;
    }
  });

  modal.querySelector('#prefs-form')?.addEventListener('submit', async (e) => {
    e.preventDefault();
    if (!currentPrefsBillId) return;
    const form = e.target as HTMLFormElement;
    const types = Array.from(form.querySelectorAll<HTMLInputElement>('input[name="types"]'))
      .filter(cb => cb.checked)
      .map(cb => cb.value);
    try {
      const container = document.getElementById('watchlist-container');
      const userId = container?.getAttribute('data-user-id');
      if (!userId) return;
      const response = await fetch(`/api/watchlist/${userId}/bills/${currentPrefsBillId}`, {
        method: 'PATCH',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ notifications_enabled: true, notification_types: types }),
      });
      if (!response.ok) {
        alert('Failed to save preferences');
        return;
      }
      // close modal
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      currentPrefsBillId = null;
    } catch (err) {
      console.error('Error saving preferences:', err);
      alert('Failed to save preferences');
    }
  });
</script>
